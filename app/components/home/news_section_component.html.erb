<section class="py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        Últimas <span class="text-cyan-600">Notícias</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-3xl mx-auto">
        Fique por dentro das novidades e atualizações do sistema
      </p>
    </div>

    <% if news.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        <% news.each do |article| %>
          <div class="rounded-2xl border border-slate-200/60 bg-white shadow-lg hover:shadow-xl transition overflow-hidden group">
            <div class="p-8">
              <div class="flex items-center mb-6">
                <div class="w-3 h-3 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mr-4"></div>
                <span class="text-sm font-medium text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                  <%= article.published_at&.strftime("%d/%m/%Y") %>
                </span>
              </div>
              
              <h3 class="text-2xl font-bold text-gray-900 mb-4 line-clamp-2 group-hover:text-blue-600 transition-colors">
                <%= article.title %>
              </h3>
              
              <p class="text-gray-600 mb-6 line-clamp-3 text-lg leading-relaxed">
                <%= article.excerpt %>
              </p>
              
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <span class="text-sm font-medium text-gray-500">
                  Por <%= article.author %>
                </span>
                <div class="flex items-center text-blue-600 hover:text-blue-800 transition-all duration-300 group-hover:translate-x-1">
                  <span class="text-sm font-bold">Ler mais</span>
                  <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i class="fas fa-newspaper text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">
          Nenhuma notícia disponível
        </h3>
        <p class="text-gray-500">
          As notícias aparecerão aqui quando forem publicadas
        </p>
      </div>
    <% end %>
  </div>
</section>


