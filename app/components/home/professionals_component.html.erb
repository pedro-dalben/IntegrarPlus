<script>
document.addEventListener('DOMContentLoaded', () => {
  console.log('🎠 Script inline do carrossel carregado!');

  const carousel = document.querySelector('[data-controller="carousel"]');
  if (!carousel) {
    console.log('❌ Carrossel não encontrado');
    return;
  }

  const container = carousel.querySelector('.flex.space-x-8');
  const btnNext = carousel.querySelector('[data-action="click->carousel#next"]');
  const btnPrev = carousel.querySelector('[data-action="click->carousel#previous"]');

  console.log('📦 Elementos:', { carousel, container, btnNext, btnPrev });

  let currentIndex = 0;
  const itemWidth = 320;
  const gap = 32;

  function getVisibleItems() {
    const containerWidth = carousel.querySelector('.overflow-hidden')?.offsetWidth || carousel.offsetWidth;
    return Math.max(1, Math.floor(containerWidth / (itemWidth + gap)));
  }

  function scrollToIndex() {
    const scrollAmount = currentIndex * (itemWidth + gap);
    container.style.transform = `translateX(-${scrollAmount}px)`;
    console.log('✅ Movido para índice:', currentIndex);
  }

  if (btnNext) {
    btnNext.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      console.log('➡️ NEXT CLICADO (vanilla JS)!');

      const totalItems = container.children.length;
      const visibleItems = getVisibleItems();
      const maxIndex = Math.max(0, totalItems - visibleItems);

      if (currentIndex < maxIndex) {
        currentIndex++;
        scrollToIndex();
      } else {
        console.log('⚠️ Já está no fim');
      }
    });
  }

  if (btnPrev) {
    btnPrev.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      console.log('⬅️ PREV CLICADO (vanilla JS)!');

      if (currentIndex > 0) {
        currentIndex--;
        scrollToIndex();
      } else {
        console.log('⚠️ Já está no início');
      }
    });
  }

  console.log('✅ Carrossel inicializado com vanilla JS!');
});
</script>
