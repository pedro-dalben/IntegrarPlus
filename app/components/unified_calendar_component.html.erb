<div class="unified-calendar bg-white rounded-lg shadow-lg p-6">
  <div class="calendar-header mb-6">
    <div class="flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-800">
        <%= case view_type
            when 'month'
              current_date.strftime('%B %Y')
            when 'week'
              "#{start_of_period.strftime('%d/%m')} - #{end_of_period.strftime('%d/%m/%Y')}"
            when 'day'
              current_date.strftime('%d de %B de %Y')
            end %>
      </h2>
      
      <div class="flex space-x-2">
        <button class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors" 
                data-action="click->unified-calendar#previousPeriod">
          ←
        </button>
        <button class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
                data-action="click->unified-calendar#nextPeriod">
          →
        </button>
      </div>
    </div>
  </div>

  <div class="calendar-body">
    <% if view_type == 'month' %>
      <!-- Visualização mensal -->
      <div class="grid grid-cols-7 gap-1">
        <!-- Cabeçalho dos dias da semana -->
        <% day_names.each do |day_name| %>
          <div class="text-center font-semibold text-gray-600 py-2 bg-gray-100 rounded">
            <%= day_name[0..2].upcase %>
          </div>
        <% end %>
        
        <!-- Dias do mês -->
        <% calendar_days.each do |date| %>
          <div class="min-h-[100px] border border-gray-200 rounded p-2 <%= 'bg-gray-50' if date.month != current_date.month %>">
            <div class="flex justify-between items-center mb-1">
              <span class="text-sm font-medium <%= 'text-gray-400' if date.month != current_date.month %>">
                <%= date.day %>
              </span>
              <% if date == Date.current %>
                <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
              <% end %>
            </div>
            
            <!-- Eventos do dia -->
            <div class="space-y-1">
              <% events_for_date(date).first(3).each do |event| %>
                <div class="text-xs p-1 rounded <%= event_types[event.event_type][:color] %> text-white truncate"
                     title="<%= event.title %>">
                  <%= event.title %>
                </div>
              <% end %>
              <% if events_for_date(date).count > 3 %>
                <div class="text-xs text-gray-500">
                  +<%= events_for_date(date).count - 3 %> mais
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    <% elsif view_type == 'week' %>
      <!-- Visualização semanal -->
      <div class="grid grid-cols-7 gap-1">
        <!-- Cabeçalho dos dias da semana -->
        <% day_names.each_with_index do |day_name, index| %>
          <div class="text-center font-semibold text-gray-600 py-2 bg-gray-100 rounded">
            <div><%= day_name[0..2].upcase %></div>
            <div class="text-sm"><%= calendar_days[index].day %></div>
          </div>
        <% end %>
        
        <!-- Conteúdo dos dias -->
        <% calendar_days.each do |date| %>
          <div class="min-h-[200px] border border-gray-200 rounded p-2">
            <div class="space-y-1">
              <% events_for_date(date).each do |event| %>
                <div class="text-xs p-2 rounded <%= event_types[event.event_type][:color] %> text-white">
                  <div class="font-medium"><%= event.title %></div>
                  <div class="opacity-75">
                    <%= event.start_time.strftime('%H:%M') %> - <%= event.end_time.strftime('%H:%M') %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    <% else %>
      <!-- Visualização diária -->
      <div class="space-y-4">
        <div class="text-center">
          <h3 class="text-lg font-semibold"><%= current_date.strftime('%A, %d de %B de %Y') %></h3>
        </div>
        
        <div class="space-y-2">
          <% (0..23).each do |hour| %>
            <div class="flex border-b border-gray-100 py-2">
              <div class="w-16 text-sm text-gray-500 text-right pr-2">
                <%= sprintf('%02d:00', hour) %>
              </div>
              <div class="flex-1">
                <% hour_events = events_for_date(current_date).select do |event|
                     event.start_time.hour == hour
                   end %>
                <% hour_events.each do |event| %>
                  <div class="p-2 rounded <%= event_types[event.event_type][:color] %> text-white mb-1">
                    <div class="font-medium"><%= event.title %></div>
                    <div class="text-xs opacity-75">
                      <%= event.start_time.strftime('%H:%M') %> - <%= event.end_time.strftime('%H:%M') %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Legenda -->
  <div class="mt-6 pt-4 border-t border-gray-200">
    <h4 class="text-sm font-semibold text-gray-700 mb-2">Legenda:</h4>
    <div class="flex flex-wrap gap-2">
      <% event_types.each do |type, config| %>
        <div class="flex items-center space-x-1">
          <div class="w-3 h-3 rounded <%= config[:color] %>"></div>
          <span class="text-xs text-gray-600"><%= config[:label] %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
