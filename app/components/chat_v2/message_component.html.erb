<div id="<%= dom_id(@message) %>"
     data-sender-id="<%= @message.sender_id %>"
     class="flex mb-4">
  <div class="max-w-[80%] rounded-2xl px-3 py-2 text-sm bg-gray-100 text-gray-900 dark:bg-gray-800 dark:text-gray-100">
    <div class="font-semibold text-xs mb-1 opacity-90 sender-name">
      <%= sender_name %>
    </div>
    <p class="whitespace-pre-wrap"><%= message_content %></p>
    <% if created_at %>
      <div class="mt-1 text-[10px] opacity-70">
        <%= created_at.in_time_zone.strftime('%H:%M') %>
      </div>
    <% end %>
  </div>
</div>
