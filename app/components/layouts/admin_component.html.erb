<div class="space-y-6">
  <!-- Page Header -->

  <% if actions? %>
    <div class="flex items-center justify-end">
      <div class="flex items-center space-x-3">
        <%= actions %>
      </div>
    </div>
  <% end %>

  <!-- Page Content -->
  <% if content? %>
    <%= content %>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
      <div class="p-6">
        <%= yield %>
      </div>
    </div>
  <% end %>
</div>
