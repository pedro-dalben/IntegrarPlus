<div class="relative"
     data-controller="school-search"
     data-school-search-url-value="<%= search_url %>"
     data-school-search-min-length-value="3"
     data-school-search-debounce-ms-value="300">

  <%= form.text_field field_name,
      class: "ta-form-input",
      placeholder: placeholder,
      value: value,
      data: {
        "school-search-target": "input",
        "action": "input->school-search#search"
      } %>

  <!-- Resultados da busca -->
  <div class="absolute z-50 w-full mt-1 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg shadow-lg hidden"
       data-school-search-target="results">
    <!-- Resultados serão inseridos aqui via JavaScript -->
  </div>

  <!-- Escola selecionada -->
  <div class="mt-2" data-school-search-target="selectedSchool">
    <!-- Escola selecionada será exibida aqui -->
  </div>

  <!-- Link para cadastrar nova escola -->
  <div class="mt-2 flex items-center gap-2 text-xs">
    <p class="text-gray-500">Não encontrou a escola?</p>
    <a href="<%= Rails.application.routes.url_helpers.new_admin_school_path %>"
       target="_blank"
       class="inline-flex items-center gap-1 text-brand-600 hover:text-brand-800 dark:text-brand-400 dark:hover:text-brand-300 font-medium">
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Cadastrar Nova Escola
    </a>
  </div>
</div>
