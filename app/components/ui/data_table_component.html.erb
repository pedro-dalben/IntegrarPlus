<div class="overflow-x-auto">
  <table class="<%= table_classes %>">
    <thead class="<%= thead_classes %>">
      <tr>
        <% headers&.each do |header| %>
          <%= header %>
        <% end %>
        <th class="relative px-6 py-3">
          <span class="sr-only">Ações</span>
        </th>
      </tr>
    </thead>
    <tbody class="<%= tbody_classes %>">
      <% if has_data? %>
        <% rows&.each do |row| %>
          <%= row %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="<%= (headers&.count || 0) + 1 %>" class="px-6 py-12 text-center">
            <% if empty_state? %>
              <%= empty_state %>
            <% else %>
              <div class="text-center">
                <i class="bi bi-inbox text-4xl text-gray-400 mb-4"></i>
                <p class="text-gray-500 dark:text-gray-400">Nenhum registro encontrado</p>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
