<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
  <!-- Header -->
  <div class="p-6 border-b border-gray-200 dark:border-gray-700">
    <!-- Search and Actions Row -->
    <div class="flex flex-row items-center justify-between gap-4">
      <!-- Search -->
      <% if searchable %>
        <div class="relative flex-none">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <% if search? %>
            <%= search %>
          <% else %>
            <input type="text" 
                   placeholder="Buscar..." 
                   class="h-11 w-full rounded-lg border border-gray-300 bg-white py-2.5 pr-4 pl-10 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:placeholder:text-gray-400 w-[320px]"
                   data-search-target="input"
                   data-action="input->search#search">
          <% end %>
        </div>
      <% end %>

      <!-- Actions -->
      <% if actions? %>
        <div class="flex flex-wrap items-center gap-3 ml-auto">
          <%= actions %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <% if filterable && filters? %>
    <div class="border-b border-gray-200 dark:border-gray-700 px-6 py-4">
      <%= filters %>
    </div>
  <% end %>

  <!-- Table Content -->
  <div class="custom-scrollbar overflow-y-visible">
    <%= content %>
  </div>

  <!-- Pagination -->
  <% if paginated && content_for?(:pagination) %>
    <div class="border-t border-gray-200 dark:border-gray-700 px-6 py-4">
      <%= content_for :pagination %>
    </div>
  <% end %>
</div>
