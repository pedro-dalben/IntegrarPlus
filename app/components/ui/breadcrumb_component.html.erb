<div class="flex flex-wrap items-center justify-between gap-3 pb-6">
  <div>
    <h2 class="text-xl font-semibold text-gray-800 dark:text-white/90">
      <%= current_page_title %>
    </h2>
    <% if current_page_subtitle.present? %>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        <%= current_page_subtitle %>
      </p>
    <% end %>
  </div>
  
  <nav>
    <ol class="flex items-center gap-1.5">
      <% @breadcrumbs.each_with_index do |breadcrumb, index| %>
        <li>
          <% if breadcrumb[:path] && !breadcrumb[:active] %>
            <%= link_to breadcrumb[:path], 
                class: "inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" do %>
              <%= breadcrumb[:name] %>
              <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366" stroke="" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            <% end %>
          <% else %>
            <span class="text-sm text-gray-800 dark:text-white/90">
              <%= breadcrumb[:name] %>
            </span>
          <% end %>
        </li>
      <% end %>
    </ol>
  </nav>
</div>
