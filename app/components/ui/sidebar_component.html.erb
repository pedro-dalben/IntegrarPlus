<!-- Sidebar -->
<aside
  data-controller="sidebar"
  class="sidebar fixed top-0 left-0 z-9999 flex h-screen w-[290px] flex-col overflow-y-auto border-r border-gray-200 bg-white px-5 transition-all duration-300 xl:static xl:translate-x-0 dark:border-gray-800 dark:bg-black"
>
  <!-- SIDEBAR HEADER -->
  <div class="sidebar-header flex items-center gap-2 pt-8 pb-7">
    <a href="/admin/dashboard">
      <span class="logo">
        <div class="flex items-center gap-3">
          <div class="shrink-0 size-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="shrink-0 size-5 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900 dark:text-white">Integrar+</span>
        </div>
      </span>

      <img
        class="logo-icon hidden"
        src="<%= asset_path('logo/logo-icon.svg') %>"
        alt="Logo"
      />
    </a>
  </div>
  <!-- SIDEBAR HEADER -->

  <div class="no-scrollbar flex flex-col overflow-y-auto duration-300 ease-linear">
    <!-- Sidebar Menu -->
    <nav>
      <!-- Menu Group -->
      <div>
        <h3 class="mb-4 text-xs leading-[20px] text-gray-400 uppercase">
          <span class="menu-group-title">
            MENU
          </span>

          <svg
            class="menu-group-icon mx-auto fill-current hidden"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M5.99915 10.2451C6.96564 10.2451 7.74915 11.0286 7.74915 11.9951V12.0051C7.74915 12.9716 6.96564 13.7551 5.99915 13.7551C5.03265 13.7551 4.24915 12.9716 4.24915 12.0051V11.9951C4.24915 11.0286 5.03265 10.2451 5.99915 10.2451ZM17.9991 10.2451C18.9656 10.2451 19.7491 11.0286 19.7491 11.9951V12.0051C19.7491 12.9716 18.9656 13.7551 17.9991 13.7551C17.0326 13.7551 16.2491 12.9716 16.2491 12.0051V11.9951C16.2491 11.0286 17.0326 10.2451 17.9991 10.2451ZM13.7491 11.9951C13.7491 11.0286 12.9656 10.2451 11.9991 10.2451C11.0326 10.2451 10.2491 11.0286 10.2491 11.9951V12.0051C10.2491 12.9716 11.0326 13.7551 11.9991 13.7551C12.9656 13.7551 13.7491 12.9716 13.7491 12.0051V11.9951Z"
              fill="currentColor"
            />
          </svg>
        </h3>

        <ul class="mb-6 flex flex-col gap-1">
          <% menu_items.each do |item| %>
            <!-- Menu Item -->
            <li>
              <%= link_to item[:path], 
                  class: "menu-item group relative flex items-center gap-2.5 rounded-sm px-4 py-2 font-medium text-gray-700 duration-300 ease-in-out hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-white/5 #{'menu-item-active bg-gray-100 dark:bg-white/5' if item[:active]}" do %>
                
                <!-- Ícone -->
                <span class="menu-item-icon shrink-0">
                  <%= item[:icon] %>
                </span>

                <!-- Texto do item -->
                <span class="menu-item-text">
                  <%= item[:title] %>
                </span>

                <!-- Badge (se houver) -->
                <% if item[:badge] %>
                  <span class="absolute right-10 flex items-center gap-1">
                    <span class="menu-dropdown-badge">
                      <%= item[:badge] %>
                    </span>
                  </span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Support Group -->
      <div>
        <h3 class="mb-4 text-xs leading-[20px] text-gray-400 uppercase">
          <span class="menu-group-title">
            Support
          </span>

          <svg
            class="menu-group-icon mx-auto fill-current hidden"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M5.99915 10.2451C6.96564 10.2451 7.74915 11.0286 7.74915 11.9951V12.0051C7.74915 12.9716 6.96564 13.7551 5.99915 13.7551C5.03265 13.7551 4.24915 12.9716 4.24915 12.0051V11.9951C4.24915 11.0286 5.03265 10.2451 5.99915 10.2451ZM17.9991 10.2451C18.9656 10.2451 19.7491 11.0286 19.7491 11.9951V12.0051C19.7491 12.9716 18.9656 13.7551 17.9991 13.7551C17.0326 13.7551 16.2491 12.9716 16.2491 12.0051V11.9951C16.2491 11.0286 17.0326 10.2451 17.9991 10.2451ZM13.7491 11.9951C13.7491 11.0286 12.9656 10.2451 11.9991 10.2451C11.0326 10.2451 10.2491 11.0286 10.2491 11.9951V12.0051C10.2491 12.9716 11.0326 13.7551 11.9991 13.7551C12.9656 13.7551 13.7491 12.9716 13.7491 12.0051V11.9951Z"
              fill="currentColor"
            />
          </svg>
        </h3>

        <ul class="mb-6 flex flex-col gap-1">
          <% support_items.each do |item| %>
            <!-- Menu Item -->
            <li>
              <%= link_to item[:path], 
                  class: "menu-item group relative flex items-center gap-2.5 rounded-sm px-4 py-2 font-medium text-gray-700 duration-300 ease-in-out hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-white/5 #{'menu-item-active bg-gray-100 dark:bg-white/5' if item[:active]}" do %>
                
                <!-- Ícone -->
                <span class="menu-item-icon shrink-0">
                  <%= item[:icon] %>
                </span>

                <!-- Texto do item -->
                <span class="menu-item-text">
                  <%= item[:title] %>
                </span>

                <!-- Badge (se houver) -->
                <% if item[:badge] %>
                  <span class="absolute right-10 flex items-center gap-1">
                    <span class="menu-dropdown-badge">
                      <%= item[:badge] %>
                    </span>
                  </span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <!-- Sidebar Menu -->

    <!-- Promo Box -->
    <div class="mx-auto mb-10 w-full max-w-60 rounded-2xl bg-gray-50 px-4 py-5 text-center dark:bg-white/[0.03]">
      <h3 class="mb-2 font-semibold text-gray-900 dark:text-white">
        #1 Gestão Clínica
      </h3>
      <p class="text-sm mb-4 text-gray-500 dark:text-gray-400">
        Plataforma completa para gestão de clínicas e profissionais de saúde.
      </p>
      <a
        href="#"
        class="bg-blue-600 hover:bg-blue-700 text-sm flex items-center justify-center rounded-lg p-3 font-medium text-white transition-colors"
      >
        Saiba Mais
      </a>
    </div>
    <!-- Promo Box -->
  </div>
</aside>
<!-- End Sidebar -->