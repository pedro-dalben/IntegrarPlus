<div class="professional-selector-component" data-controller="professional-selector" data-multiple="<%= multiple? %>" data-action="turbo:load->professional-selector#connect">
  <div class="mb-4">
    <label class="ta-label" for="professional-search">
      Buscar <%= multiple? ? "Profissionais" : "Profissional" %>
    </label>
    
    <% if searchable? %>
      <div class="relative">
        <select multiple data-professional-selector-target="tomselect" data-url="/admin/agendas/search_professionals"></select>
      </div>
    <% end %>
  </div>

  <div class="mt-4" data-professional-selector-target="selectedList">
    <div class="text-sm font-medium text-gray-700 mb-2">Profissionais Selecionados</div>
    <div class="border border-gray-200 rounded-lg bg-gray-50 p-3 min-h-[80px]" data-professional-selector-target="selectedProfessionalsContainer">
      <div class="text-sm text-gray-500 text-center py-2">
        Nenhum profissional selecionado
      </div>
    </div>
  </div>

  <!-- Hidden inputs para enviar os dados do formulÃ¡rio -->
  <div data-professional-selector-target="hiddenInputs">
    <% if multiple? %>
      <% selected_professionals.each do |professional| %>
        <input 
          type="hidden" 
          name="agenda[professional_ids][]" 
          value="<%= professional.id %>"
          data-professional-id="<%= professional.id %>"
          data-professional-name="<%= professional.name %>"
          data-professional-specialties="<%= professional.professional&.specialities&.pluck(:name)&.join(', ') %>"
        />
      <% end %>
    <% else %>
      <% if selected_professionals.first %>
        <input 
          type="hidden" 
          name="agenda[professional_id]" 
          value="<%= selected_professionals.first.id %>"
        />
      <% end %>
    <% end %>
  </div>

  <!-- Loading indicator -->
  <div class="loading-indicator hidden p-4 text-center" data-professional-selector-target="loadingIndicator">
    <div class="inline-flex items-center space-x-2">
      <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-brand-600"></div>
      <span class="text-sm text-gray-600">Carregando...</span>
    </div>
  </div>
</div>
