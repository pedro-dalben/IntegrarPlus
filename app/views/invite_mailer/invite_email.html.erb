    }
    
    /* Cart√£o de informa√ß√µes */
    .info-card {
      background-color: #F8FAFC;
      border: 1px solid #E2E8F0;
      border-radius: 8px;
      padding: 20px;
      margin: 24px 0;
    }
    
    .info-card h3 {
      font-size: 16px;
      font-weight: 600;
      color: #111827;
      margin-bottom: 16px;
    }
    
    .info-list {
      list-style: none;
    }
    
    .info-list li {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      color: #374151;
    }
    
    .info-list li:last-child {
      margin-bottom: 0;
    }
    
    .info-label {
