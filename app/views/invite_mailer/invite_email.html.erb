      border: 1px solid #F59E0B;
      border-radius: 8px;
      padding: 16px;
      margin: 24px 0;
      display: flex;
      align-items: flex-start;
      gap: 12px;
    }
    
    .warning-icon {
      font-size: 20px;
      flex-shrink: 0;
      margin-top: 2px;
    }
    
    .warning-content h4 {
      font-size: 16px;
      font-weight: 600;
      color: #92400E;
      margin-bottom: 8px;
    }
    
    .warning-content ul {
      list-style: none;
      color: #92400E;
    }
    
    .warning-content li {
      margin-bottom: 4px;
      font-size: 14px;
    }
    
    /* Bot√£o principal */
    .cta-section {
      text-align: center;
      margin: 32px 0;
    }
    
    .cta-button {
      display: inline-block;
      background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
      color: white;
      text-decoration: none;
      padding: 16px 32px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 16px;
      min-height: 44px;
      line-height: 1.2;
      box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);
      transition: all 0.2s ease;
    }
    
    .cta-button:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 8px -1px rgba(59, 130, 246, 0.4);
    }
    
    /* Link alternativo */
    .alternative-link {
      background-color: #F3F4F6;
      border: 1px solid #D1D5DB;
      border-radius: 6px;
      padding: 16px;
      margin: 24px 0;
      text-align: center;
    }
    
    .alternative-link p {
      color: #374151;
      font-size: 14px;
      margin-bottom: 8px;
    }
    
    .link-text {
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      font-size: 13px;
      color: #2563EB;
      word-break: break-all;
      background-color: #FFFFFF;
      padding: 8px 12px;
      border-radius: 4px;
      border: 1px solid #E5E7EB;
    }
    
    /* Rodap√© */
    .footer {
      background-color: #F9FAFB;
      border-top: 1px solid #E5E7EB;
      padding: 24px 32px;
      text-align: center;
    }
    
    .footer p {
      color: #6B7280;
      font-size: 14px;
      margin-bottom: 8px;
    }
    
    .footer p:last-child {
      margin-bottom: 0;
    }
    
    .company-info {
      margin-top: 16px;
      padding-top: 16px;
      border-top: 1px solid #E5E7EB;
    }
    
    /* Responsividade */
    @media only screen and (max-width: 600px) {
      .email-container {
        margin: 0;
        border-radius: 0;
      }
      
      .header, .content, .footer {
        padding: 20px;
      }
      
      .cta-button {
        display: block;
        width: 100%;
        text-align: center;
      }
    }
    
    /* Dark mode support */
    @media (prefers-color-scheme: dark) {
      body {
        background-color: #1F2937;
        color: #F9FAFB;
      }
      
      .email-container {
        background-color: #374151;
      }
      
      .content {
        background-color: #374151;
      }
      
      .info-card {
        background-color: #4B5563;
        border-color: #6B7280;
      }
      
      .warning-callout {
        background-color: #78350F;
        border-color: #F59E0B;
      }
      
      .warning-content h4,
      .warning-content li {
        color: #FEF3C7;
      }
      
      .alternative-link {
        background-color: #4B5563;
        border-color: #6B7280;
      }
      
      .link-text {
        background-color: #374151;
        border-color: #6B7280;
        color: #60A5FA;
      }
      
      .footer {
        background-color: #4B5563;
        border-color: #6B7280;
      }
    }
  </style>
</head>
<body>
