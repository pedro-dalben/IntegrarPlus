<%= render ::Auth::LayoutComponent.new(
  title: "Ativar Conta",
  subtitle: "Defina sua senha para acessar o sistema IntegrarPlus"
) do %>
  <div class="space-y-6">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Informações da Conta</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p><strong>Nome:</strong> <%= @invite.user.name || @invite.user.email %></p>
            <p><strong>Email:</strong> <%= @invite.user.email %></p>
          </div>
        </div>
      </div>
    </div>

    <%= form_with url: accept_invite_post_path(@invite.token), method: :post, local: true, data: { turbo: false }, class: 'space-y-4' do |form| %>
      <div>
        <%= form.label :password, 'Senha', class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            required: true,
            minlength: 6,
            placeholder: "••••••••" %>
        <p class="text-sm text-gray-500 mt-1">Mínimo 6 caracteres</p>
      </div>

      <div>
        <%= form.label :password_confirmation, 'Confirmar Senha', class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            required: true,
            minlength: 6,
            placeholder: "••••••••" %>
      </div>

      <div>
        <%= form.submit 'Ativar Conta',
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Voltar ao Login", new_user_session_path,
          class: "text-sm text-blue-600 hover:text-blue-500 transition-colors" %>
    </div>

    <div class="mt-6 pt-4 border-t border-gray-200">
      <div class="text-xs text-gray-500 text-center space-y-1">
        <p>Convite criado em <%= l(@invite.created_at, format: :short) %></p>
        <p>Expira em <%= l(@invite.expires_at, format: :short) %></p>
      </div>
    </div>
  </div>
<% end %>
