<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to new_user_session_path, class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar ao Login
    <% end %>
  <% end %>

  <div class="space-y-6">
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">Ativar Conta</h2>
      </div>
      <div class="p-4 sm:p-6">
        <div class="max-w-md mx-auto">
          <div class="text-center mb-6">
            <h3 class="text-xl font-medium text-gray-800 dark:text-white mb-2">
              Bem-vindo, <%= @invite.user.name || @invite.user.email %>!
            </h3>
            <p class="text-gray-500 dark:text-gray-400">
              Você foi convidado para acessar o sistema IntegrarPlus. Para ativar sua conta, defina uma senha abaixo.
            </p>
          </div>
          
          <%= form_with url: accept_invite_path(@invite.token), method: :post, local: true do |form| %>
            <div class="space-y-4">
              <div>
                <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Nome</label>
                <input type="text" 
                       class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" 
                       value="<%= @invite.user.name || @invite.user.email %>" 
                       readonly>
              </div>
              
              <div>
                <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Email</label>
                <input type="email" 
                       class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" 
                       value="<%= @invite.user.email %>" 
                       readonly>
              </div>
              
              <div>
                <%= form.label :password, 'Senha', class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
                <%= form.password_field :password, 
                    class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                    required: true, 
                    minlength: 6,
                    placeholder: "Digite sua senha" %>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Mínimo 6 caracteres</p>
              </div>
              
              <div>
                <%= form.label :password_confirmation, 'Confirmar Senha', class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
                <%= form.password_field :password_confirmation, 
                    class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                    required: true, 
                    minlength: 6,
                    placeholder: "Confirme sua senha" %>
              </div>
              
              <div class="pt-4">
                <%= form.submit 'Ativar Conta', 
                    class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition w-full" %>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Informações do Convite -->
        <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Convite criado</span>
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= l(@invite.created_at, format: :short) %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Expira em</span>
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= l(@invite.expires_at, format: :short) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
