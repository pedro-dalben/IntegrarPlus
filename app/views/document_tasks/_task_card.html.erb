<div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-4 hover:shadow-md transition-shadow duration-200">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <!-- Header da Tarefa -->
      <div class="flex items-center gap-3 mb-2">
        <!-- Checkbox para completar/reabrir -->
        <% if task.completed? %>
          <%= button_to complete_document_document_task_path(@document, task), 
              method: :patch,
              class: "flex-shrink-0" do %>
            <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% end %>
        <% else %>
          <%= button_to complete_document_document_task_path(@document, task), 
              method: :patch,
              class: "flex-shrink-0" do %>
            <div class="w-5 h-5 border-2 border-gray-300 rounded-full hover:border-blue-500 transition-colors duration-200"></div>
          <% end %>
        <% end %>

        <!-- Título e Prioridade -->
        <div class="flex-1">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white <%= 'line-through text-gray-500' if task.completed? %>">
            <%= task.title %>
          </h3>
        </div>

        <!-- Badge de Prioridade -->
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= task.priority_color %>">
          <%= task.priority_icon %> <%= task.priority.humanize %>
        </span>
      </div>

      <!-- Descrição -->
      <% if task.description.present? %>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 <%= 'line-through' if task.completed? %>">
          <%= task.description %>
        </p>
      <% end %>

      <!-- Metadados -->
      <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
        <!-- Criado por -->
        <div class="flex items-center gap-1">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
                          <span>Criado por <%= task.created_by.full_name %></span>
        </div>

        <!-- Responsável -->
        <% if task.assigned_to.present? %>
          <div class="flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
                            <span>Responsável: <%= task.assigned_to.full_name %></span>
          </div>
        <% end %>

        <!-- Data de criação -->
        <div class="flex items-center gap-1">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span>Criado em <%= l(task.created_at, format: :short) %></span>
        </div>

        <!-- Data de conclusão -->
        <% if task.completed? %>
          <div class="flex items-center gap-1 text-green-600">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Concluído em <%= l(task.completed_at, format: :short) %></span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Ações -->
    <div class="flex items-center gap-2 ml-4">
      <% unless task.completed? %>
        <%= link_to edit_document_document_task_path(@document, task), 
            class: "p-1 text-gray-400 hover:text-blue-600 transition-colors duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        <% end %>
      <% end %>

      <%= button_to document_document_task_path(@document, task), 
          method: :delete,
          class: "p-1 text-gray-400 hover:text-red-600 transition-colors duration-200",
          data: { confirm: 'Tem certeza que deseja excluir esta tarefa?' } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    </div>
  </div>
</div>
