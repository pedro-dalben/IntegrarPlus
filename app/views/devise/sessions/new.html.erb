<%= render ::Layouts::AuthComponent.new(title: "Acesse sua conta") do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email, "Email", class: "block text-sm mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ta-input w-full" %>
      </div>
      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, "Senha", class: "block text-sm mb-1" %>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "ta-input w-full" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <label class="inline-flex items-center gap-2 text-sm">
          <%= f.check_box :remember_me %>
          <span>Lembrar de mim</span>
        </label>
      <% end %>
      <div>
        <%= f.submit "Entrar", class: "ta-btn ta-btn-primary w-full" %>
      </div>
    </div>
  <% end %>
<% end %>


