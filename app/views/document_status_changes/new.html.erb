<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          Alterar Status do Documento
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <%= @document.title %>
        </p>
      </div>

      <%= link_to admin_document_path(@document),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar ao Documento
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
    <!-- Status Atual -->
    <div class="mb-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status Atual</h2>
      <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
        <span class="text-2xl"><%= @document.status_icon %></span>
        <div>
          <p class="text-sm font-medium text-gray-900 dark:text-white">
            <%= @document.status.humanize %>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Última alteração em <%= l(@document.updated_at, format: :long) %>
          </p>
        </div>
      </div>
    </div>

    <!-- Formulário de Alteração -->
    <% if @available_transitions.any? %>
      <%= form_with url: admin_document_document_status_changes_path(@document), local: true, class: "space-y-6" do |form| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
            Novo Status
          </label>
          <div class="grid grid-cols-1 gap-3">
            <% @available_transitions.each do |status| %>
              <div class="relative">
                <%= radio_button_tag "document[status]", status,
                    false,
                    class: "sr-only peer",
                    id: "status_#{status}",
                    required: true %>
                <%= label_tag "status_#{status}",
                    class: "flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 dark:peer-checked:border-blue-400 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600" do %>
                  <span class="text-2xl mr-4">
                    <%= Document.new(status: status).status_icon %>
                  </span>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= status.humanize %>
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                      <%= DocumentStatusLog.new(new_status: status).status_change_description %>
                    </p>
                  </div>
                  <svg class="w-5 h-5 text-blue-500 hidden peer-checked:block" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div>
          <%= label_tag "document[status_notes]", "Observações (opcional)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= text_area_tag "document[status_notes]", nil, rows: 3,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm",
              placeholder: "Descreva o motivo da alteração de status..." %>
        </div>

        <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
          <%= link_to "Cancelar", admin_document_path(@document),
              class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" %>

          <%= submit_tag "Alterar Status",
              class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          Nenhuma transição de status disponível no momento.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
          O documento está no status final ou não há transições permitidas.
        </p>
      </div>
    <% end %>
  </div>
</div>
