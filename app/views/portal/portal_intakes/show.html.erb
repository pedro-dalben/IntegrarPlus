<% content_for(:title, "Solicitação ##{@portal_intake.id} - Portal de Operadoras") %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center space-x-4">
    <%= link_to portal_portal_intakes_path,
                class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
      <svg class="size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
        Solicitação #<%= @portal_intake.id %>
      </h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        Detalhes da solicitação de entrada do beneficiário
      </p>
    </div>
    <div class="flex-1"></div>
    <div>
      <span class="<%= @portal_intake.status_badge_class %>">
        <%= @portal_intake.status_label %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Dados da Solicitação -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Dados do Beneficiário -->
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Dados do Beneficiário
          </h2>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- Campos obrigatórios para anamnese -->
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nome do Beneficiário *</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.nome %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Convênio/Plano Médico *</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.convenio %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Código da Carteirinha *</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.card_code %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Entrada</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.requested_at.strftime('%d/%m/%Y às %H:%M') %></dd>
            </div>
            
            <!-- Campos opcionais -->
            <% if @portal_intake.cpf.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">CPF</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.cpf %></dd>
              </div>
            <% end %>
            <% if @portal_intake.data_nascimento.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Nascimento</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.data_nascimento.strftime('%d/%m/%Y') %></dd>
              </div>
            <% end %>
            <% if @portal_intake.endereco.present? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Endereço</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.endereco %></dd>
              </div>
            <% end %>
            <% if @portal_intake.responsavel.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Responsável</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.responsavel %></dd>
              </div>
            <% end %>
            <% if @portal_intake.telefone_responsavel.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Telefone do Responsável</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.telefone_formatado %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- Dados do Convênio -->
      <% if @portal_intake.convenio.present? || @portal_intake.carteira_codigo.present? || @portal_intake.tipo_convenio.present? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Dados do Convênio
            </h2>
          </div>
          <div class="p-6">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <% if @portal_intake.convenio.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Convênio</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.convenio %></dd>
                </div>
              <% end %>
              <% if @portal_intake.carteira_codigo.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Código da Carteira</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.carteira_codigo %></dd>
                </div>
              <% end %>
              <% if @portal_intake.tipo_convenio.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Tipo de Convênio</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.tipo_convenio.humanize %></dd>
                </div>
              <% end %>
              <% if @portal_intake.data_encaminhamento.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Encaminhamento</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                <%= @portal_intake.data_encaminhamento&.strftime('%d/%m/%Y') || 'Não informado' %>
              </dd>
            </div>
              <% end %>
            </dl>
          </div>
        </div>
      <% end %>


      <!-- Encaminhamentos -->
      <% if @portal_intake.portal_intake_referrals.any? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Encaminhamentos (<%= @portal_intake.portal_intake_referrals.count %>)
            </h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <% @portal_intake.portal_intake_referrals.each_with_index do |referral, index| %>
                <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="text-md font-medium text-gray-900 dark:text-white">
                      Encaminhamento <%= index + 1 %>
                    </h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-800/20 dark:text-blue-400">
                      <%= referral.encaminhado_para %>
                    </span>
                  </div>
                  
                  <dl class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">CID</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.cid %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Médico</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.medico %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">CRM</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.medico_crm %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Encaminhamento</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.data_encaminhamento.strftime('%d/%m/%Y') %></dd>
                    </div>
                    <% if referral.descricao.present? %>
                      <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Descrição</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.descricao %></dd>
                      </div>
                    <% end %>
                  </dl>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Status e Agendamento -->
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Status da Solicitação
          </h2>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Status Atual</dt>
              <dd class="mt-1">
                <span class="<%= @portal_intake.status_badge_class %>">
                  <%= @portal_intake.status_label %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data Agendada</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                <%= @portal_intake.anamnesis_scheduled_on&.strftime('%d/%m/%Y') || 'Não agendada' %>
              </dd>
            </div>
          </dl>

          <% if @portal_intake.aguardando_agendamento_anamnese? %>
            <div class="mt-4 bg-yellow-50 border border-yellow-200 rounded-md p-4 dark:bg-yellow-800/10 dark:border-yellow-900">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="size-4 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-400">
                    Aguardando agendamento
                  </h3>
                  <p class="mt-1 text-sm text-yellow-700 dark:text-yellow-300">
                    Nossa equipe entrará em contato em breve para agendar a anamnese.
                  </p>
                </div>
              </div>
            </div>
          <% elsif @portal_intake.aguardando_anamnese? %>
            <div class="mt-4 bg-blue-50 border border-blue-200 rounded-md p-4 dark:bg-blue-800/10 dark:border-blue-900">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="size-4 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800 dark:text-blue-400">
                    Anamnese agendada
                  </h3>
                  <p class="mt-1 text-sm text-blue-700 dark:text-blue-300">
                    A anamnese foi agendada para <strong><%= @portal_intake.anamnesis_scheduled_on.strftime('%d/%m/%Y') %></strong>.
                    Aguarde a realização do atendimento.
                  </p>
                </div>
              </div>
            </div>
          <% elsif @portal_intake.anamnese_concluida? %>
            <div class="mt-4 bg-green-50 border border-green-200 rounded-md p-4 dark:bg-green-800/10 dark:border-green-900">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="size-4 text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-green-800 dark:text-green-400">
                    Anamnese concluída
                  </h3>
                  <p class="mt-1 text-sm text-green-700 dark:text-green-300">
                    A anamnese foi realizada com sucesso. O processo seguirá para as próximas etapas.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Linha do Tempo -->
    <div class="lg:col-span-1">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Histórico
          </h2>
        </div>
        <div class="p-6">
          <div class="flow-root">
            <ul role="list" class="-mb-8">
              <% @portal_intake.journey_events.recent.each_with_index do |event, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == @portal_intake.journey_events.recent.length - 1 %>
                      <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                    <% end %>
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full bg-blue-500 text-white flex items-center justify-center ring-8 ring-white">
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <circle cx="10" cy="10" r="4"/>
                          </svg>
                        </span>
                      </div>
                      <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                        <div>
                          <p class="text-sm text-gray-900">
                            <%= event.event_description %>
                          </p>
                          <p class="mt-0.5 text-xs text-gray-500">
                            Por: <%= event.admin_name %>
                          </p>
                        </div>
                        <div class="whitespace-nowrap text-right text-sm text-gray-500">
                          <time datetime="<%= event.created_at.iso8601 %>">
                            <%= event.formatted_date %>
                          </time>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>