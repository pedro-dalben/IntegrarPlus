<div class="unified-calendar" data-controller="unified-calendar">
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <!-- Header do Calendário -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-4">
        <h2 class="text-lg font-medium text-gray-900">Calendário de Eventos</h2>
        <% if professional.present? %>
          <span class="text-sm text-gray-500">- <%= professional.name %></span>
        <% end %>
      </div>
      
      <div class="flex items-center space-x-2">
        <button type="button"
                class="px-3 py-1 text-sm border border-gray-300 rounded-lg hover:bg-gray-50"
                data-action="click->unified-calendar#previousPeriod">
          ←
        </button>
        
        <span class="px-4 py-1 text-sm font-medium text-gray-900" data-unified-calendar-target="periodLabel">
          <%= case view_type
              when 'month' then current_date.strftime('%B %Y')
              when 'week' then "#{current_date.beginning_of_week.strftime('%d/%m')} - #{current_date.end_of_week.strftime('%d/%m/%Y')}"
              when 'day' then current_date.strftime('%d/%m/%Y')
              else current_date.strftime('%B %Y')
              end %>
        </span>
        
        <button type="button"
                class="px-3 py-1 text-sm border border-gray-300 rounded-lg hover:bg-gray-50"
                data-action="click->unified-calendar#nextPeriod">
          →
        </button>
      </div>
    </div>
    
    <!-- Controles de Visualização -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex space-x-1">
        <button type="button"
                class="px-3 py-1 text-sm border rounded-lg <%= 'bg-blue-600 text-white' if view_type == 'month' %>"
                data-action="click->unified-calendar#changeView"
                data-view="month">
          Mês
        </button>
        <button type="button"
                class="px-3 py-1 text-sm border rounded-lg <%= 'bg-blue-600 text-white' if view_type == 'week' %>"
                data-action="click->unified-calendar#changeView"
                data-view="week">
          Semana
        </button>
        <button type="button"
                class="px-3 py-1 text-sm border rounded-lg <%= 'bg-blue-600 text-white' if view_type == 'day' %>"
                data-action="click->unified-calendar#changeView"
                data-view="day">
          Dia
        </button>
      </div>
      
      <button type="button"
              class="px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700"
              data-action="click->unified-calendar#goToToday">
        Hoje
      </button>
    </div>
    
    <!-- Calendário -->
    <% if view_type == 'month' %>
      <!-- Visualização Mensal -->
      <div class="grid grid-cols-7 gap-1">
        <!-- Cabeçalho dos dias -->
        <% day_names.each do |day_name| %>
          <div class="p-2 text-center text-sm font-medium text-gray-500 bg-gray-50">
            <%= day_name[0..2] %>
          </div>
        <% end %>
        
        <!-- Dias do mês -->
        <% calendar_days.each do |date| %>
          <div class="min-h-24 p-2 border border-gray-200 <%= 'bg-gray-50' unless date.month == current_date.month %>">
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm font-medium <%= 'text-gray-400' unless date.month == current_date.month %>">
                <%= date.day %>
              </span>
              <% if date == Date.current %>
                <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
              <% end %>
            </div>
            
            <div class="space-y-1">
              <% events_for_date(date).first(3).each do |event| %>
                <div class="text-xs p-1 rounded truncate <%= event_types[event.event_type][:color] %> text-white"
                     title="<%= event.title %> - <%= event.start_time.strftime('%H:%M') %>">
                  <%= event.title %>
                </div>
              <% end %>
              
              <% if events_for_date(date).count > 3 %>
                <div class="text-xs text-gray-500">
                  +<%= events_for_date(date).count - 3 %> mais
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    <% elsif view_type == 'week' %>
      <!-- Visualização Semanal -->
      <div class="grid grid-cols-8 gap-1">
        <!-- Coluna de horários -->
        <div class="p-2 text-sm font-medium text-gray-500 bg-gray-50">
          Horário
        </div>
        
        <!-- Cabeçalho dos dias -->
        <% week_days.each do |date| %>
          <div class="p-2 text-center text-sm font-medium text-gray-500 bg-gray-50">
            <div><%= day_names[date.wday][0..2] %></div>
            <div class="text-xs"><%= date.day %></div>
          </div>
        <% end %>
        
        <!-- Grade de horários -->
        <% (8..18).each do |hour| %>
          <div class="p-2 text-xs text-gray-500 bg-gray-50 border-t border-gray-200">
            <%= "#{hour.to_s.rjust(2, '0')}:00" %>
          </div>
          
          <% week_days.each do |date| %>
            <div class="min-h-8 p-1 border-t border-gray-200 hover:bg-gray-50">
              <% events_for_date(date).select { |e| e.start_time.hour == hour }.each do |event| %>
                <div class="text-xs p-1 rounded truncate <%= event_types[event.event_type][:color] %> text-white"
                     title="<%= event.title %>">
                  <%= event.title %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
      
    <% else %>
      <!-- Visualização Diária -->
      <div class="space-y-4">
        <div class="text-center">
          <h3 class="text-lg font-medium text-gray-900">
            <%= current_date.strftime('%A, %d de %B de %Y') %>
          </h3>
        </div>
        
        <div class="space-y-2">
          <% (8..18).each do |hour| %>
            <div class="flex items-center space-x-4 p-2 border border-gray-200 rounded-lg">
              <div class="w-16 text-sm text-gray-500">
                <%= "#{hour.to_s.rjust(2, '0')}:00" %>
              </div>
              
              <div class="flex-1 space-y-1">
                <% events_for_date(current_date).select { |e| e.start_time.hour == hour }.each do |event| %>
                  <div class="flex items-center space-x-2 p-2 rounded-lg <%= event_types[event.event_type][:color] %> text-white">
                    <div class="flex-1">
                      <div class="font-medium"><%= event.title %></div>
                      <div class="text-xs opacity-90">
                        <%= event.start_time.strftime('%H:%M') %> - <%= event.end_time.strftime('%H:%M') %>
                      </div>
                    </div>
                    <div class="text-xs opacity-75">
                      <%= event_types[event.event_type][:label] %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Legenda -->
  <div class="mt-4 flex flex-wrap gap-4">
    <% event_types.each do |type, config| %>
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 rounded <%= config[:color] %>"></div>
        <span class="text-sm text-gray-600"><%= config[:label] %></span>
      </div>
    <% end %>
  </div>
</div>
