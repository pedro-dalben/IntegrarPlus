<% content_for :title, "TailAdmin Pro Demo" %>

<div class="p-4 md:p-6 2xl:p-10">
  <div class="mx-auto max-w-7xl">
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <h2 class="text-title-md2 font-bold text-black dark:text-white">
        TailAdmin Pro - Demonstração de Componentes
      </h2>
    </div>

    <!-- Charts Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Charts (Gráficos)</h3>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">
          <div class="mb-6 flex items-center justify-between">
            <h4 class="text-xl font-semibold text-black dark:text-white">
              Chart 01
            </h4>
          </div>
          <div id="chartOne" class="w-full h-80"></div>
        </div>

        <div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">
          <div class="mb-6 flex items-center justify-between">
            <h4 class="text-xl font-semibold text-black dark:text-white">
              Chart 02
            </h4>
          </div>
          <div id="chartTwo" class="w-full h-80"></div>
        </div>

        <div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">
          <div class="mb-6 flex items-center justify-between">
            <h4 class="text-xl font-semibold text-black dark:text-white">
              Chart 03
            </h4>
          </div>
          <div id="chartThree" class="w-full h-80"></div>
        </div>
      </div>
    </div>

    <!-- Datepickers Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Datepickers</h3>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
          <h4 class="mb-4 text-lg font-semibold">Datepicker com Range</h4>
          <input type="text" class="datepicker w-full rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" placeholder="Selecione um período de datas">
        </div>

        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
          <h4 class="mb-4 text-lg font-semibold">Datepicker Simples</h4>
          <input type="text" class="datepickerTwo w-full rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" placeholder="Selecione uma data">
        </div>
      </div>
    </div>

    <!-- Dropzone Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Dropzone (Upload de Arquivos)</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <form action="/file/post" class="dropzone" id="demo-upload">
          <div class="dz-message" data-dz-message>
            <div class="text-center">
              <svg class="mx-auto mb-4 h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <p class="text-lg font-medium">Arraste arquivos aqui ou clique para fazer upload</p>
              <p class="text-sm text-gray-500">PNG, JPG, GIF até 10MB</p>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- OTP Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">OTP (One-Time Password)</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <div id="otp-container" class="flex gap-2 justify-center">
          <input type="text" class="otp-input w-12 h-12 text-center border border-stroke rounded-lg focus:border-primary focus:outline-none" maxlength="1">
          <input type="text" class="otp-input w-12 h-12 text-center border border-stroke rounded-lg focus:border-primary focus:outline-none" maxlength="1">
          <input type="text" class="otp-input w-12 h-12 text-center border border-stroke rounded-lg focus:border-primary focus:outline-none" maxlength="1">
          <input type="text" class="otp-input w-12 h-12 text-center border border-stroke rounded-lg focus:border-primary focus:outline-none" maxlength="1">
        </div>
        <p class="mt-2 text-center text-sm text-gray-500">Digite o código de 4 dígitos</p>
      </div>
    </div>

    <!-- Search Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Search (Busca)</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <div class="flex gap-2">
          <input type="text" id="search-input" class="flex-1 rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" placeholder="Digite para buscar...">
          <button id="search-button" class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-center font-medium text-white hover:bg-opacity-90">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
        <p class="mt-2 text-sm text-gray-500">Use Ctrl+K ou / para focar na busca</p>
      </div>
    </div>

    <!-- Alpine.js Dropdown Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Alpine.js Dropdown</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <div x-data="dropdown" class="relative inline-block text-left">
          <button @click="toggle" class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-center font-medium text-white hover:bg-opacity-90">
            Abrir Dropdown
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <div x-ref="dropdown" x-show="open" x-transition class="absolute right-0 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu">
            <div class="py-1" role="none">
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Opção 1</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Opção 2</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Opção 3</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copy Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">Copy to Clipboard</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <div id="copy-input" class="flex gap-2">
          <input type="text" id="website-input" value="https://exemplo.com" class="flex-1 rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" readonly>
          <button id="copy-button" class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-center font-medium text-white hover:bg-opacity-90">
            <span id="copy-text">Copy</span>
          </button>
        </div>
      </div>
    </div>

    <!-- API Demo Section -->
    <div class="mb-8">
      <h3 class="mb-4 text-lg font-semibold">API Global</h3>
      <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
        <p class="mb-4 text-sm text-gray-600">Use o console do navegador para testar a API global:</p>
        <div class="bg-gray-100 p-4 rounded text-sm font-mono">
          <p>// Reinicializar todos os componentes</p>
          <p>window.TailAdminPro.initializeComponents();</p>
          <br>
          <p>// Inicializar componentes específicos</p>
          <p>window.TailAdminPro.initializeFlatpickr();</p>
          <p>window.TailAdminPro.initializeCharts();</p>
        </div>
      </div>
    </div>
  </div>
</div>
