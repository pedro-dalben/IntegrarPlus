<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          Versões Liberadas
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <%= @document.title %>
        </p>
      </div>
      
      <div class="flex items-center gap-4">
        <%= link_to admin_document_path(@document), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Voltar ao Documento
        <% end %>
        
        <% if @document.can_be_released? %>
          <%= link_to new_admin_document_document_release_path(@document), 
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Liberar Documento
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Status Atual -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status Atual</h2>
    <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <span class="text-2xl"><%= @document.status_icon %></span>
      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900 dark:text-white">
          <%= @document.status.humanize %>
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Versão atual: <%= @document.latest_version&.version_number || 'N/A' %>
          <% if @document.released_version %>
            | Última liberada: <%= @document.released_version %>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Lista de Releases -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Histórico de Liberações</h2>
    
    <% if @releases.any? %>
      <div class="space-y-4">
        <% @releases.each do |release| %>
          <div class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0">
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </span>
              </div>
              
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-white">
                  Versão <%= release.version_number %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Liberado por <%= release.released_by.full_name %> em <%= l(release.released_at, format: :long) %>
                </p>
                <p class="text-xs text-gray-400 dark:text-gray-500">
                  Arquivo: <%= release.version.file_path %>
                </p>
              </div>
            </div>
            
            <div class="flex items-center gap-2">
              <% if release.released_file_exists? %>
                <%= link_to download_admin_document_document_release_path(@document, release), 
                    class: "inline-flex items-center px-3 py-1 border border-gray-300 rounded-md text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Download
                <% end %>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 border border-red-300 rounded-md text-xs font-medium text-red-700 bg-red-50 dark:bg-red-900/20 dark:border-red-700 dark:text-red-300">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Arquivo não encontrado
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          Nenhuma versão liberada ainda.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
          <% if @document.can_be_released? %>
            Use o botão "Liberar Documento" para criar a primeira versão liberada.
          <% else %>
            O documento precisa estar no status "Aguardando Liberação" para ser liberado.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
