<div id="comment-<%= comment.id %>" class="bg-gray-50 rounded-lg p-4 mb-3">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white text-sm font-medium"><%= comment.user.full_name.first.upcase %></span>
      </div>
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-2">
        <div>
          <p class="text-sm font-medium text-gray-900"><%= comment.user.full_name %></p>
          <p class="text-xs text-gray-500"><%= l(comment.created_at, format: :short) %></p>
        </div>
      </div>
      
      <%= form_with model: [comment.document_version.document, comment.document_version, comment], 
                    local: true, 
                    class: "space-y-3" do |form| %>
        
        <div>
          <%= form.text_area :comment_text, 
              rows: 3, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              required: true %>
          <% if comment.errors[:comment_text].any? %>
            <p class="mt-1 text-sm text-red-600"><%= comment.errors[:comment_text].first %></p>
          <% end %>
        </div>
        
        <div class="flex justify-end space-x-3">
          <button type="button" 
                  onclick="cancelEditComment(<%= comment.id %>)" 
                  class="px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            Cancelar
          </button>
          <%= form.submit "Salvar", 
              class: "px-3 py-1 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
