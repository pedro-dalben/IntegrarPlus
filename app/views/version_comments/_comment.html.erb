<div id="comment-<%= comment.id %>" class="bg-gray-50 rounded-lg p-4 mb-4">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white text-sm font-medium">
          <%= comment.user.full_name.first.upcase %>
        </span>
      </div>
    </div>

    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-900">
            <%= comment.user.full_name %>
          </p>
          <p class="text-xs text-gray-500">
            <%= l(comment.created_at, format: :long) %>
          </p>
        </div>

        <% if comment.can_be_edited_by?(current_user) %>
          <div class="flex space-x-2">
            <button class="text-xs text-blue-600 hover:text-blue-800" onclick="editComment(<%= comment.id %>)">
              Editar
            </button>
            <% if comment.can_be_deleted_by?(current_user) %>
              <%= link_to "Excluir", admin_document_version_comment_path(comment.document_version.document, comment),
                  method: :delete,
                  class: "text-xs text-red-600 hover:text-red-800",
                  data: { confirm: "Tem certeza que deseja excluir este comentÃ¡rio?" } %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="mt-2">
        <p class="text-sm text-gray-700 whitespace-pre-wrap">
          <%= comment.comment_text %>
        </p>
      </div>
    </div>
  </div>
</div>
