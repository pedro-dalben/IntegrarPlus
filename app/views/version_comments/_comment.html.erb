<div id="comment-<%= comment.id %>" class="bg-gray-50 rounded-lg p-4 mb-3">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white text-sm font-medium"><%= comment.user.full_name.first.upcase %></span>
      </div>
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-900"><%= comment.user.full_name %></p>
          <p class="text-xs text-gray-500"><%= l(comment.created_at, format: :short) %></p>
        </div>
        
        <% if comment.can_be_edited_by?(current_user) || comment.can_be_deleted_by?(current_user) %>
          <div class="flex space-x-2">
            <% if comment.can_be_edited_by?(current_user) %>
              <button 
                onclick="editComment(<%= comment.id %>)"
                class="text-gray-400 hover:text-gray-600"
                title="Editar comentário">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </button>
            <% end %>
            
            <% if comment.can_be_deleted_by?(current_user) %>
              <%= link_to document_version_version_comment_path(comment.document_version.document, comment.document_version, comment), 
                  method: :delete, 
                  data: { confirm: 'Tem certeza que deseja excluir este comentário?' },
                  class: "text-gray-400 hover:text-red-600",
                  title: "Excluir comentário" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-2">
        <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= comment.comment_text %></p>
      </div>
    </div>
  </div>
</div>
