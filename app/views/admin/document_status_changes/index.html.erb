<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          Histórico de Status
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <%= @document.title %>
        </p>
      </div>
      
      <div class="flex items-center gap-4">
        <%= link_to admin_document_path(@document), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Voltar ao Documento
        <% end %>
        
        <%= link_to new_admin_document_document_status_change_path(@document), 
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Alterar Status
        <% end %>
      </div>
    </div>
  </div>

  <!-- Status Atual -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status Atual</h2>
    <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <span class="text-2xl"><%= @document.status_icon %></span>
      <div>
        <p class="text-sm font-medium text-gray-900 dark:text-white">
          <%= @document.status.humanize %>
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Última alteração em <%= l(@document.updated_at, format: :long) %>
        </p>
      </div>
    </div>
  </div>

  <!-- Timeline de Mudanças -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Timeline de Mudanças</h2>
    
    <% if @status_logs.any? %>
      <div class="flow-root">
        <ul class="-mb-8">
          <% @status_logs.each_with_index do |log, index| %>
            <li>
              <div class="relative pb-8">
                <% unless index == @status_logs.length - 1 %>
                  <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-600" aria-hidden="true"></span>
                <% end %>
                
                <div class="relative flex space-x-3">
                  <div>
                    <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white dark:ring-gray-800 bg-blue-500">
                      <span class="text-sm font-medium text-white"><%= log.status_icon %></span>
                    </span>
                  </div>
                  
                  <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                    <div>
                      <p class="text-sm text-gray-900 dark:text-white">
                        <span class="font-medium"><%= log.professional.full_name %></span>
                        alterou o status para
                        <span class="font-medium"><%= log.new_status.humanize %></span>
                      </p>
                      
                      <% if log.notes.present? %>
                        <div class="mt-2 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                          <p class="text-sm text-gray-700 dark:text-gray-300">
                            <%= log.notes %>
                          </p>
                        </div>
                      <% end %>
                      
                      <div class="mt-2 flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                        <span class="flex items-center gap-1">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          <%= l(log.created_at, format: :long) %>
                        </span>
                        
                        <% if log.old_status != log.new_status %>
                          <span class="flex items-center gap-1">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                            </svg>
                            <%= log.old_status.humanize %> → <%= log.new_status.humanize %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="text-right text-sm whitespace-nowrap text-gray-500 dark:text-gray-400">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= log.status_color %>">
                        <%= log.status_icon %> <%= log.new_status.humanize %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          Nenhuma mudança de status registrada.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
          O documento ainda está no status inicial.
        </p>
      </div>
    <% end %>
  </div>
</div>
