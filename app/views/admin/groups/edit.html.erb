<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_groups_path, class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  <% end %>

  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Editar Grupo</h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Atualize as informações e permissões do grupo</p>
    </div>

    <%= form_with model: [:admin, @group], local: true do |form| %>
      <div class="space-y-6">
        <!-- Informações Básicas -->
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Informações do Grupo</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <%= form.label :name, "Nome do Grupo *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_field :name, 
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "Ex: Médicos, Secretárias, Administradores",
                  required: true %>
            </div>

            <div class="md:col-span-2">
              <%= form.label :description, "Descrição", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_area :description, rows: 3,
                  class: "w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-1 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-400",
                  placeholder: "Descreva o propósito deste grupo..." %>
            </div>

            <div class="md:col-span-2">
              <div class="flex items-center gap-3">
                <%= form.check_box :is_admin, 
                    class: "h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-800" %>
                <%= form.label :is_admin, "Grupo Administrador (acesso total ao sistema)", 
                    class: "text-sm font-medium text-gray-700 dark:text-gray-400" %>
              </div>
              <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                Grupos administradores têm acesso a todas as funcionalidades do sistema
              </p>
            </div>
          </div>
        </div>

        <!-- Permissões -->
        <% if @permissions.present? %>
          <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
            <div class="flex items-center justify-between mb-6">
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Configuração de Permissões</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Defina o que este grupo pode acessar no sistema</p>
              </div>
              <div class="flex gap-2">
                <button type="button" onclick="selectAllPermissions()" class="text-xs px-3 py-1 bg-green-100 text-green-800 rounded-md hover:bg-green-200 dark:bg-green-900 dark:text-green-200">
                  Selecionar Tudo
                </button>
                <button type="button" onclick="deselectAllPermissions()" class="text-xs px-3 py-1 bg-red-100 text-red-800 rounded-md hover:bg-red-200 dark:bg-red-900 dark:text-red-200">
                  Desmarcar Tudo
                </button>
              </div>
            </div>
            
            <div class="space-y-6">
              <% permission_groups = {
                'dashboard' => {
                  name: 'Dashboard',
                  icon: 'M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z',
                  description: 'Acesso ao painel principal do sistema'
                },
                'professionals' => {
                  name: 'Profissionais',
                  icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z',
                  description: 'Gerenciamento de profissionais de saúde'
                },
                'users' => {
                  name: 'Usuários',
                  icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z',
                  description: 'Controle de usuários do sistema'
                },
                'invites' => {
                  name: 'Convites',
                  icon: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z',
                  description: 'Envio e gerenciamento de convites'
                },
                'groups' => {
                  name: 'Grupos',
                  icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
                  description: 'Administração de grupos e permissões'
                },
                'settings' => {
                  name: 'Configurações',
                  icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z',
                  description: 'Configurações gerais do sistema'
                },
                'documents' => {
                  name: 'Documentos',
                  icon: 'M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z',
                  description: 'Sistema de gestão de documentos'
                }
                  description: 'Configurações gerais do sistema'
                },
                'reports' => {
                  name: 'Relatórios',
                  icon: 'M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
                  description: 'Visualização e geração de relatórios'
                }
              } %>

              <% @permissions.group_by { |p| p.key.split('.').first }.each do |module_name, permissions| %>
                <% group_info = permission_groups[module_name] || { name: module_name.humanize, icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z', description: 'Permissões do módulo' } %>
                
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 bg-gray-50 dark:bg-gray-900/50">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= group_info[:icon] %>"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="text-sm font-semibold text-gray-900 dark:text-white">
                        <%= group_info[:name] %>
                      </h4>
                      <p class="text-xs text-gray-600 dark:text-gray-400">
                        <%= group_info[:description] %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <button type="button" onclick="toggleModulePermissions('<%= module_name %>')" 
                              class="text-xs px-2 py-1 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        Alternar Tudo
                      </button>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-3" data-module="<%= module_name %>">
                    <% permissions.each do |permission| %>
                      <% action_name = permission.key.split('.').last %>
                      <% action_translations = {
                        'view' => 'Visualizar',
                        'index' => 'Listar',
                        'show' => 'Ver detalhes',
                        'new' => 'Criar novo',
                        'create' => 'Salvar',
                        'edit' => 'Editar',
                        'update' => 'Atualizar',
                        'destroy' => 'Excluir',
                        'activate' => 'Ativar',
                        'deactivate' => 'Desativar',
                        'resend' => 'Reenviar',
                        'manage' => 'Gerenciar',
                        'read' => 'Visualizar',
                        'write' => 'Modificar',
                        'generate' => 'Gerar'
                      } %>
                      
                      <label class="flex items-center gap-2 p-2 bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer">
                        <%= form.check_box "permission_ids", 
                            { multiple: true, checked: @group.permission_ids.include?(permission.id), class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-800" },
                            permission.id, 
                            nil %>
                        <span class="text-sm text-gray-900 dark:text-white font-medium">
                          <%= action_translations[action_name] || action_name.humanize %>
                        </span>
                      </label>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="flex items-center justify-end gap-3">
          <%= link_to "Cancelar", admin_groups_path, 
              class: "inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700" %>
          <%= form.submit "Atualizar Grupo", 
              class: "inline-flex items-center justify-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-sm font-medium text-white hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
        </div>
      </div>
    <% end %>
  </div>

  <script>
    function selectAllPermissions() {
      document.querySelectorAll('input[name="group[permission_ids][]"]').forEach(checkbox => {
        checkbox.checked = true;
      });
    }

    function deselectAllPermissions() {
      document.querySelectorAll('input[name="group[permission_ids][]"]').forEach(checkbox => {
        checkbox.checked = false;
      });
    }

    function toggleModulePermissions(moduleName) {
      const moduleDiv = document.querySelector(`[data-module="${moduleName}"]`);
      const checkboxes = moduleDiv.querySelectorAll('input[type="checkbox"]');
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);
      
      checkboxes.forEach(checkbox => {
        checkbox.checked = !allChecked;
      });
    }
  </script>
<% end %>
