<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Permissões do Documento</h1>
        <p class="mt-2 text-gray-600"><%= @document.title %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_document_path(@document), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          Voltar ao Documento
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Formulário para adicionar permissão -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Adicionar Permissão</h2>

      <%= form_with url: admin_document_document_permissions_path(@document), method: :post, local: true, class: "space-y-4", data: { controller: "permissions" } do |form| %>
        <div>
          <%= form.label :grantee_type, "Tipo", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :grantee_type,
              options_for_select([
                ['Usuário', 'user'],
                ['Grupo', 'group']
              ]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              data: { action: "change->permissions#toggleGranteeType" } %>
        </div>

        <div id="user-select" class="permission-grantee-select" data-permissions-target="userSelect">
          <%= form.label :grantee_id, "Usuário", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.select :grantee_id,
              options_from_collection_for_select(@users, :id, :name),
              { prompt: "Selecione um usuário" },
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div id="group-select" class="permission-grantee-select hidden" data-permissions-target="groupSelect">
          <%= form.label :grantee_id, "Grupo", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :grantee_id,
              options_from_collection_for_select(@groups, :id, :name),
              { prompt: "Selecione um grupo" },
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :access_level, "Nível de Acesso", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :access_level,
              options_for_select([
                ['Visualizar', 'visualizar'],
                ['Comentar', 'comentar'],
                ['Editar', 'editar']
              ]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex justify-end">
          <%= form.submit "Adicionar Permissão", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>

    <!-- Lista de permissões existentes -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Permissões Atuais</h2>

      <% if @permissions.any? %>
        <div class="space-y-3">
          <% @permissions.each do |permission| %>
            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= permission.grantee_name %></p>
                <p class="text-xs text-gray-500">
                  <%= permission.grantee_type.humanize %> •
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                    <%= case permission.access_level
                        when 'visualizar'
                          'bg-blue-100 text-blue-800'
                        when 'comentar'
                          'bg-yellow-100 text-yellow-800'
                        when 'editar'
                          'bg-green-100 text-green-800'
                        end %>">
                    <%= permission.access_level.humanize %>
                  </span>
                </p>
              </div>
              <%= link_to admin_document_document_permission_path(@document, permission),
                  method: :delete,
                  data: { confirm: 'Tem certeza que deseja revogar esta permissão?' },
                  class: "text-red-600 hover:text-red-900" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma permissão configurada</h3>
          <p class="mt-1 text-sm text-gray-500">Adicione permissões para compartilhar este documento.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
