<div class="min-h-screen bg-gray-50" data-controller="agenda-dashboard">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard de Agendas</h1>
      <p class="mt-2 text-gray-600">Visão geral das métricas e performance das agendas</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-800">Agendas Ativas</h3>
            <p class="text-3xl font-bold text-blue-600"><%= @metrics[:active_agendas_count] %></p>
            <p class="text-sm text-gray-500">+<%= @trends[:agendas_growth] %>% vs mês anterior</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-800">Profissionais Ativos</h3>
            <p class="text-3xl font-bold text-green-600"><%= @metrics[:active_professionals_count] %></p>
            <p class="text-sm text-gray-500">Com agenda configurada</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-800">Slots Disponíveis</h3>
            <p class="text-3xl font-bold text-purple-600"><%= @metrics[:available_slots_count] %></p>
            <p class="text-sm text-gray-500">Próximos 7 dias</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center">
          <div class="p-2 bg-orange-100 rounded-lg">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-800">Taxa de Ocupação</h3>
            <p class="text-3xl font-bold text-orange-600"><%= @metrics[:occupancy_rate] %>%</p>
            <p class="text-sm text-gray-500">Média mensal</p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-800">Ocupação por Período</h3>
          <select data-action="change->agenda-dashboard#updateOccupancyChart"
                  class="border rounded-lg px-3 py-1 text-sm">
            <option value="7_days">Últimos 7 dias</option>
            <option value="30_days" selected>Últimos 30 dias</option>
            <option value="3_months">Últimos 3 meses</option>
          </select>
        </div>
        <div class="h-64">
          <canvas data-agenda-dashboard-target="occupancyChart"></canvas>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow border">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-800">Utilização por Profissional</h3>
          <button data-action="click->agenda-dashboard#refreshUtilizationChart"
                  class="ta-btn ta-btn-secondary text-sm">
            Atualizar
          </button>
        </div>
        <div class="h-64">
          <canvas data-agenda-dashboard-target="utilizationChart"></canvas>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-white p-6 rounded-lg shadow border">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Tendências</h3>
            <select data-action="change->agenda-dashboard#updateTrendsChart"
                    class="border rounded-lg px-3 py-1 text-sm">
              <option value="3_months">Últimos 3 meses</option>
              <option value="6_months" selected>Últimos 6 meses</option>
              <option value="1_year">Último ano</option>
            </select>
          </div>
          <div class="h-64">
            <canvas data-agenda-dashboard-target="trendsChart"></canvas>
          </div>
        </div>
      </div>

      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg shadow border">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Alertas do Sistema</h3>
          <div class="space-y-3">
            <% if @alerts.any? %>
              <% @alerts.first(5).each do |alert| %>
                <div class="flex items-start p-3 rounded-lg <%= alert[:severity] == 'high' ? 'bg-red-50 border border-red-200' : 'bg-yellow-50 border border-yellow-200' %>">
                  <div class="flex-shrink-0">
                    <% if alert[:severity] == 'high' %>
                      <svg class="w-5 h-5 text-red-600" fill="currentColor">
                        <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"/>
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5 text-yellow-600" fill="currentColor">
                        <path d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"/>
                      </svg>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= alert[:message] %></p>
                    <% if alert[:agenda] %>
                      <p class="text-xs text-gray-500 mt-1">
                        <%= link_to alert[:agenda].name, admin_agenda_path(alert[:agenda]),
                                    class: "text-blue-600 hover:text-blue-800" %>
                      </p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-4">
                <svg class="w-12 h-12 text-green-500 mx-auto mb-2" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-sm text-gray-500">Nenhum alerta ativo</p>
              </div>
            <% end %>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow border">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Atividades Recentes</h3>
          <div class="space-y-3">
            <% @recent_activities.each do |activity| %>
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <% if activity[:type] == 'agenda_created' %>
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-gray-900">
                    <% if activity[:type] == 'agenda_created' %>
                      Nova agenda criada: <strong><%= activity[:object].name %></strong>
                    <% else %>
                      Novo evento criado: <strong><%= activity[:object].name %></strong>
                    <% end %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= time_ago_in_words(activity[:date]) %> atrás
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
