<%= form_with model: [:admin, school], local: true do |form| %>
  <% if school.errors.any? %>
    <div class="rounded-lg bg-red-50 dark:bg-red-900/20 p-4 mb-6">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(school.errors.count, "erro") %> ao salvar escola
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc pl-5 space-y-1">
              <% school.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-medium text-gray-800 dark:text-white">Informações Básicas</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="md:col-span-2">
            <%= form.label :name, "Nome da Escola *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :name,
                required: true,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :code, "Código INEP", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :code,
                placeholder: "12345678",
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :school_type, "Tipo de Escola", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :school_type,
                options_for_select([
                  ['Selecione...', ''],
                  ['Municipal', 'municipal'],
                  ['Estadual', 'estadual'],
                  ['Federal', 'federal'],
                  ['Particular', 'particular']
                ], school.school_type),
                {},
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :network, "Rede", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :network,
                options_for_select([
                  ['Selecione...', ''],
                  ['Pública', 'publica'],
                  ['Privada', 'privada']
                ], school.network),
                {},
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :active, class: "flex items-center gap-2 cursor-pointer" do %>
              <%= form.check_box :active, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 rounded" %>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Escola Ativa</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-medium text-gray-800 dark:text-white">Endereço</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="md:col-span-2">
            <%= form.label :address, "Endereço", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :address,
                placeholder: "Rua, Avenida, número",
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :neighborhood, "Bairro", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :neighborhood,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :zip_code, "CEP", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :zip_code,
                placeholder: "00000-000",
                data: { controller: "mask", mask_target: "input", mask_type_value: "custom", mask_options_value: { mask: "00000-000" } },
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :city, "Cidade *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :city,
                required: true,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :state, "UF *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :state,
                options_for_select([['Selecione...', '']] + %w[AC AL AP AM BA CE DF ES GO MA MT MS MG PA PB PR PE PI RJ RN RS RO RR SC SP SE TO].map { |s| [s, s] }, school.state),
                {},
                required: true,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-medium text-gray-800 dark:text-white">Contato</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :phone, "Telefone", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :phone,
                placeholder: "(00) 00000-0000",
                data: { controller: "mask", mask_target: "input", mask_type_value: "phone" },
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>

          <div>
            <%= form.label :email, "E-mail", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.email_field :email,
                placeholder: "escola@exemplo.com",
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex items-center justify-end gap-4">
      <%= link_to "Cancelar", admin_schools_path, class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]" %>

      <%= form.submit school.new_record? ? "Cadastrar Escola" : "Atualizar Escola",
          class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" %>
    </div>
  </div>
<% end %>
