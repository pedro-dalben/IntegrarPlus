<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-4">
      <%= link_to admin_document_document_tasks_path(@document), class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          Editar Tarefa
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          Documento: <%= @document.title %>
        </p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
    <%= form_with model: [@document, @task], url: admin_document_document_task_path(@document, @task), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @task.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                Erro ao atualizar tarefa:
              </h3>
              <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                <ul class="list-disc pl-5 space-y-1">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <label for="document_task_title" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
          Título *
        </label>
        <%= f.text_field :title, 
            class: "mt-1 block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Digite o título da tarefa" %>
      </div>

      <div>
        <label for="document_task_description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
          Descrição
        </label>
        <%= f.text_area :description, 
            rows: 4,
            class: "mt-1 block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Descreva os detalhes da tarefa" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label for="document_task_priority" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
            Prioridade *
          </label>
          <%= f.select :priority, 
              options_for_select([
                ['Baixa', 'low'],
                ['Média', 'medium'],
                ['Alta', 'high']
              ], @task.priority), 
              { prompt: 'Selecione a prioridade' },
              class: "mt-1 block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label for="document_task_assigned_to_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
            Responsável
          </label>
          <%= f.select :assigned_to_professional_id, 
              options_for_select([
                ['Não atribuída', '']
              ] + Professional.order(:full_name).map { |p| [p.full_name, p.id] }, @task.assigned_to_professional_id), 
              {},
              class: "mt-1 block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>


      </div>

      <div class="flex justify-end gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
        <%= link_to "Cancelar", admin_document_document_tasks_path(@document), 
            class: "px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" %>
        <%= f.submit "Atualizar Tarefa", 
            class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
