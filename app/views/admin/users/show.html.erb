<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <% if @user.professional %>
      <%= link_to admin_professional_path(@user.professional), class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar
      <% end %>
    <% else %>
              <%= link_to admin_professionals_path, class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t('admin.users.buttons.back') %>
        <% end %>
    <% end %>
    
    <%= link_to edit_admin_user_path(@user), class: "ta-btn ta-btn-primary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      <%= t('admin.users.buttons.edit') %>
    <% end %>
    
    <% unless @user.confirmed_invite? %>
      <%= link_to admin_user_invites_path(@user), method: :post, class: "ta-btn ta-btn-success inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"/>
        </svg>
        <%= t('admin.users.buttons.generate_invite') %>
      <% end %>
    <% end %>
  <% end %>

  <div class="space-y-6">
    <!-- Informa√ß√µes do Usu√°rio -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white"><%= t('admin.users.sections.user_info') %></h2>
      </div>
      <div class="p-4 sm:p-6">
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
          <div class="md:col-span-2">
            <div class="flex items-center space-x-4">
              <div class="h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center">
                <span class="text-lg font-medium text-blue-800 dark:text-blue-200">
                  <%= (@user.name || @user.email).first.upcase %>
                </span>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-800 dark:text-white">
                  <%= @user.name || @user.email %>
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400"><%= @user.email %></p>
                <div class="mt-2">
                  <% if @user.professional&.active? %>
                    <span class="ta-badge ta-badge-success">‚úÖ Ativo</span>
                  <% elsif @user.pending_invite? %>
                    <span class="ta-badge ta-badge-warning">‚è≥ Pendente</span>
                  <% elsif @user.professional&.active? == false %>
                    <span class="ta-badge ta-badge-error">‚ùå Inativo</span>
                  <% elsif @user.latest_invite&.expired? %>
                    <span class="ta-badge ta-badge-gray">üîÑ Expirado</span>
                  <% else %>
                    <span class="ta-badge ta-badge-gray">Sem usu√°rio</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div>
            <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.created_at') %></span>
            <p class="h-11 w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-sm text-gray-800 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90">
              <%= l(@user.created_at, format: :long) %>
            </p>
          </div>

          <div>
            <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.last_sign_in') %></span>
            <p class="h-11 w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-sm text-gray-800 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90">
              <%= @user.last_sign_in_at ? l(@user.last_sign_in_at, format: :long) : 'Nunca' %>
            </p>
          </div>
        </div>

        <!-- Profissional Associado -->
        <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-800 dark:text-white"><%= t('admin.users.sections.professional_info') %></h2>
        </div>
        <div class="p-4 sm:p-6">
          <% if @user.professional %>
            <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
              <div class="md:col-span-2">
                <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.full_name') %></span>
                <p class="h-11 w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-sm text-gray-800 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90">
                  <%= @user.professional.full_name %>
                </p>
              </div>

              <div>
                <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.email') %></span>
                <p class="h-11 w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-sm text-gray-800 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90">
                  <%= @user.professional.email %>
                </p>
              </div>

              <div>
                <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.status') %></span>
                                  <div class="h-11 flex items-center">
                    <% if @user.professional.active? %>
                      <span class="ta-badge ta-badge-success"><%= t('admin.users.status.active') %></span>
                    <% else %>
                      <span class="ta-badge ta-badge-error"><%= t('admin.users.status.inactive') %></span>
                    <% end %>
                  </div>
              </div>

              <div class="md:col-span-2">
                <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.specialities') %></span>
                <div class="h-11 flex items-center gap-2">
                  <% @user.professional.specialities.each do |speciality| %>
                    <span class="ta-badge ta-badge-primary"><%= speciality.name %></span>
                  <% end %>
                </div>
              </div>

              <div class="md:col-span-2">
                <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"><%= t('admin.users.fields.groups') %></span>
                <div class="h-11 flex items-center gap-2">
                  <% @user.professional.groups.each do |group| %>
                    <span class="ta-badge ta-badge-gray"><%= group.name %></span>
                  <% end %>
                </div>
              </div>

              <div class="md:col-span-2 flex justify-end">
                <%= link_to admin_professional_path(@user.professional), class: "ta-btn ta-btn-primary inline-flex items-center gap-2" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  <%= t('admin.users.buttons.view_professional') %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-500 dark:text-gray-400"><%= t('admin.users.info.no_professional') %></p>
            </div>
          <% end %>
        </div>

        <!-- Hist√≥rico de Convites -->
        <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-800 dark:text-white"><%= t('admin.users.sections.invite_history') %></h2>
        </div>
        <div class="p-4 sm:p-6">
          <% if @invites.any? %>
            <div class="overflow-hidden">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Token</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Criado em</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Expira em</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Confirmado em</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Tentativas</th>
                  </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
                  <% @invites.each do |invite| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-white">
                        <%= invite.token %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% if invite.confirmed? %>
                          <span class="ta-badge ta-badge-success">Confirmado</span>
                        <% elsif invite.expired? %>
                          <span class="ta-badge ta-badge-error">Expirado</span>
                        <% else %>
                          <span class="ta-badge ta-badge-warning">Pendente</span>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                        <%= l(invite.created_at, format: :short) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                        <%= l(invite.expires_at, format: :short) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                        <%= invite.confirmed_at ? l(invite.confirmed_at, format: :short) : '-' %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                        <%= invite.attempts_count %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-500 dark:text-gray-400">Nenhum convite encontrado</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
