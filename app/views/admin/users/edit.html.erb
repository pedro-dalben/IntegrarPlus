<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_user_path(@user), class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('admin.users.buttons.back') %>
    <% end %>
  <% end %>

  <div class="space-y-6">
    <%= form_with model: [:admin, @user], local: true do |form| %>
      <%= render Alerts::ErrorComponent.new(model: @user, title: t('admin.users.errors.save_error')) %>

      <!-- Informações do Usuário -->
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-800 dark:text-white"><%= t('admin.users.sections.user_info') %></h2>
        </div>
        <div class="p-4 sm:p-6">
          <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
            <div>
              <%= form.label :name, t('admin.users.fields.name'), class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_field :name,
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "Digite o nome" %>
            </div>

            <div>
              <%= form.label :email, t('admin.users.fields.email'), class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.email_field :email,
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "exemplo@email.com" %>
            </div>
          </div>
        </div>

        <!-- Ações Disponíveis -->
        <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-800 dark:text-white"><%= t('admin.users.sections.available_actions') %></h2>
        </div>
        <div class="p-4 sm:p-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <% if @user.professional&.active? == false %>
              <%= link_to activate_admin_user_path(@user),
                  method: :patch,
                  data: { confirm: 'Tem certeza que deseja ativar este usuário?' },
                  class: "ta-btn ta-btn-success inline-flex items-center gap-2 justify-center" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= t('admin.users.actions.activate_user') %>
              <% end %>
            <% elsif @user.professional&.active? %>
              <%= link_to deactivate_admin_user_path(@user),
                  method: :patch,
                  data: { confirm: 'Tem certeza que deseja desativar este usuário?' },
                  class: "ta-btn ta-btn-secondary inline-flex items-center gap-2 justify-center border-red-300 text-red-700 hover:bg-red-50 dark:border-red-600 dark:text-red-400 dark:hover:bg-red-900/10" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= t('admin.users.actions.deactivate_user') %>
              <% end %>
            <% end %>

            <% if @user.professional %>
              <%= link_to admin_professional_path(@user.professional),
                  class: "ta-btn ta-btn-primary inline-flex items-center gap-2 justify-center" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <%= t('admin.users.buttons.view_professional') %>
              <% end %>
            <% end %>

            <%= link_to admin_user_path(@user),
                method: :delete,
                data: { confirm: 'Tem certeza que deseja excluir este usuário? Esta ação não pode ser desfeita.' },
                class: "ta-btn ta-btn-secondary inline-flex items-center gap-2 justify-center border-red-300 text-red-700 hover:bg-red-50 dark:border-red-600 dark:text-red-400 dark:hover:bg-red-900/10" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              <%= t('admin.users.actions.delete_user') %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Botões do Formulário -->
      <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
        <%= link_to t('admin.users.buttons.cancel'), admin_user_path(@user),
            class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]" %>
        <%= form.submit t('admin.users.buttons.save'),
            class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" %>
      </div>
    <% end %>
  </div>
<% end %>
