<%= render ::Layouts::AdminComponent.new(title: "Nova Especialização") do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_specializations_path, class: "bg-gray-500 hover:bg-gray-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 shadow-sm">
    <%= form_with model: [:admin, @specialization], local: true, class: "space-y-6" do |form| %>
      <% if @specialization.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 dark:bg-red-900/10 dark:border-red-800">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-400">Erro ao salvar especialização</h3>
              <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                <ul class="list-disc pl-5 space-y-1">
                  <% @specialization.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 placeholder:text-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder:text-gray-400", 
            placeholder: "Ex: Linguagem, ABA, Integração Sensorial" %>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Nome único para identificar a especialização</p>
      </div>

      <div>
        <%= form.label :speciality_ids, "Especialidades", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <div data-controller="tom-select">
          <%= form.select :speciality_ids, 
              @specialities.map { |s| [s.name, s.id] }, 
              { prompt: "Selecione as especialidades..." }, 
              { 
                multiple: true,
                data: { 
                  tom_select_target: "select",
                  tom_select_options_value: {
                    plugins: ['remove_button'],
                    placeholder: "Selecione as especialidades...",
                    maxItems: nil,
                    create: false
                  }.to_json
                }
              } %>
        </div>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Especialidades às quais esta especialização pertence</p>
      </div>

      <div class="flex justify-end gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
        <%= link_to admin_specializations_path, 
            class: "bg-gray-500 hover:bg-gray-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition" do %>
          Cancelar
        <% end %>
        <%= form.submit "Criar Especialização", 
            class: "bg-blue-600 hover:bg-blue-700 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition" %>
      </div>
    <% end %>
  </div>
<% end %>
