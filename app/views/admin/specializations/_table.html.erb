<% if request.xhr? %>
  <% specializations.each do |specialization| %>
    <tr class="transition hover:bg-gray-50 dark:hover:bg-gray-900"
        data-search-target="row"
        data-action="click->row#navigate"
        data-url="<%= admin_specialization_path(specialization) %>">
      <td class="px-5 py-4 whitespace-nowrap">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center dark:bg-orange-900/20">
            <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          </div>
          <div>
            <h6 class="text-sm font-medium text-gray-800 dark:text-white">
              <%= specialization.name %>
            </h6>
          </div>
        </div>
      </td>
      <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
        <% if specialization.specialities.any? %>
          <div class="flex flex-wrap gap-1">
            <% specialization.specialities.limit(3).each do |speciality| %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                <%= speciality.name %>
              </span>
            <% end %>
            <% if specialization.specialities.count > 3 %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-400">
                +<%= specialization.specialities.count - 3 %> mais
              </span>
            <% end %>
          </div>
        <% else %>
          <span class="text-gray-400 dark:text-gray-500">Nenhuma especialidade</span>
        <% end %>
      </td>
      <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
        <%= l(specialization.created_at, format: :short) %>
      </td>
      <td class="px-5 py-4 whitespace-nowrap text-right relative">
        <div class="flex items-center justify-end gap-2">
          <%= link_to admin_specialization_path(specialization), 
              class: "text-brand-600 hover:text-brand-900 dark:text-brand-400 dark:hover:text-brand-300",
              title: "Ver detalhes" do %>
            <i class="bi bi-eye"></i>
          <% end %>
          <%= link_to edit_admin_specialization_path(specialization), 
              class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-300",
              title: "Editar" do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          <%= link_to admin_specialization_path(specialization), 
              method: :delete,
              data: { 
                confirm: "Tem certeza que deseja excluir esta especialização?",
                turbo_method: :delete
              },
              class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
              title: "Excluir" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
<% else %>
  <table class="w-full table-auto overflow-visible">
    <thead>
      <tr class="border-b border-gray-200 dark:divide-gray-800 dark:border-gray-800">
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Nome</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Especialidades</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Criado em</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">
          <div class="relative"><span class="sr-only">Ações</span></div>
        </th>
      </tr>
    </thead>
    <tbody class="divide-x divide-y divide-gray-200 dark:divide-gray-800" data-search-target="results">
      <% specializations.each do |specialization| %>
        <tr class="transition hover:bg-gray-50 dark:hover:bg-gray-900"
            data-search-target="row"
            data-action="click->row#navigate"
            data-url="<%= admin_specialization_path(specialization) %>">
          <td class="px-5 py-4 whitespace-nowrap">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center dark:bg-orange-900/20">
                <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>
              <div>
                <h6 class="text-sm font-medium text-gray-800 dark:text-white">
                  <%= specialization.name %>
                </h6>
              </div>
            </div>
          </td>
          <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
            <% if specialization.specialities.any? %>
              <div class="flex flex-wrap gap-1">
                <% specialization.specialities.limit(3).each do |speciality| %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                    <%= speciality.name %>
                  </span>
                <% end %>
                <% if specialization.specialities.count > 3 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-400">
                    +<%= specialization.specialities.count - 3 %> mais
                  </span>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">Nenhuma especialidade</span>
            <% end %>
          </td>
          <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
            <%= l(specialization.created_at, format: :short) %>
          </td>
          <td class="px-5 py-4 whitespace-nowrap">
            <div class="flex items-center justify-end gap-2">
              <%= link_to admin_specialization_path(specialization), 
                  class: "text-brand-600 hover:text-brand-900 dark:text-brand-400 dark:hover:text-brand-300",
                  title: "Ver detalhes" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_admin_specialization_path(specialization), 
                  class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-300",
                  title: "Editar" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= link_to admin_specialization_path(specialization), 
                  method: :delete,
                  data: { 
                    confirm: "Tem certeza que deseja excluir esta especialização?",
                    turbo_method: :delete
                  },
                  class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                  title: "Excluir" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Paginação -->
  <% content_for :pagination do %>
    <%= render Ui::PaginationComponent.new(pagy: pagy) %>
  <% end %>
<% end %>
