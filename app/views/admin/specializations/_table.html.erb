<div class="custom-scrollbar overflow-x-auto">
  <table class="w-full table-auto">
    <thead>
      <tr class="border-b border-gray-200 dark:divide-gray-800 dark:border-gray-800">
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Nome</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Especialidades</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">Criado em</th>
        <th class="px-5 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400">
          <div class="relative"><span class="sr-only">Ações</span></div>
        </th>
      </tr>
    </thead>
    <tbody class="divide-x divide-y divide-gray-200 dark:divide-gray-800">
      <% specializations.each do |specialization| %>
        <tr class="transition hover:bg-gray-50 dark:hover:bg-gray-900">
          <td class="px-5 py-4 whitespace-nowrap">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-cyan-100 rounded-lg flex items-center justify-center dark:bg-cyan-900/20">
                <svg class="w-5 h-5 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
              </div>
              <div>
                <h6 class="text-sm font-medium text-gray-800 dark:text-white">
                  <%= specialization.name %>
                </h6>
              </div>
            </div>
          </td>
          <td class="px-5 py-4 whitespace-nowrap">
            <div class="flex flex-wrap gap-1">
              <% specialization.specialities.each do |speciality| %>
                <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                  <%= speciality.name %>
                </span>
              <% end %>
            </div>
          </td>
          <td class="px-5 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
            <%= l(specialization.created_at, format: :short) %>
          </td>
          <td class="px-5 py-4 whitespace-nowrap">
            <div class="flex items-center justify-end gap-2">
              <%= link_to admin_specialization_path(specialization),
                  class: "text-brand-600 hover:text-brand-900 dark:text-brand-400 dark:hover:text-brand-300",
                  title: "Ver detalhes" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_admin_specialization_path(specialization),
                  class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-300",
                  title: "Editar" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= link_to admin_specialization_path(specialization),
                  method: :delete,
                  data: {
                    confirm: "Tem certeza que deseja excluir esta especialização?",
                    turbo_method: :delete
                  },
                  class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                  title: "Excluir" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
