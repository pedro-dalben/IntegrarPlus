<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_specialities_path, class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
    <%= link_to edit_admin_speciality_path(@speciality), class: "ta-btn ta-btn-primary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Editar
    <% end %>
  <% end %>

  <div class="space-y-6">
    <!-- Informações Básicas -->
    <div class="ta-card">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Informações Básicas</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <span class="ta-label-inline">Nome</span>
          <p class="text-sm text-gray-900 dark:text-white mt-1"><%= @speciality.name %></p>
        </div>
        
        <div>
          <span class="ta-label-inline">Especialidade</span>
          <p class="text-sm text-gray-900 dark:text-white mt-1"><%= @speciality.specialty %></p>
        </div>
      </div>
    </div>

    <!-- Estatísticas -->
    <div class="ta-card">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Estatísticas</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <span class="ta-label-inline">Profissionais com esta especialização</span>
          <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1"><%= @speciality.professionals.count %></p>
        </div>
        
        <div>
          <span class="ta-label-inline">Especializações relacionadas</span>
          <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1"><%= @speciality.specializations.count %></p>
        </div>
      </div>
    </div>

    <!-- Metadados -->
    <div class="ta-card">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Metadados</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <span class="ta-label-inline">Criado em</span>
          <p class="text-sm text-gray-900 dark:text-white mt-1"><%= l(@speciality.created_at, format: :long) %></p>
        </div>
        
        <div>
          <span class="ta-label-inline">Última atualização</span>
          <p class="text-sm text-gray-900 dark:text-white mt-1"><%= l(@speciality.updated_at, format: :long) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
