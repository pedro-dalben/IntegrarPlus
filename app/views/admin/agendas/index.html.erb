<% content_for :title, "Agendas" %>

<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to new_admin_agenda_path, class: "ta-btn ta-btn-primary inline-flex items-center gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M5 10.0002H15.0006M10.0002 5V15.0006" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Nova Agenda
    <% end %>
  <% end %>

  <div class="space-y-6">

    <!-- Filtros -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">Filtros</h2>
      </div>
      <div class="p-4 sm:p-6">
        <%= form_with url: admin_agendas_path, method: :get, local: true, class: "space-y-4" do |form| %>
          <div class="grid grid-cols-1 gap-5 md:grid-cols-4">
            <div>
              <%= form.label :search, "Buscar", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_field :search,
                    value: params[:search],
                    placeholder: "Buscar por nome ou descrição...",
                    class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
            </div>

            <div>
              <%= form.label :service_type, "Tipo de Serviço", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.select :service_type,
                    options_for_select([
                      ['Todos os tipos', ''],
                      ['Anamnese', 'anamnese'],
                      ['Consulta', 'consulta'],
                      ['Atendimento', 'atendimento'],
                      ['Reunião', 'reuniao'],
                      ['Outro', 'outro']
                    ], params[:service_type]),
                    {},
                    class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
            </div>

            <div>
              <%= form.label :status, "Status", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.select :status,
                    options_for_select([
                      ['Todos os status', ''],
                      ['Rascunho', 'draft'],
                      ['Ativa', 'active'],
                      ['Arquivada', 'archived']
                    ], params[:status]),
                    {},
                    class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
            </div>

            <div class="flex items-end gap-2">
              <%= form.submit "Filtrar", class: "ta-btn ta-btn-primary" %>
              <%= link_to "Limpar", admin_agendas_path, class: "ta-btn ta-btn-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Lista de Agendas -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">Agendas</h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50 dark:bg-gray-800">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Nome</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Tipo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Profissionais</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Slots</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Última Atualização</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-900 dark:divide-gray-700">
          <% if @agendas.any? %>
            <% @agendas.each do |agenda| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full mr-3" style="background-color: <%= agenda.color_theme %>"></div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= link_to agenda.name, admin_agenda_path(agenda), class: "hover:text-blue-600 dark:hover:text-blue-400" %>
                      </div>
                      <% if agenda.unit.present? %>
                        <div class="text-sm text-gray-500 dark:text-gray-400"><%= agenda.unit.name %></div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                    <%= agenda.service_type.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                  <%= agenda.professionals.count %> profissional<%= 'es' if agenda.professionals.count != 1 %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                  <%= agenda.slot_summary %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case agenda.status %>
                  <% when 'draft' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                      Rascunho
                    </span>
                  <% when 'active' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                      Ativa
                    </span>
                  <% when 'archived' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                      Arquivada
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= time_ago_in_words(agenda.updated_at) %> atrás
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to admin_agenda_path(agenda), class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>

                    <%= link_to edit_admin_agenda_path(agenda), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>

                    <% if agenda.status == 'active' %>
                      <%= link_to archive_admin_agenda_path(agenda), method: :patch,
                            class: "text-orange-600 hover:text-orange-900 dark:text-orange-400 dark:hover:text-orange-300",
                            data: { confirm: "Tem certeza que deseja arquivar esta agenda?" } do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l4 4m0 0l4-4m-4 4V3"></path>
                        </svg>
                      <% end %>
                    <% elsif agenda.status == 'archived' %>
                      <%= link_to activate_admin_agenda_path(agenda), method: :patch,
                            class: "text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300",
                            data: { confirm: "Tem certeza que deseja ativar esta agenda?" } do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                      <% end %>
                    <% end %>

                    <%= link_to duplicate_admin_agenda_path(agenda), method: :post,
                          class: "text-purple-600 hover:text-purple-900 dark:text-purple-400 dark:hover:text-purple-300",
                          data: { confirm: "Tem certeza que deseja duplicar esta agenda?" } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                    <% end %>

                    <% if policy(agenda).destroy? %>
                      <%= link_to admin_agenda_path(agenda), method: :delete,
                            class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                            data: { turbo_confirm: "Tem certeza que deseja excluir esta agenda? Esta ação não pode ser desfeita.", turbo_method: :delete } do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                <div class="flex flex-col items-center">
                  <svg class="w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                  <p class="text-lg font-medium text-gray-900 dark:text-white mb-2">Nenhuma agenda encontrada</p>
                  <p class="text-gray-500 dark:text-gray-400 mb-4">Comece criando sua primeira agenda</p>
                  <%= link_to new_admin_agenda_path, class: "ta-btn ta-btn-primary inline-flex items-center gap-2" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M5 10.0002H15.0006M10.0002 5V15.0006" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Nova Agenda
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
<% end %>
