<%= render ::Layouts::AdminComponent.new(title: "Profissionais") do |c| %>
  <% c.with_actions do %>
    <%= link_to new_admin_professional_path, class: "btn btn-primary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Novo Profissional
    <% end %>
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
    <div class="p-6" data-controller="search">
      <!-- Busca -->
      <div class="mb-4">
        <div class="relative">
          <input type="text" 
                 placeholder="Buscar profissionais..." 
                 class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                 data-search-target="input"
                 data-action="input->search#filter">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="overflow-x-auto -mx-1">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-gray-500 border-b" style="border-color: rgb(var(--t-fg) / 0.06)">
              <th class="py-2 pr-2 md:pr-4 font-medium">Nome</th>
              <th class="py-2 pr-2 md:pr-4 font-medium hidden md:table-cell">E-mail</th>
              <th class="py-2 pr-2 md:pr-4 font-medium hidden lg:table-cell">CPF</th>
              <th class="py-2 pr-2 md:pr-4 font-medium hidden xl:table-cell">Telefone</th>
              <th class="py-2 pr-2 md:pr-4 font-medium hidden lg:table-cell">Grupos</th>
              <th class="py-2 pr-2 md:pr-4 font-medium">Status</th>
              <th class="py-2 text-right font-medium">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @professionals.each do |professional| %>
              <tr class="border-b last:border-b-0 hover:bg-gray-50 cursor-pointer" 
                  style="border-color: rgb(var(--t-fg) / 0.06)"
                  data-search-target="row"
                  data-action="click->row#navigate"
                  data-url="<%= admin_professional_path(professional) %>">
                <td class="py-2 pr-2 md:pr-4 font-medium">
                  <div class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                      <span class="text-sm font-medium text-gray-600">
                        <%= professional.full_name.split(' ').map(&:first).join('').upcase[0..1] %>
                      </span>
                    </div>
                    <div>
                      <div class="font-medium"><%= professional.full_name %></div>
                      <div class="text-xs text-gray-500 hidden md:block"><%= professional.email %></div>
                    </div>
                  </div>
                </td>
                <td class="py-2 pr-2 md:pr-4 hidden md:table-cell"><%= professional.email %></td>
                <td class="py-2 pr-2 md:pr-4 hidden lg:table-cell"><%= professional.cpf %></td>
                <td class="py-2 pr-2 md:pr-4 hidden xl:table-cell"><%= professional.phone %></td>
                <td class="py-2 pr-2 md:pr-4 hidden lg:table-cell">
                  <div class="flex flex-wrap gap-1">
                    <% professional.groups.limit(2).each do |group| %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"><%= group.name %></span>
                    <% end %>
                    <% if professional.groups.count > 2 %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">+<%= professional.groups.count - 2 %></span>
                    <% end %>
                  </div>
                </td>
                <td class="py-2 pr-2 md:pr-4">
                  <div class="flex flex-col gap-1">
                    <% if professional.active? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Ativo</span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">Inativo</span>
                    <% end %>
                    <% if professional.confirmed_at? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">Confirmado</span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">Pendente</span>
                    <% end %>
                  </div>
                </td>
                <td class="py-2 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to admin_professional_path(professional), 
                        class: "px-3 py-1.5 text-xs font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600",
                        data: { turbo_frame: "_top" } do %>
                      Ver
                    <% end %>
                    <%= link_to edit_admin_professional_path(professional), 
                        class: "px-3 py-1.5 text-xs font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600" do %>
                      Editar
                    <% end %>
                    <div class="relative" data-controller="dropdown">
                      <button class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600" 
                              data-action="click->dropdown#toggle">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                      </button>
                      <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 hidden"
                           data-dropdown-target="menu">
                        <div class="py-1">
                          <%= button_to "Reenviar confirmação", 
                              resend_confirmation_admin_professional_path(professional),
                              method: :post,
                              class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              data: { confirm: "Reenviar e-mail de confirmação?" } %>
                          <%= button_to "Resetar senha", 
                              send_reset_password_admin_professional_path(professional),
                              method: :post,
                              class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              data: { confirm: "Enviar e-mail de reset de senha?" } %>
                          <%= button_to "Forçar confirmação", 
                              force_confirm_admin_professional_path(professional),
                              method: :post,
                              class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              data: { confirm: "Confirmar profissional manualmente?" } %>
                          <div class="border-t border-gray-100"></div>
                          <%= button_to "Excluir", 
                              admin_professional_path(professional),
                              method: :delete,
                              class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100",
                              data: { confirm: "Tem certeza que deseja excluir este profissional?" } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
