<%= form_with model: [:admin, professional], local: true do |form| %>
  <%= render Alerts::ErrorComponent.new(model: professional, title: "Erro ao salvar profissional") %>

  <!-- Card Principal -->
  <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
      <h2 class="text-lg font-medium text-gray-800 dark:text-white">
        <%= professional.new_record? ? "Novo Profissional" : "Editar Profissional" %>
      </h2>
    </div>

    <div class="p-4 sm:p-6 space-y-8">
      <!-- Dados Pessoais -->
      <div>
        <h3 class="text-md font-medium text-gray-800 dark:text-white mb-4">Dados Pessoais</h3>
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
          <div class="md:col-span-2">
            <%= form.label :full_name, "Nome Completo *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div class="relative">
              <%= form.text_field :full_name,
                  class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :full_name)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :full_name)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "Digite o nome completo",
                  required: true %>
              <%= render_field_error_icon if field_has_error?(professional, :full_name) %>
            </div>
            <%= render_field_error_message(professional, :full_name) %>
          </div>

          <div>
            <%= form.label :birth_date, "Data de Nascimento", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="mask" data-mask-type-value="date">
              <%= form.text_field :birth_date,
                  value: professional.birth_date&.strftime("%d/%m/%Y"),
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "dd/mm/aaaa",
                  data: { mask_target: "input" } %>
            </div>
          </div>

          <div>
            <%= form.label :cpf, "CPF *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div class="relative" data-controller="mask" data-mask-type-value="cpf">
              <%= form.text_field :cpf,
                  class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :cpf)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :cpf)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "000.000.000-00",
                  required: true,
                  data: { mask_target: "input" } %>
              <%= render_field_error_icon if field_has_error?(professional, :cpf) %>
            </div>
            <%= render_field_error_message(professional, :cpf) %>
          </div>

          <div>
            <%= form.label :phone, "Telefone", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div class="relative" data-controller="mask" data-mask-type-value="phone">
              <%= form.text_field :phone,
                  class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :phone)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :phone)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "(00) 00000-0000",
                  data: { mask_target: "input" } %>
              <%= render_field_error_icon if field_has_error?(professional, :phone) %>
            </div>
            <%= render_field_error_message(professional, :phone) %>
          </div>

          <div>
            <%= form.label :email, "E-mail *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div class="relative">
              <%= form.email_field :email,
                  class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :email)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :email)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "exemplo@email.com",
                  required: true %>
              <%= render_field_error_icon if field_has_error?(professional, :email) %>
            </div>
            <%= render_field_error_message(professional, :email) %>
          </div>
        </div>
      </div>

      <!-- Acesso e Status -->
      <div data-controller="contract-fields"
           data-contract-fields-contract-types-value="<%= @contract_types.map { |ct| { id: ct.id, name: ct.name, requires_company: ct.requires_company?, requires_cnpj: ct.requires_cnpj? } }.to_json %>"
           data-contract-fields-current-type-value="<%= professional.contract_type_id %>">
        <h3 class="text-md font-medium text-gray-800 dark:text-white mb-4">Acesso e Status</h3>
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
          <div>
            <div class="flex items-center mb-2">
              <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :active, "Ativo", class: "ml-2 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400">Profissional ativo no sistema</p>
          </div>

          <div>
            <%= form.label :contract_type_id, "Tipo de Contratação", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :contract_type_id,
                @contract_types.map { |ct| [ct.name, ct.id] },
                { prompt: "Selecione o tipo de contratação..." },
                {
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  data: { action: "change->contract-fields#contractTypeChanged" }
                } %>
          </div>

          <div>
            <%= form.label :hired_on, "Data de Contratação", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="mask" data-mask-type-value="date">
              <%= form.text_field :hired_on,
                  value: professional.hired_on&.strftime("%d/%m/%Y"),
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "dd/mm/aaaa",
                  data: { mask_target: "input" } %>
            </div>
          </div>

          <div>
            <%= form.label :workload_hhmm, "Carga Horária (HH:MM)", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="time-hhmm">
              <%= form.text_field :workload_hhmm,
                  value: professional.workload_hhmm,
                  class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                  placeholder: "40:00",
                  data: { time_hhmm_target: "input" } %>
              <%= form.hidden_field :workload_minutes,
                  value: professional.workload_minutes,
                  data: { time_hhmm_target: "hidden" } %>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400">Ex: 40:00 para 40 horas semanais</p>
          </div>

          <div>
            <%= form.label :council_code, "Código do Conselho", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :council_code,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                placeholder: "Digite o código do conselho" %>
          </div>
        </div>

        <!-- Campos condicionais -->
        <div data-contract-fields-target="companyField" class="mt-5" style="display: none;">
          <%= form.label :company_name, "Nome da Empresa", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :company_name,
                class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :company_name)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :company_name)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                placeholder: "Digite o nome da empresa" %>
            <%= render_field_error_icon if field_has_error?(professional, :company_name) %>
          </div>
          <%= render_field_error_message(professional, :company_name) %>
        </div>

        <div data-contract-fields-target="cnpjField" class="mt-5" style="display: none;">
          <%= form.label :cnpj, "CNPJ", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative" data-controller="mask" data-mask-type-value="cnpj">
            <%= form.text_field :cnpj,
                class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(professional, :cnpj)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(professional, :cnpj)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                placeholder: "00.000.000/0000-00",
                data: { mask_target: "input" } %>
            <%= render_field_error_icon if field_has_error?(professional, :cnpj) %>
          </div>
          <%= render_field_error_message(professional, :cnpj) %>
        </div>
      </div>

      <!-- Endereço -->
      <div>
        <h3 class="text-md font-medium text-gray-800 dark:text-white mb-4">Endereço</h3>
        <%= render AddressFormComponent.new(form: form, show_coordinates: true) %>
      </div>

      <!-- Permissões e Competências -->
      <div data-controller="dependent-specializations"
           data-dependent-specializations-endpoint-value="/admin/specializations/by_speciality">
        <h3 class="text-md font-medium text-gray-800 dark:text-white mb-4">Permissões e Competências</h3>
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
          <div>
            <%= form.label :group_ids, "Grupos", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="tom-select">
              <%= form.select :group_ids,
                  @groups.map { |g| [g.name, g.id] },
                  { prompt: "Selecione os grupos..." },
                  {
                    multiple: true,
                    data: {
                      tom_select_target: "select",
                      tom_select_options_value: {
                        plugins: ['remove_button'],
                        placeholder: "Selecione os grupos...",
                        maxItems: nil,
                        create: false
                      }.to_json
                    }
                  } %>
            </div>
          </div>

          <div>
            <%= form.label :speciality_ids, "Especialidades", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="tom-select">
              <%= form.select :speciality_ids,
                  @specialities.map { |s| [s.name, s.id] },
                  { prompt: "Selecione as especialidades..." },
                  {
                    multiple: true,
                    data: {
                      tom_select_target: "select",
                      dependent_specializations_target: "specialitySelect",
                      tom_select_options_value: {
                        plugins: ['remove_button'],
                        placeholder: "Selecione as especialidades...",
                        maxItems: nil,
                        create: false
                      }.to_json
                    }
                  } %>
            </div>
          </div>

          <div class="md:col-span-2">
            <%= form.label :specialization_ids, "Especializações", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <div data-controller="tom-select">
              <%= form.select :specialization_ids,
                  [],
                  { prompt: "Selecione as especializações..." },
                  {
                    multiple: true,
                    data: {
                      tom_select_target: "select",
                      dependent_specializations_target: "specializationSelect",
                      tom_select_options_value: {
                        plugins: ['remove_button'],
                        placeholder: "Selecione as especializações...",
                        maxItems: nil,
                        create: false
                      }.to_json
                    }
                  } %>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400">Especializações disponíveis baseadas nas especialidades selecionadas</p>
          </div>
        </div>
      </div>

      <!-- Ações -->
      <div class="flex flex-col gap-3 sm:flex-row sm:justify-end pt-6 border-t border-gray-200 dark:border-gray-700">
        <%= link_to "Cancelar", admin_professionals_path,
            class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]" %>
        <%= form.submit professional.new_record? ? "Criar Profissional" : "Atualizar Profissional",
            class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" %>
      </div>
    </div>
  </div>
<% end %>
