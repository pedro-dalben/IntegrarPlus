<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Editar Notícia</h1>
      <p class="text-gray-600 mt-2">Atualize as informações da notícia</p>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <%= form_with model: [:admin, @news], local: true, class: "space-y-6" do |form| %>
        <% if @news.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-semibold mb-2">
              <%= pluralize(@news.errors.count, "erro") %> impediram esta notícia de ser salva:
            </h3>
            <ul class="text-red-700 text-sm">
              <% @news.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :title, "Título", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, 
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Digite o título da notícia" %>
        </div>

        <div>
          <%= form.label :content, "Conteúdo", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :content, 
              rows: 8,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Digite o conteúdo da notícia" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :published_at, "Data de Publicação", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :published_at, 
                value: @news.published_at&.strftime("%Y-%m-%dT%H:%M"),
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div class="flex items-center">
            <%= form.check_box :published, 
                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= form.label :published, "Publicar imediatamente", 
                class: "ml-2 text-sm text-gray-700" %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to admin_news_index_path, 
              class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors" do %>
            Cancelar
          <% end %>
          <%= form.submit "Atualizar Notícia", 
              class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


