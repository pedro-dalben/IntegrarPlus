<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_contract_types_path, class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:ring-2 focus:ring-gray-500/20 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700 dark:hover:bg-gray-700" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
      Voltar
    <% end %>
  <% end %>
  <div class="space-y-6">
    <%= form_with model: [:admin, @contract_type], local: true do |form| %>
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Informações do Tipo de Contrato</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <%= form.label :name, "Nome do Tipo de Contrato *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_field :name, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "Ex: CLT, PJ, Autônomo", required: true %>
            </div>
            <div class="md:col-span-2">
              <%= form.label :description, "Descrição *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <%= form.text_area :description, rows: 3, class: "w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-1 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-400", placeholder: "Descreva o propósito deste tipo de contrato...", required: true %>
            </div>
            <div>
              <div class="flex items-center gap-3">
                <%= form.check_box :requires_company, class: "h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-800" %>
                <%= form.label :requires_company, "Requer Empresa", class: "text-sm font-medium text-gray-700 dark:text-gray-400" %>
              </div>
              <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Se marcado, o profissional deverá informar o nome da empresa</p>
            </div>
            <div>
              <div class="flex items-center gap-3">
                <%= form.check_box :requires_cnpj, class: "h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-800" %>
                <%= form.label :requires_cnpj, "Requer CNPJ", class: "text-sm font-medium text-gray-700 dark:text-gray-400" %>
              </div>
              <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Se marcado, o profissional deverá informar o CNPJ da empresa</p>
            </div>
            <div class="md:col-span-2">
              <div class="flex items-center gap-3">
                <%= form.check_box :active, { checked: @contract_type.active.nil? ? true : @contract_type.active }, class: "h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-800" %>
                <%= form.label :active, "Tipo de Contrato Ativo", class: "text-sm font-medium text-gray-700 dark:text-gray-400" %>
              </div>
              <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Tipos de contrato ativos ficam disponíveis para seleção pelos profissionais</p>
            </div>
          </div>
        </div>
        <div class="flex items-center justify-end gap-3">
          <%= link_to "Cancelar", admin_contract_types_path, class: "inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700" %>
          <%= form.submit "Criar Tipo de Contrato", class: "inline-flex items-center justify-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-sm font-medium text-white hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
