<%= render ::Layouts::AdminComponent.new(title: "Tipo de Contrato") do |c| %>
  <% c.with_actions do %>
    <%= link_to edit_admin_contract_type_path(@contract_type), class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M13.5858 3.58579C14.3668 2.80474 15.6332 2.80474 16.4142 3.58579C17.1953 4.36683 17.1953 5.63316 16.4142 6.41421L15.6213 7.20711L12.7929 4.37868L13.5858 3.58579ZM11.3787 5.79289L4 13.1716V16H6.82842L14.2071 8.62132L11.3787 5.79289Z" fill="currentColor"/>
      </svg>
      Editar
    <% end %>
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Informações Básicas -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Informações Básicas</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nome</label>
            <p class="text-sm text-gray-900 dark:text-white"><%= @contract_type.name %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Descrição</label>
            <p class="text-sm text-gray-900 dark:text-white"><%= @contract_type.description || "Nenhuma descrição fornecida" %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
            <% if @contract_type.active? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                Ativo
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                Inativo
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Requisitos -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Requisitos</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Requer Empresa</label>
            <% if @contract_type.requires_company? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                Sim
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                Não
              </span>
            <% end %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Requer CNPJ</label>
            <% if @contract_type.requires_cnpj? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                Sim
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                Não
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Metadados -->
    <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Metadados</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Criado em</label>
          <p class="text-sm text-gray-900 dark:text-white"><%= l(@contract_type.created_at, format: :long) %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Última atualização</label>
          <p class="text-sm text-gray-900 dark:text-white"><%= l(@contract_type.updated_at, format: :long) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
