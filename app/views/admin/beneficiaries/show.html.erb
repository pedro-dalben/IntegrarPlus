<% content_for :title, "Beneficiário - #{@beneficiary.name}" %>

<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_beneficiaries_path, class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  <% end %>

  <div class="space-y-6">
    <%= render 'admin/beneficiaries/requirements_checklist' %>
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">Acessos</h2>
      </div>
      <div>
        <%= render Tabs::AuthorizedTabsComponent.new(
              user: current_user,
              resource: @beneficiary,
              tabs: [
                { key: 'overview', title: 'Beneficiário', partial: 'admin/beneficiaries/tabs/overview', locals: { beneficiary: @beneficiary } },
                { key: 'anamnesis', title: 'Anamnese', partial: 'admin/beneficiaries/tabs/anamnesis', locals: { beneficiary: @beneficiary } },
                { key: 'professionals', title: 'Profissionais', partial: 'admin/beneficiaries/tabs/professionals', locals: { beneficiary: @beneficiary } },
                { key: 'chat', title: 'Chat', partial: 'admin/beneficiaries/tabs/chat', locals: { beneficiary: @beneficiary } },
                { key: 'tickets', title: 'Chamados', partial: 'admin/beneficiaries/tabs/tickets', locals: { beneficiary: @beneficiary } }
              ],
              initial_key: params[:tab] || 'overview'
            ) %>
      </div>
    </div>
  </div>
<% end %>
