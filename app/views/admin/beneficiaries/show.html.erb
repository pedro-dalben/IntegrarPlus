<% content_for :title, "Beneficiário - #{@beneficiary.name}" %>

<div class="ta-content-wrapper">
  <div class="ta-content-header">
    <div class="ta-content-header-left">
      <h1 class="ta-content-title"><%= @beneficiary.name %></h1>
      <p class="ta-content-subtitle">Código: <%= @beneficiary.integrar_code %></p>
    </div>
    <div class="ta-content-header-right">
      <%= link_to admin_beneficiaries_path, class: "ta-btn ta-btn-secondary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      
      <% if current_user.permit?('beneficiaries.edit') %>
        <%= link_to edit_admin_beneficiary_path(@beneficiary), class: "ta-btn ta-btn-primary" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Editar
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <!-- Informações Pessoais -->
      <div class="ta-card">
        <div class="ta-card-header">
          <h3 class="ta-card-title">Informações Pessoais</h3>
        </div>
        <div class="ta-card-body">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="ta-form-label">Nome Completo</label>
              <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.name %></p>
            </div>
            <div>
              <label class="ta-form-label">Data de Nascimento</label>
              <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.birth_date.strftime("%d/%m/%Y") %></p>
            </div>
            <div>
              <label class="ta-form-label">Idade</label>
              <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.age %> anos</p>
            </div>
            <div>
              <label class="ta-form-label">CPF</label>
              <p class="text-gray-900 dark:text-gray-100 font-mono"><%= @beneficiary.cpf %></p>
            </div>
            <div>
              <label class="ta-form-label">Código Integrar</label>
              <p class="text-gray-900 dark:text-gray-100 font-mono text-lg font-semibold"><%= @beneficiary.integrar_code %></p>
            </div>
            <div>
              <label class="ta-form-label">Status</label>
              <span class="<%= @beneficiary.status_badge_class %>">
                <%= @beneficiary.status_label %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Contato -->
      <div class="ta-card">
        <div class="ta-card-header">
          <h3 class="ta-card-title">Informações de Contato</h3>
        </div>
        <div class="ta-card-body">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if @beneficiary.phone.present? %>
              <div>
                <label class="ta-form-label">Telefone</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.formatted_phone %></p>
              </div>
            <% end %>
            
            <% if @beneficiary.secondary_phone.present? %>
              <div>
                <label class="ta-form-label">Telefone Secundário</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.secondary_phone %></p>
              </div>
            <% end %>
            
            <% if @beneficiary.email.present? %>
              <div>
                <label class="ta-form-label">E-mail</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.email %></p>
              </div>
            <% end %>
            
            <% if @beneficiary.secondary_email.present? %>
              <div>
                <label class="ta-form-label">E-mail Secundário</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.secondary_email %></p>
              </div>
            <% end %>
            
            <% if @beneficiary.whatsapp_number.present? %>
              <div>
                <label class="ta-form-label">WhatsApp</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.whatsapp_number %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Endereço -->
      <% if @beneficiary.address.present? %>
        <div class="ta-card">
          <div class="ta-card-header">
            <h3 class="ta-card-title">Endereço</h3>
          </div>
          <div class="ta-card-body">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="md:col-span-2">
                <label class="ta-form-label">Endereço Completo</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.full_address %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Responsável -->
      <% if @beneficiary.responsible_name.present? %>
        <div class="ta-card">
          <div class="ta-card-header">
            <h3 class="ta-card-title">Responsável</h3>
          </div>
          <div class="ta-card-body">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="ta-form-label">Nome do Responsável</label>
                <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.responsible_name %></p>
              </div>
              <% if @beneficiary.relationship.present? %>
                <div>
                  <label class="ta-form-label">Parentesco</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.relationship %></p>
                </div>
              <% end %>
              <% if @beneficiary.responsible_phone.present? %>
                <div>
                  <label class="ta-form-label">Telefone do Responsável</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.formatted_responsible_phone %></p>
                </div>
              <% end %>
              <% if @beneficiary.responsible_cpf.present? %>
                <div>
                  <label class="ta-form-label">CPF do Responsável</label>
                  <p class="text-gray-900 dark:text-gray-100 font-mono"><%= @beneficiary.responsible_cpf %></p>
                </div>
              <% end %>
              <% if @beneficiary.responsible_profession.present? %>
                <div>
                  <label class="ta-form-label">Profissão do Responsável</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.responsible_profession %></p>
                </div>
              <% end %>
              <% if @beneficiary.family_income.present? %>
                <div>
                  <label class="ta-form-label">Renda Familiar</label>
                  <p class="text-gray-900 dark:text-gray-100">R$ <%= number_with_precision(@beneficiary.family_income, precision: 2, delimiter: '.') %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Dados Escolares -->
      <% if @beneficiary.attends_school? %>
        <div class="ta-card">
          <div class="ta-card-header">
            <h3 class="ta-card-title">Dados Escolares</h3>
          </div>
          <div class="ta-card-body">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="ta-form-label">Frequenta Escola</label>
                <p class="text-gray-900 dark:text-gray-100">Sim</p>
              </div>
              <% if @beneficiary.school_name.present? %>
                <div>
                  <label class="ta-form-label">Nome da Escola</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.school_name %></p>
                </div>
              <% end %>
              <% if @beneficiary.school_period.present? %>
                <div>
                  <label class="ta-form-label">Período</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.school_period.humanize %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Dados de Saúde -->
      <% if @beneficiary.health_plan.present? || @beneficiary.health_card_number.present? || @beneficiary.allergies.present? || @beneficiary.continuous_medications.present? || @beneficiary.special_conditions.present? %>
        <div class="ta-card">
          <div class="ta-card-header">
            <h3 class="ta-card-title">Dados de Saúde</h3>
          </div>
          <div class="ta-card-body">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% if @beneficiary.health_plan.present? %>
                <div>
                  <label class="ta-form-label">Plano de Saúde</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.health_plan %></p>
                </div>
              <% end %>
              <% if @beneficiary.health_card_number.present? %>
                <div>
                  <label class="ta-form-label">Número da Carteirinha</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.health_card_number %></p>
                </div>
              <% end %>
              <% if @beneficiary.allergies.present? %>
                <div class="md:col-span-2">
                  <label class="ta-form-label">Alergias</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.allergies %></p>
                </div>
              <% end %>
              <% if @beneficiary.continuous_medications.present? %>
                <div class="md:col-span-2">
                  <label class="ta-form-label">Medicamentos de Uso Contínuo</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.continuous_medications %></p>
                </div>
              <% end %>
              <% if @beneficiary.special_conditions.present? %>
                <div class="md:col-span-2">
                  <label class="ta-form-label">Condições Especiais</label>
                  <p class="text-gray-900 dark:text-gray-100"><%= @beneficiary.special_conditions %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Informações Gerais -->
      <div class="ta-card">
        <div class="ta-card-header">
          <h3 class="ta-card-title">Informações</h3>
        </div>
        <div class="ta-card-body">
          <div class="space-y-4">
            <div>
              <label class="ta-form-label">Criado em</label>
              <p class="text-gray-900 dark:text-gray-100">
                <%= @beneficiary.created_at.strftime("%d/%m/%Y às %H:%M") %>
              </p>
            </div>
            
            <% if @beneficiary.updated_at != @beneficiary.created_at %>
              <div>
                <label class="ta-form-label">Atualizado em</label>
                <p class="text-gray-900 dark:text-gray-100">
                  <%= @beneficiary.updated_at.strftime("%d/%m/%Y às %H:%M") %>
                </p>
              </div>
            <% end %>

            <% if @beneficiary.treatment_start_date.present? %>
              <div>
                <label class="ta-form-label">Início do Atendimento</label>
                <p class="text-gray-900 dark:text-gray-100">
                  <%= @beneficiary.treatment_start_date.strftime("%d/%m/%Y") %>
                </p>
              </div>
            <% end %>

            <% if @beneficiary.treatment_end_date.present? %>
              <div>
                <label class="ta-form-label">Fim do Atendimento</label>
                <p class="text-gray-900 dark:text-gray-100">
                  <%= @beneficiary.treatment_end_date.strftime("%d/%m/%Y") %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Anamneses -->
      <div class="ta-card">
        <div class="ta-card-header">
          <h3 class="ta-card-title">Anamneses</h3>
        </div>
        <div class="ta-card-body">
          <% if @beneficiary.anamneses.any? %>
            <div class="space-y-3">
              <% @beneficiary.anamneses.order(created_at: :desc).limit(5).each do |anamnesis| %>
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-900 dark:text-gray-100">
                        <%= anamnesis.performed_at.strftime("%d/%m/%Y") %>
                      </p>
                      <p class="text-xs text-gray-500 dark:text-gray-400">
                        <%= anamnesis.professional_name %>
                      </p>
                    </div>
                    <span class="<%= anamnesis.status_badge_class %> text-xs">
                      <%= anamnesis.status_label %>
                    </span>
                  </div>
                </div>
              <% end %>
              
              <% if @beneficiary.anamneses.count > 5 %>
                <p class="text-xs text-gray-500 text-center">
                  E mais <%= @beneficiary.anamneses.count - 5 %> anamneses...
                </p>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              Nenhuma anamnese registrada
            </p>
          <% end %>
        </div>
      </div>

      <!-- Ações -->
      <div class="ta-card">
        <div class="ta-card-header">
          <h3 class="ta-card-title">Ações</h3>
        </div>
        <div class="ta-card-body">
          <div class="space-y-3">
            <% if current_user.permit?('beneficiaries.edit') %>
              <%= link_to edit_admin_beneficiary_path(@beneficiary), class: "ta-btn ta-btn-primary w-full" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Editar Beneficiário
              <% end %>
            <% end %>

            <% if current_user.permit?('anamneses.create') %>
              <%= link_to new_admin_beneficiary_anamnesis_path(@beneficiary), class: "ta-btn ta-btn-success w-full" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Nova Anamnese
              <% end %>
            <% end %>

            <%= link_to admin_anamneses_path(beneficiary_id: @beneficiary.id), class: "ta-btn ta-btn-secondary w-full" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Ver Anamneses
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
