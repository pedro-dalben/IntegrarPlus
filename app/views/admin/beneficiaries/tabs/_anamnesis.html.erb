<div class="space-y-4">
  <% anamnesis = beneficiary.anamneses.order(created_at: :asc).first %>
  <% if anamnesis.present? %>
    <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-3">
      <div class="flex items-center justify-between mb-2">
        <div>
          <p class="text-sm font-medium text-gray-800 dark:text-white">
            <%= anamnesis.performed_at.strftime("%d/%m/%Y") %>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            <%= anamnesis.professional_name %>
          </p>
        </div>
        <span class="<%= anamnesis.status_badge_class %> text-xs">
          <%= anamnesis.status_label %>
        </span>
      </div>

      <% if anamnesis.versions.any? %>
        <div class="mt-2 pt-2 border-t border-gray-200 dark:border-gray-700">
          <p class="text-xs font-semibold text-gray-700 dark:text-gray-300 mb-1">Alterações:</p>
          <div class="space-y-1">
            <% anamnesis.versions.order(created_at: :desc).limit(5).each do |version| %>
              <div class="text-xs text-gray-600 dark:text-gray-400">
                <span class="font-medium"><%= version.event.humanize %></span>
                <% if version.whodunnit.present? %>
                  por <%= User.find_by(id: version.whodunnit)&.full_name || 'Usuário removido' %>
                <% end %>
                em <%= version.created_at.strftime("%d/%m/%Y às %H:%M") %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 dark:text-gray-400">Nenhuma anamnese registrada.</p>
  <% end %>
</div>
