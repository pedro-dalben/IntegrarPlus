<%
  time_ago = Time.current - message.created_at
  time_ago_text = if time_ago < 60
    "há menos de 1 minuto"
  elsif time_ago < 3600
    "há #{(time_ago / 60).to_i} #{'minuto'.pluralize((time_ago / 60).to_i)}"
  elsif time_ago < 86400
    "há #{(time_ago / 3600).to_i} #{'hora'.pluralize((time_ago / 3600).to_i)}"
  else
    "há #{(time_ago / 86400).to_i} #{'dia'.pluralize((time_ago / 86400).to_i)}"
  end

  is_read = local_assigns.fetch(:current_user, nil) ? message.read_by?(local_assigns[:current_user]) : false
  is_own_message = local_assigns.fetch(:current_user, nil) ? message.user_id == local_assigns[:current_user].id : false
  all_readers = message.beneficiary_chat_message_reads.includes(:user).where.not(user_id: message.user_id).order(read_at: :desc)
  readers = all_readers.map(&:user).uniq
%>
<div id="<%= dom_id(message) %>"
     data-message-id="<%= message.id %>"
     data-message-user-id="<%= message.user_id.to_s %>"
     data-read-status="<%= is_read ? 'read' : 'unread' %>"
     class="chat-message mb-4 max-w-[80%] <%= 'unread-message' unless is_read %>">
  <div class="flex items-start gap-4">
    <div class="h-10 w-10 rounded-full bg-brand-500 flex items-center justify-center flex-shrink-0 message-avatar">
      <span class="text-white font-semibold text-xs"><%= message.user.full_name.first.upcase %></span>
    </div>
    <div class="flex-1 message-content">
      <div class="rounded-lg rounded-tl-sm bg-gray-100 px-3 py-2 dark:bg-white/5 message-bubble">
        <p class="text-sm text-gray-800 dark:text-white/90 whitespace-pre-wrap"><%= message.content %></p>
      </div>
      <div class="mt-2 flex items-center justify-between gap-2">
        <p class="text-xs text-gray-500 dark:text-gray-400 message-timestamp">
          <%= message.user.full_name %>, <%= time_ago_text %>
        </p>
        <% if is_own_message && readers.any? %>
          <div class="group relative flex items-center gap-1 cursor-pointer">
            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-xs text-gray-400"><%= readers.count %></span>

            <div class="invisible absolute bottom-full right-0 mb-2 z-50 w-max max-w-[250px] opacity-0 transition-opacity duration-200 group-hover:visible group-hover:opacity-100">
              <div class="relative rounded-lg bg-white shadow-lg dark:bg-[#1E2634] border border-gray-200 dark:border-gray-700">
                <div class="absolute -bottom-1 right-4 h-3 w-3 rotate-45 bg-white dark:bg-[#1E2634] border-r border-b border-gray-200 dark:border-gray-700"></div>
                <div class="p-3">
                  <p class="text-xs font-semibold text-gray-800 dark:text-white mb-2">Lido por:</p>
                  <div class="space-y-1.5 max-h-[200px] overflow-y-auto custom-scrollbar">
                    <% all_readers.each do |read_record| %>
                      <% reader_user = read_record.user %>
                      <div class="flex items-center gap-2 text-xs text-gray-600 dark:text-gray-300">
                        <div class="h-6 w-6 rounded-full bg-brand-500 flex items-center justify-center flex-shrink-0">
                          <span class="text-white font-semibold text-[10px]"><%= reader_user.full_name.first.upcase %></span>
                        </div>
                        <div class="flex-1 min-w-0">
                          <p class="font-medium text-gray-800 dark:text-white truncate"><%= reader_user.full_name %></p>
                          <p class="text-[10px] text-gray-500 dark:text-gray-400">
                            <%= distance_of_time_in_words(read_record.read_at, Time.current, include_seconds: false) %> atrás
                          </p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
