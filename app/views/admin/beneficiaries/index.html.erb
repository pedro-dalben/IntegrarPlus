<% content_for :title, "Beneficiários" %>

<div class="ta-content-wrapper">
  <div class="ta-content-header">
    <div class="ta-content-header-left">
      <h1 class="ta-content-title">Beneficiários</h1>
      <p class="ta-content-subtitle">Gerencie os beneficiários do sistema</p>
    </div>
    <div class="ta-content-header-right">
      <% if current_user.permit?('beneficiaries.create') %>
        <%= link_to new_admin_beneficiary_path, class: "ta-btn ta-btn-primary" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Novo Beneficiário
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Filtros -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Filtros</h3>
    </div>
    <div class="ta-card-body">
      <%= form_with url: admin_beneficiaries_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
        <div>
          <%= form.label :query, "Buscar", class: "ta-form-label" %>
          <%= form.text_field :query, value: params[:query], placeholder: "Nome, CPF, código...", class: "ta-form-input" %>
        </div>
        
        <div>
          <%= form.label :status, "Status", class: "ta-form-label" %>
          <%= form.select :status, 
              options_for_select([
                ['Todos', ''],
                ['Ativo', 'ativo'],
                ['Inativo', 'inativo'],
                ['Suspenso', 'suspenso'],
                ['Transferido', 'transferido']
              ], params[:status]), 
              {}, 
              { class: "ta-form-select" } %>
        </div>

        <div>
          <%= form.label :age_range, "Faixa Etária", class: "ta-form-label" %>
          <%= form.select :age_range, 
              options_for_select([
                ['Todas as idades', ''],
                ['0-5 anos', '0-5'],
                ['6-12 anos', '6-12'],
                ['13-18 anos', '13-18'],
                ['19+ anos', '19+']
              ], params[:age_range]), 
              {}, 
              { class: "ta-form-select" } %>
        </div>

        <div class="flex items-end">
          <%= form.submit "Filtrar", class: "ta-btn ta-btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Lista de Beneficiários -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Lista de Beneficiários</h3>
      <div class="ta-card-header-right">
        <span class="ta-badge ta-badge-secondary">
          <%= @pagy.count %> beneficiários encontrados
        </span>
      </div>
    </div>
    <div class="ta-card-body">
      <% if @beneficiaries.any? %>
        <div class="overflow-x-auto">
          <table class="ta-table">
            <thead>
              <tr>
                <th class="ta-table-th">Beneficiário</th>
                <th class="ta-table-th">Idade</th>
                <th class="ta-table-th">CPF</th>
                <th class="ta-table-th">Código</th>
                <th class="ta-table-th">Status</th>
                <th class="ta-table-th">Responsável</th>
                <th class="ta-table-th">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @beneficiaries.each do |beneficiary| %>
                <tr class="ta-table-tr">
                  <td class="ta-table-td">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900 dark:text-gray-100">
                          <%= beneficiary.name %>
                        </div>
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                          <%= beneficiary.birth_date.strftime("%d/%m/%Y") %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="ta-table-td">
                    <div class="text-sm text-gray-900 dark:text-gray-100">
                      <%= beneficiary.age %> anos
                    </div>
                  </td>
                  <td class="ta-table-td">
                    <div class="text-sm text-gray-900 dark:text-gray-100 font-mono">
                      <%= beneficiary.cpf %>
                    </div>
                  </td>
                  <td class="ta-table-td">
                    <div class="text-sm text-gray-900 dark:text-gray-100 font-mono">
                      <%= beneficiary.integrar_code %>
                    </div>
                  </td>
                  <td class="ta-table-td">
                    <span class="<%= beneficiary.status_badge_class %>">
                      <%= beneficiary.status_label %>
                    </span>
                  </td>
                  <td class="ta-table-td">
                    <div class="text-sm text-gray-900 dark:text-gray-100">
                      <%= beneficiary.responsible_name %>
                    </div>
                    <% if beneficiary.responsible_phone.present? %>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <%= beneficiary.formatted_responsible_phone %>
                      </div>
                    <% end %>
                  </td>
                  <td class="ta-table-td">
                    <div class="flex items-center gap-2">
                      <%= link_to admin_beneficiary_path(beneficiary), class: "ta-btn ta-btn-sm ta-btn-secondary", title: "Ver detalhes" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>

                      <% if current_user.permit?('beneficiaries.edit') %>
                        <%= link_to edit_admin_beneficiary_path(beneficiary), class: "ta-btn ta-btn-sm ta-btn-primary", title: "Editar" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                      <% end %>

                      <% if current_user.permit?('anamneses.create') %>
                        <%= link_to new_admin_beneficiary_anamnesis_path(beneficiary), class: "ta-btn ta-btn-sm ta-btn-success", title: "Nova anamnese" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Paginação -->
        <% if @pagy.pages > 1 %>
          <div class="mt-6">
            <%= render 'shared/pagination', pagy: @pagy %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">Nenhum beneficiário encontrado</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            <% if params[:query].present? || params[:status].present? || params[:age_range].present? %>
              Tente ajustar os filtros para encontrar beneficiários.
            <% else %>
              Comece criando um novo beneficiário.
            <% end %>
          </p>
          <% if current_user.permit?('beneficiaries.create') && !params[:query].present? && !params[:status].present? && !params[:age_range].present? %>
            <div class="mt-6">
              <%= link_to new_admin_beneficiary_path, class: "ta-btn ta-btn-primary" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Novo Beneficiário
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
