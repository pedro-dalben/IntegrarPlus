          <%= form.text_area :continuous_medications, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", rows: 3, placeholder: "Liste os medicamentos de uso contínuo" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :special_conditions, "Condições Especiais", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_area :special_conditions, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", rows: 3, placeholder: "Descreva condições especiais ou necessidades" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Status -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Status</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :status, "Status", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.select :status,
              options_for_select([
                ['Ativo', 'ativo'],
                ['Inativo', 'inativo'],
                ['Suspenso', 'suspenso'],
                ['Transferido', 'transferido']
              ], beneficiary.status || 'ativo'),
              {},
              { class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" } %>
        </div>

        <div>
          <%= form.label :treatment_start_date, "Data de Início do Atendimento", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.date_field :treatment_start_date, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :treatment_end_date, "Data de Fim do Atendimento", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.date_field :treatment_end_date, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :medical_record_number, "Número do Prontuário", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :medical_record_number, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :inactivation_reason, "Motivo da Inativação", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_area :inactivation_reason, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", rows: 3, placeholder: "Descreva o motivo da inativação (se aplicável)" %>
        </div>
      </div>
    </div>
  </div>

    <!-- Botões de Ação -->
    <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
      <%= link_to "Cancelar", admin_beneficiaries_path,
          class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]" %>
      <%= form.submit beneficiary.persisted? ? "Atualizar Beneficiário" : "Criar Beneficiário",
          class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" %>
    </div>
    </div>
  </div>
<% end %>
