<%= form_with model: [:admin, beneficiary], local: true do |form| %>
  <%= render Alerts::ErrorComponent.new(model: beneficiary, title: "Erro ao salvar beneficiário") %>

  <!-- Card Principal -->
  <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
      <h2 class="text-lg font-medium text-gray-800 dark:text-white">
        <%= beneficiary.new_record? ? "Novo Beneficiário" : "Editar Beneficiário" %>
      </h2>
    </div>

    <div class="p-4 sm:p-6 space-y-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, "Nome Completo", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :name, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :name)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :name)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :name) %>
          </div>
          <%= render_field_error_message(beneficiary, :name) %>
        </div>

        <div>
          <%= form.label :birth_date, "Data de Nascimento", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.date_field :birth_date, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :birth_date)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :birth_date)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :birth_date) %>
          </div>
          <%= render_field_error_message(beneficiary, :birth_date) %>
        </div>

        <div>
          <%= form.label :cpf, "CPF", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :cpf, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :cpf)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :cpf)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true, placeholder: "000.000.000-00" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :cpf) %>
          </div>
          <%= render_field_error_message(beneficiary, :cpf) %>
        </div>

        <div>
          <%= form.label :integrar_code, "Código Integrar", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :integrar_code, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", readonly: true, placeholder: "Será gerado automaticamente" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Contato -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Informações de Contato</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :phone, "Telefone", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :phone, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :phone)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :phone)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :phone) %>
          </div>
          <%= render_field_error_message(beneficiary, :phone) %>
        </div>

        <div>
          <%= form.label :secondary_phone, "Telefone Secundário", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :secondary_phone, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :secondary_phone)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :secondary_phone)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :secondary_phone) %>
          </div>
          <%= render_field_error_message(beneficiary, :secondary_phone) %>
        </div>

        <div>
          <%= form.label :email, "E-mail", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.email_field :email, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :email)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :email)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "email@exemplo.com" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :email) %>
          </div>
          <%= render_field_error_message(beneficiary, :email) %>
        </div>

        <div>
          <%= form.label :secondary_email, "E-mail Secundário", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.email_field :secondary_email, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :secondary_email)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :secondary_email)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "email2@exemplo.com" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :secondary_email) %>
          </div>
          <%= render_field_error_message(beneficiary, :secondary_email) %>
        </div>

        <div>
          <%= form.label :whatsapp_number, "WhatsApp", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :whatsapp_number, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :whatsapp_number)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :whatsapp_number)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :whatsapp_number) %>
          </div>
          <%= render_field_error_message(beneficiary, :whatsapp_number) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Endereço -->
