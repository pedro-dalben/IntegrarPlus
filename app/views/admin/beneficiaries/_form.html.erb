<%= form_with model: [:admin, beneficiary], local: true do |form| %>
  <%= render Alerts::ErrorComponent.new(model: beneficiary, title: "Erro ao salvar beneficiário") %>

  <!-- Card Principal -->
  <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
      <div class="flex items-start justify-between gap-3">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">
          <%= beneficiary.new_record? ? "Novo Beneficiário" : "Editar Beneficiário" %>
        </h2>
        <p class="text-xs text-gray-500 dark:text-gray-400">Campos com * são obrigatórios</p>
      </div>
    </div>

    <div class="p-4 sm:p-6 space-y-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, "Nome Completo *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.text_field :name, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :name)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :name)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :name) %>
          </div>
          <%= render_field_error_message(beneficiary, :name) %>
        </div>

        <div>
          <%= form.label :birth_date, "Data de Nascimento *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.date_field :birth_date, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :birth_date)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :birth_date)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :birth_date) %>
          </div>
          <%= render_field_error_message(beneficiary, :birth_date) %>
        </div>

        <div>
          <%= form.label :cpf, "CPF *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative" data-controller="mask" data-mask-type-value="cpf">
            <%= form.text_field :cpf, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :cpf)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :cpf)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", required: true, placeholder: "000.000.000-00", data: { mask_target: "input" } %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :cpf) %>
          </div>
          <%= render_field_error_message(beneficiary, :cpf) %>
        </div>

        <% unless beneficiary.new_record? %>
          <div>
            <%= form.label :integrar_code, "Código Integrar", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <p class="h-11 w-full rounded-lg border border-gray-200 bg-gray-50 px-4 py-2.5 text-sm text-gray-600 dark:border-gray-700 dark:bg-gray-900 dark:text-white/70">
              <%= beneficiary.integrar_code %>
            </p>
            <%= form.hidden_field :integrar_code %>
          </div>
        <% else %>
          <%= form.hidden_field :integrar_code %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Contato -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Informações de Contato</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :phone, "Telefone", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative" data-controller="mask" data-mask-type-value="phone">
            <%= form.text_field :phone, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :phone)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :phone)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999", data: { mask_target: "input" } %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :phone) %>
          </div>
          <%= render_field_error_message(beneficiary, :phone) %>
        </div>

        <div>
          <%= form.label :secondary_phone, "Telefone Secundário", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative" data-controller="mask" data-mask-type-value="phone">
            <%= form.text_field :secondary_phone, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :secondary_phone)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :secondary_phone)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999", data: { mask_target: "input" } %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :secondary_phone) %>
          </div>
          <%= render_field_error_message(beneficiary, :secondary_phone) %>
        </div>

        <div>
          <%= form.label :email, "E-mail", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.email_field :email, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :email)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :email)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "email@exemplo.com" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :email) %>
          </div>
          <%= render_field_error_message(beneficiary, :email) %>
        </div>

        <div>
          <%= form.label :secondary_email, "E-mail Secundário", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative">
            <%= form.email_field :secondary_email, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :secondary_email)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :secondary_email)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "email2@exemplo.com" %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :secondary_email) %>
          </div>
          <%= render_field_error_message(beneficiary, :secondary_email) %>
        </div>

        <div>
          <%= form.label :whatsapp_number, "WhatsApp", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div class="relative" data-controller="mask" data-mask-type-value="phone">
            <%= form.text_field :whatsapp_number, class: "dark:bg-dark-900 shadow-theme-xs #{field_error_class(beneficiary, :whatsapp_number)} h-11 w-full rounded-lg border bg-transparent px-4 #{'pr-10' if field_has_error?(beneficiary, :whatsapp_number)} py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999", data: { mask_target: "input" } %>
            <%= render_field_error_icon if field_has_error?(beneficiary, :whatsapp_number) %>
          </div>
          <%= render_field_error_message(beneficiary, :whatsapp_number) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Endereço -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Endereço</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
          <%= form.label :address, "Endereço", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :address, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "Rua, Avenida, etc." %>
        </div>

        <div>
          <%= form.label :address_number, "Número", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :address_number, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "123" %>
        </div>

        <div>
          <%= form.label :address_complement, "Complemento", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :address_complement, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "Apto, Bloco, etc." %>
        </div>

        <div>
          <%= form.label :neighborhood, "Bairro", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :neighborhood, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :city, "Cidade", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :city, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :state, "Estado", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :state, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "SP" %>
        </div>

        <div data-controller="mask" data-mask-type-value="custom" data-mask-options-value='{"mask":"00000-000","lazy":false}'>
          <%= form.label :zip_code, "CEP", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :zip_code, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "00000-000", data: { mask_target: "input" } %>
        </div>

        <div>
          <%= form.label :address_reference, "Referência", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :address_reference, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "Ponto de referência" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Responsável -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Responsável</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :responsible_name, "Nome do Responsável", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :responsible_name, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :relationship, "Parentesco", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.select :relationship,
              options_for_select([
                ['Selecione...', ''],
                ['Pai', 'pai'],
                ['Mãe', 'mae'],
                ['Avô', 'avo'],
                ['Avó', 'ava'],
                ['Tio(a)', 'tio'],
                ['Irmão(ã)', 'irmao'],
                ['Outro', 'outro']
              ], beneficiary.relationship),
              {},
              { class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" } %>
        </div>

        <div>
          <%= form.label :responsible_phone, "Telefone do Responsável", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div data-controller="mask" data-mask-type-value="phone">
            <%= form.text_field :responsible_phone, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "(11) 99999-9999", data: { mask_target: "input" } %>
          </div>
        </div>

        <div>
          <%= form.label :responsible_cpf, "CPF do Responsável", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <div data-controller="mask" data-mask-type-value="cpf">
            <%= form.text_field :responsible_cpf, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", placeholder: "000.000.000-00", data: { mask_target: "input" } %>
          </div>
        </div>

        <div>
          <%= form.label :responsible_profession, "Profissão do Responsável", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :responsible_profession, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :family_income, "Renda Familiar", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.number_field :family_income, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30", step: 0.01, placeholder: "0.00" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Dados Escolares -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Dados Escolares</h3>
    </div>
    <div class="px-6 py-4">
      <div class="space-y-4" data-controller="toggle-fields">
        <div>
          <%= form.label :attends_school, class: "flex items-center gap-2" do %>
            <%= form.check_box :attends_school,
                class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 rounded",
                data: {
                  toggle_fields_target: "trigger",
                  action: "change->toggle-fields#update"
                } %>
            <span class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">Frequenta escola?</span>
          <% end %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4"
             data-toggle-fields-target="content"
             style="<%= 'display: none;' unless beneficiary.attends_school? %>">
          <div>
            <%= form.label :school_name, "Nome da Escola", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= render Ui::SchoolSearchComponent.new(
                  form: form,
                  field_name: :school_name,
                  placeholder: "Digite o nome da escola para buscar...",
                  value: beneficiary.school_name
                ) %>
          </div>
          <div>
            <%= form.label :school_period, "Período", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :school_period,
                options_for_select([
                  ['Selecione...', ''],
                  ['Manhã', 'manha'],
                  ['Tarde', 'tarde'],
                  ['Integral', 'integral']
                ], beneficiary.school_period),
                {},
                { class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Dados de Saúde -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Dados de Saúde</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :external_user_id, "Operadora", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.select :external_user_id,
              options_for_select([['Selecione...', '']] + ExternalUser.active.order(:company_name).map { |op| [op.company_name, op.id] }, beneficiary.external_user_id),
              {},
              { class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" } %>
        </div>

        <div>
          <%= form.label :plan_name, "Nome do Plano", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :plan_name, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :card_code, "Código da Carteirinha", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.text_field :card_code, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>

        <div>
          <%= form.label :tipo_convenio, "Tipo de Convênio", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
          <%= form.select :tipo_convenio,
              options_for_select([
                ['Selecione...', ''],
                ['Particular', 'particular'],
                ['Empresarial', 'empresarial'],
                ['Familiar', 'familiar']
              ], beneficiary.tipo_convenio),
              {},
