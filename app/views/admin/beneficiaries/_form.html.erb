      <h3 class="text-lg font-medium text-gray-900">Dados de Saúde</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :health_plan, "Plano de Saúde", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
