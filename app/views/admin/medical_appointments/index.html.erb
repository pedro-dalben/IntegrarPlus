<% content_for :title, "Consultas Médicas" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Consultas Médicas</h1>
    <p class="text-gray-600">Gerencie todas as consultas médicas do sistema</p>
  </div>
  <div class="flex gap-3">
    <%= link_to "Relatórios", reports_admin_medical_appointments_path, class: "ta-btn ta-btn-secondary" %>
    <%= link_to "Nova Consulta", new_admin_medical_appointment_path, class: "ta-btn ta-btn-primary" %>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
  <div class="p-6">
    <%= form_with url: admin_medical_appointments_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |form| %>
      <div>
        <%= form.label :professional, "Profissional", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :professional, options_from_collection_for_select(@professionals, :id, :name, params[:professional]),
                        { prompt: "Todos os profissionais" },
                        { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :appointment_type, "Tipo de Consulta", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :appointment_type, options_for_select(@appointment_types.map { |type| [type.humanize, type] }, params[:appointment_type]),
                        { prompt: "Todos os tipos" },
                        { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status, options_for_select(@statuses.map { |status| [status.humanize, status] }, params[:status]),
                        { prompt: "Todos os status" },
                        { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :priority, "Prioridade", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :priority, options_for_select(@priorities.map { |priority| [priority.humanize, priority] }, params[:priority]),
                        { prompt: "Todas as prioridades" },
                        { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :date, "Data", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :date, value: params[:date],
                           class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="md:col-span-5 flex gap-3">
        <%= form.submit "Filtrar", class: "ta-btn ta-btn-primary" %>
        <%= link_to "Limpar", admin_medical_appointments_path, class: "ta-btn ta-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paciente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Profissional</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data/Hora</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prioridade</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @medical_appointments.each do |appointment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700">
                      <%= appointment.patient&.name&.first&.upcase || 'N/A' %>
                    </span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= appointment.patient&.name || 'Não informado' %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= appointment.patient&.email || 'N/A' %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= appointment.professional.name %>
              </div>
              <div class="text-sm text-gray-500">
                <%= appointment.agenda.name %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <i class="fas fa-<%= appointment.type_icon %> text-<%= appointment.type_color %>-500 mr-2"></i>
                <span class="text-sm text-gray-900">
                  <%= appointment.appointment_type.humanize %>
                </span>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                <%= appointment.scheduled_at.strftime('%d/%m/%Y') %>
              </div>
              <div class="text-sm text-gray-500">
                <%= appointment.scheduled_at.strftime('%H:%M') %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= appointment.status_color %>-100 text-<%= appointment.status_color %>-800">
                <%= appointment.status.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= appointment.priority_color %>-100 text-<%= appointment.priority_color %>-800">
                <%= appointment.priority.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex items-center gap-2">
                <%= link_to "Ver", admin_medical_appointment_path(appointment), class: "text-blue-600 hover:text-blue-900" %>
                <% if appointment.can_be_edited? %>
                  <%= link_to "Editar", edit_admin_medical_appointment_path(appointment), class: "text-indigo-600 hover:text-indigo-900" %>
                <% end %>
                <% if appointment.can_be_cancelled? %>
                  <%= link_to "Cancelar", cancel_admin_medical_appointment_path(appointment),
                              method: :patch,
                              class: "text-red-600 hover:text-red-900",
                              data: { confirm: 'Tem certeza que deseja cancelar esta consulta?' } %>
                <% end %>
                <% if appointment.can_be_rescheduled? %>
                  <%= link_to "Reagendar", reschedule_admin_medical_appointment_path(appointment),
                              method: :patch,
                              class: "text-orange-600 hover:text-orange-900" %>
                <% end %>
                <% if appointment.scheduled? || appointment.confirmed? %>
                  <%= link_to "Concluir", complete_admin_medical_appointment_path(appointment),
                              method: :patch,
                              class: "text-green-600 hover:text-green-900" %>
                  <%= link_to "Não Compareceu", mark_no_show_admin_medical_appointment_path(appointment),
                              method: :patch,
                              class: "text-red-600 hover:text-red-900" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @medical_appointments.empty? %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <i class="fas fa-calendar-times text-4xl"></i>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma consulta encontrada</h3>
      <p class="mt-1 text-sm text-gray-500">Comece criando uma nova consulta médica.</p>
      <div class="mt-6">
        <%= link_to "Nova Consulta", new_admin_medical_appointment_path, class: "ta-btn ta-btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

