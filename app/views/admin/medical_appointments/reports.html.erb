<% content_for :title, "Relatórios de Consultas" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Relatórios de Consultas</h1>
    <p class="text-gray-600">Análise e métricas das consultas médicas</p>
  </div>
  <div>
    <%= link_to "Voltar", admin_medical_appointments_path, class: "ta-btn ta-btn-secondary" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
            <i class="fas fa-calendar text-white text-sm"></i>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total de Consultas</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= @daily_report[:total_appointments] %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
            <i class="fas fa-check-circle text-white text-sm"></i>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Taxa de Conclusão</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= number_to_percentage(@daily_report[:completion_rate], precision: 1) %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
            <i class="fas fa-times-circle text-white text-sm"></i>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Taxa de Faltas</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= number_to_percentage(@daily_report[:no_show_rate], precision: 1) %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Consultas por Status</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @daily_report[:by_status].each do |status, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">
                <%= status.humanize %>
              </span>
            </div>
            <span class="text-sm text-gray-500">
              <%= count %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Consultas por Tipo</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @daily_report[:by_type].each do |type, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">
                <%= type.humanize %>
              </span>
            </div>
            <span class="text-sm text-gray-500">
              <%= count %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

