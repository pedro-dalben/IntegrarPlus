<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_flow_chart_path(@flow_chart), class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  <% end %>

  <div class="space-y-6" data-controller="drawio"
       data-drawio-flow-chart-id-value="<%= @flow_chart.id %>"
       data-drawio-update-url-value="<%= admin_flow_chart_path(@flow_chart) %>"
       data-drawio-export-url-value="<%= export_pdf_admin_flow_chart_path(@flow_chart) %>"
       data-drawio-initial-data-value="<%= (@current_version&.data || '').to_s.gsub('&', '&amp;').gsub('<', '&lt;').gsub('>', '&gt;').gsub('"', '&quot;') %>">

    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @flow_chart.title %></h1>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
            Edite o fluxograma usando o editor draw.io
          </p>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-sm text-gray-500 dark:text-gray-400">Versão atual: v<%= @flow_chart.version_number %></span>
        </div>
      </div>

      <div class="flex items-center gap-3 mb-6 p-4 bg-blue-50 dark:bg-blue-900/10 rounded-lg">
        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-gray-700 dark:text-gray-300">
          <p class="font-medium">Como usar o editor:</p>
          <ul class="mt-1 space-y-1 text-xs">
            <li>• Edite o diagrama normalmente usando as ferramentas do draw.io</li>
            <li>• Clique em "Salvar Fluxograma" para salvar o diagrama e as informações</li>
            <li>• Use "Exportar" para baixar o diagrama em diferentes formatos</li>
          </ul>
        </div>
      </div>

      <div class="flex items-center justify-between gap-3 mb-4">
        <div class="flex items-center gap-3">
          <button type="button"
                  data-action="click->drawio#exportPNG"
                  class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            Exportar PNG
          </button>

          <button type="button"
                  data-action="click->drawio#exportSVG"
                  class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            Exportar SVG
          </button>
        </div>

        <div class="flex items-center gap-2">
          <span data-drawio-target="saveStatus" class="text-sm text-gray-500 dark:text-gray-400"></span>
          <div data-drawio-target="saveIndicator" class="hidden">
            <svg class="animate-spin h-5 w-5 text-brand-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden bg-white">
        <iframe
          data-drawio-target="iframe"
          src="https://embed.diagrams.net/?embed=1&ui=atlas&spin=1&proto=json&configure=1&libraries=1&origin=<%= CGI.escape(request.base_url) %>"
          style="width: 100%; height: 700px; border: none;"
          allow="clipboard-write"
          sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-popups-to-escape-sandbox">
        </iframe>
      </div>

      <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-900/50 rounded-lg">
        <label for="version_notes" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Notas da próxima versão (opcional)
        </label>
        <input
          type="text"
          id="version_notes"
          data-drawio-target="versionNotes"
          placeholder="Ex: Corrigiu fluxo de aprovação, adicionou nova etapa..."
          class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-1 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:placeholder:text-gray-400">
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
          Descreva as alterações que você fez nesta versão
        </p>
      </div>
    </div>

    <%= form_with model: [:admin, @flow_chart], local: true, class: "mt-6", id: "flow-chart-info-form" do |form| %>
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Informações do Fluxograma</h3>

        <div class="space-y-4">
          <div>
            <%= form.label :title, "Título *", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_field :title,
                class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30",
                required: true %>
          </div>

          <div>
            <%= form.label :description, "Descrição", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.text_area :description, rows: 3,
                class: "w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-1 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-400" %>
          </div>

          <div>
            <%= form.label :status, "Status", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= form.select :status,
                options_for_select([['Rascunho', 'draft'], ['Publicado', 'published'], ['Arquivado', 'archived']], @flow_chart.status),
                {},
                class: "w-full rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-1 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-900 dark:text-white" %>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-3">
          <%= link_to "Cancelar", admin_flow_chart_path(@flow_chart),
              class: "inline-flex items-center justify-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700" %>
          <%= form.submit "Salvar Fluxograma",
              class: "inline-flex items-center justify-center gap-2 rounded-lg bg-brand-600 px-4 py-2 text-sm font-medium text-white hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800",
              data: { action: "click->drawio#saveAndSubmit" },
              onclick: "event.preventDefault(); window.drawioController?.saveAndSubmit(event);" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
