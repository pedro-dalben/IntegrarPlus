<div class="mx-auto max-w-7xl p-4 md:p-6 2xl:p-10">
  <!-- Header da Dashboard -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
      Dashboard da Agenda
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">
      Visão geral da agenda unificada do sistema
    </p>
  </div>

  <!-- Cards de Métricas da Agenda -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total de Eventos -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total de Eventos</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @agenda_data[:metrics][:total_events] %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400">Todos os tempos</p>
        </div>
        <div class="h-12 w-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Eventos de Hoje -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Eventos Hoje</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @agenda_data[:metrics][:events_today] %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400">Agenda do dia</p>
        </div>
        <div class="h-12 w-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Próximos Eventos -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Próximos Eventos</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @agenda_data[:metrics][:upcoming_events] %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400">Futuros</p>
        </div>
        <div class="h-12 w-12 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Profissionais com Eventos -->
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Profissionais Ativos</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @agenda_data[:metrics][:total_professionals_with_events] %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400">Com agenda</p>
        </div>
        <div class="h-12 w-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Seção Principal da Agenda -->
  <!-- Agenda Visual Completa -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 mb-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
        Agenda Visual Completa
      </h2>
      <%= link_to admin_agendas_path,
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Gerenciar Eventos
      <% end %>
    </div>

    <%= render DashboardCalendarComponent.new(
      events: @agenda_data[:this_week_events],
      view_type: 'month',
      read_only: false
    ) %>
  </div>

  <!-- Grid de Informações -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- Sidebar com Informações -->
    <div class="space-y-6">
      <!-- Eventos de Hoje -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Eventos de Hoje
        </h3>

        <% if @agenda_data[:today_events].any? %>
          <div class="space-y-3">
            <% @agenda_data[:today_events].each do |event| %>
              <div class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="h-3 w-3 rounded-full" style="background-color: <%= event_color(event.event_type) %>"></div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white truncate">
                    <%= event.title %>
                  </h4>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= event.start_time.strftime("%H:%M") %> - <%= event.professional.full_name %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">
            Nenhum evento agendado para hoje
          </p>
        <% end %>
      </div>

      <!-- Próximos 24h -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Próximas 24h
        </h3>

        <% if @agenda_data[:next_24h_events].any? %>
          <div class="space-y-3">
            <% @agenda_data[:next_24h_events].each do |event| %>
              <div class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="h-3 w-3 rounded-full" style="background-color: <%= event_color(event.event_type) %>"></div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white truncate">
                    <%= event.title %>
                  </h4>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= event.start_time.strftime("%d/%m %H:%M") %> - <%= event.professional.full_name %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">
            Nenhum evento nas próximas 24h
          </p>
        <% end %>
      </div>

      <!-- Estatísticas por Tipo -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Eventos por Tipo (Hoje)
        </h3>

        <% if @agenda_data[:today_events_by_type].any? %>
          <div class="space-y-3">
            <% @agenda_data[:today_events_by_type].each do |event_type, count| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">
                  <%= event_type.humanize %>
                </span>
                <span class="text-sm font-semibold text-gray-900 dark:text-white">
                  <%= count %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">
            Nenhum evento hoje
          </p>
        <% end %>
      </div>

      <!-- Horários Mais Ocupados -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Horários Mais Ocupados
        </h3>

        <div class="space-y-2">
          <% if @agenda_data[:busy_hours].any? %>
            <% max_count = @agenda_data[:busy_hours].values.max %>
            <% @agenda_data[:busy_hours].sort_by { |hour, count| -count }.first(5).each do |hour, count| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">
                  <%= hour %>:00
                </span>
                <div class="flex items-center gap-2">
                  <div class="w-20 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <% if max_count && max_count > 0 %>
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= [(count.to_f / max_count * 100), 100].min %>%"></div>
                    <% else %>
                      <div class="bg-blue-600 h-2 rounded-full" style="width: 0%"></div>
                    <% end %>
                  </div>
                  <span class="text-sm font-semibold text-gray-900 dark:text-white">
                    <%= count %>
                  </span>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">
              Nenhum evento registrado nos últimos 7 dias
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Ações Rápidas -->
  <div class="mt-8">
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        Ações Rápidas
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to admin_agendas_path,
            class: "flex items-center p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors" do %>
          <div class="h-10 w-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white">Gerenciar Eventos</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">Criar, editar e visualizar eventos</p>
          </div>
        <% end %>

        <%= link_to admin_agendas_path,
            class: "flex items-center p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-green-500 hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors" do %>
          <div class="h-10 w-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white">Consultar Agendas</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">Ver disponibilidade dos profissionais</p>
          </div>
        <% end %>

        <%= link_to new_admin_agenda_path,
            class: "flex items-center p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-purple-500 hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors" do %>
          <div class="h-10 w-10 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white">Novo Evento</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400">Criar evento rapidamente</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
