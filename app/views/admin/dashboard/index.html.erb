<!-- Cards de Estatísticas -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total de Profissionais -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total de Profissionais</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_professionals] %></p>
        <% if @metrics[:professionals_created_this_month] > 0 %>
          <p class="text-xs text-green-600 dark:text-green-400">+<%= @metrics[:professionals_created_this_month] %> este mês</p>
        <% end %>
      </div>
      <div class="h-12 w-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Profissionais Ativos -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Profissionais Ativos</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:active_professionals] %></p>
        <% if @metrics[:total_professionals] > 0 %>
          <% percentage = (@metrics[:active_professionals].to_f / @metrics[:total_professionals] * 100).round(1) %>
          <p class="text-xs text-gray-500 dark:text-gray-400"><%= percentage %>% do total</p>
        <% end %>
      </div>
      <div class="h-12 w-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Total de Usuários -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total de Usuários</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_users] %></p>
        <% if @metrics[:users_created_this_month] > 0 %>
          <p class="text-xs text-green-600 dark:text-green-400">+<%= @metrics[:users_created_this_month] %> este mês</p>
        <% end %>
      </div>
      <div class="h-12 w-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Total de Grupos -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Grupos</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_groups] %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Controle de acesso</p>
      </div>
      <div class="h-12 w-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Cards de Configurações -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <!-- Especialidades -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Especialidades</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_specialities] %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Categorias médicas</p>
      </div>
      <div class="h-12 w-12 bg-pink-100 dark:bg-pink-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Especializações -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Especializações</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_specializations] %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Subespecialidades</p>
      </div>
      <div class="h-12 w-12 bg-cyan-100 dark:bg-cyan-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Tipos de Contrato -->
  <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Tipos de Contrato</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @metrics[:total_contract_types] %></p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Formas de contratação</p>
      </div>
      <div class="h-12 w-12 bg-orange-100 dark:bg-orange-900 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Atividade Recente -->
<% if @recent_activity[:recent_professionals].any? || @recent_activity[:recent_users].any? %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Profissionais Recentes -->
    <% if @recent_activity[:recent_professionals].any? %>
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Profissionais Recentes</h3>
        <div class="space-y-3">
          <% @recent_activity[:recent_professionals].each do |professional| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="h-8 w-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= professional.user&.name || professional.full_name || "Profissional ##{professional.id}" %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400"><%= time_ago_in_words(professional.created_at) %> atrás</p>
                </div>
              </div>
              <span class="text-xs px-2 py-1 rounded-full <%= professional.active? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-200' %>">
                <%= professional.active? ? 'Ativo' : 'Inativo' %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Usuários Recentes -->
    <% if @recent_activity[:recent_users].any? %>
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Usuários Recentes</h3>
        <div class="space-y-3">
          <% @recent_activity[:recent_users].each do |user| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="h-8 w-8 bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white"><%= user.name %></p>
                  <p class="text-xs text-gray-500 dark:text-gray-400"><%= time_ago_in_words(user.created_at) %> atrás</p>
                </div>
              </div>
              <span class="text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                <%= user.admin? ? 'Admin' : 'Usuário' %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>