<div class="mx-auto max-w-7xl p-4 md:p-6 2xl:p-10">
  <!-- Header da Dashboard -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          Dashboard da Agenda
        </h1>
        <p class="text-gray-600 dark:text-gray-400 mt-2">
          Visão geral da agenda unificada do sistema
        </p>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-sm text-gray-500 dark:text-gray-400">
          <%= Date.current.strftime("%d de %B de %Y") %>
        </span>
        <div class="h-2 w-2 bg-green-500 rounded-full animate-pulse"></div>
      </div>
    </div>
  </div>

  <!-- Cards de Métricas da Agenda -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total de Eventos -->
    <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-2xl border border-blue-200 dark:border-blue-700 p-6 shadow-lg hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-blue-600 dark:text-blue-400">Total de Eventos</p>
          <p class="text-3xl font-bold text-blue-900 dark:text-blue-100"><%= @agenda_data[:metrics][:total_events] %></p>
          <p class="text-xs text-blue-500 dark:text-blue-300">Todos os tempos</p>
        </div>
        <div class="h-14 w-14 bg-blue-500 rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Eventos de Hoje -->
    <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-2xl border border-green-200 dark:border-green-700 p-6 shadow-lg hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-green-600 dark:text-green-400">Eventos Hoje</p>
          <p class="text-3xl font-bold text-green-900 dark:text-green-100"><%= @agenda_data[:metrics][:events_today] %></p>
          <p class="text-xs text-green-500 dark:text-green-300">Agenda do dia</p>
        </div>
        <div class="h-14 w-14 bg-green-500 rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Próximos Eventos -->
    <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 dark:from-yellow-900/20 dark:to-yellow-800/20 rounded-2xl border border-yellow-200 dark:border-yellow-700 p-6 shadow-lg hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-yellow-600 dark:text-yellow-400">Próximos Eventos</p>
          <p class="text-3xl font-bold text-yellow-900 dark:text-yellow-100"><%= @agenda_data[:metrics][:upcoming_events] %></p>
          <p class="text-xs text-yellow-500 dark:text-yellow-300">Futuros</p>
        </div>
        <div class="h-14 w-14 bg-yellow-500 rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Profissionais com Eventos -->
    <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 rounded-2xl border border-purple-200 dark:border-purple-700 p-6 shadow-lg hover:shadow-xl transition-all duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-purple-600 dark:text-purple-400">Profissionais Ativos</p>
          <p class="text-3xl font-bold text-purple-900 dark:text-purple-100"><%= @agenda_data[:metrics][:total_professionals_with_events] %></p>
          <p class="text-xs text-purple-500 dark:text-purple-300">Com agenda</p>
        </div>
        <div class="h-14 w-14 bg-purple-500 rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Agenda do Dia -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 mb-8 shadow-lg">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          Agenda Completa
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mt-1">
          Visualização completa da agenda com opções de dia, semana e mês
        </p>
      </div>
      <div class="flex items-center gap-3">
        <%= link_to admin_agendas_path,
            class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Gerenciar Eventos
        <% end %>
      </div>
    </div>

    <!-- Calendário Básico -->
    <%= render BasicCalendarComponent.new(
      events: @agenda_data[:all_events] || @agenda_data[:today_events] || [],
      read_only: false
    ) %>
  </div>

  <!-- Grid de Informações -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

    <!-- Próximos Eventos -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 shadow-lg">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white">
          Próximos Eventos
        </h3>
        <div class="h-2 w-2 bg-blue-500 rounded-full animate-pulse"></div>
      </div>

      <% if @agenda_data[:next_24h_events].any? %>
        <div class="space-y-4">
          <% @agenda_data[:next_24h_events].first(5).each do |event| %>
            <div class="flex items-center gap-4 p-4 rounded-xl border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200">
              <div class="flex-shrink-0">
                <div class="w-3 h-3 rounded-full" style="background-color: <%= event_color(event.event_type) %>"></div>
              </div>
              <div class="flex-1 min-w-0">
                <h4 class="text-sm font-semibold text-gray-900 dark:text-white truncate">
                  <%= event.title %>
                </h4>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  <%= event.start_time.in_time_zone.strftime("%d/%m às %H:%M") %> - <%= event.professional.full_name %>
                </p>
              </div>
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= event_badge_class(event.event_type) %>">
                  <%= event.event_type.humanize %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="mx-auto h-16 w-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-3">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Nenhum evento nas próximas 24h
          </p>
        </div>
      <% end %>
    </div>

    <!-- Estatísticas -->
    <div class="space-y-6">
      <!-- Eventos por Tipo -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 shadow-lg">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Eventos por Tipo (Hoje)
        </h3>

        <% if @agenda_data[:today_events_by_type].any? %>
          <div class="space-y-3">
            <% @agenda_data[:today_events_by_type].each do |event_type, count| %>
              <div class="flex items-center justify-between p-3 rounded-lg bg-gray-50 dark:bg-gray-700">
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 rounded-full" style="background-color: <%= event_color(event_type) %>"></div>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                    <%= event_type.humanize %>
                  </span>
                </div>
                <span class="text-sm font-bold text-gray-900 dark:text-white bg-white dark:bg-gray-600 px-2 py-1 rounded-full">
                  <%= count %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-sm text-gray-500 dark:text-gray-400">
              Nenhum evento hoje
            </p>
          </div>
        <% end %>
      </div>

      <!-- Horários Mais Ocupados -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 shadow-lg">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          Horários Mais Ocupados
        </h3>

        <div class="space-y-3">
          <% if @agenda_data[:busy_hours].any? %>
            <% max_count = @agenda_data[:busy_hours].values.max %>
            <% @agenda_data[:busy_hours].sort_by { |hour, count| -count }.first(5).each do |hour, count| %>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-600 dark:text-gray-400">
                  <%= hour %>:00
                </span>
                <div class="flex items-center gap-3">
                  <div class="w-24 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <% if max_count && max_count > 0 %>
                      <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full transition-all duration-500" style="width: <%= [(count.to_f / max_count * 100), 100].min %>%"></div>
                    <% else %>
                      <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full" style="width: 0%"></div>
                    <% end %>
                  </div>
                  <span class="text-sm font-bold text-gray-900 dark:text-white w-6 text-right">
                    <%= count %>
                  </span>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Nenhum evento registrado nos últimos 7 dias
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Ações Rápidas -->
  <div class="mt-8">
    <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 shadow-lg">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
          Ações Rápidas
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
          Acesse rapidamente as principais funcionalidades do sistema
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <%= link_to admin_agendas_path,
            class: "group flex flex-col items-center p-6 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 hover:shadow-lg hover:-translate-y-1" do %>
          <div class="h-16 w-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-4 shadow-lg group-hover:shadow-xl transition-all duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Gerenciar Eventos</h4>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center">Criar, editar e visualizar eventos da agenda</p>
        <% end %>

        <%= link_to admin_agendas_path,
            class: "group flex flex-col items-center p-6 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-green-500 hover:bg-green-50 dark:hover:bg-green-900/20 transition-all duration-300 hover:shadow-lg hover:-translate-y-1" do %>
          <div class="h-16 w-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mb-4 shadow-lg group-hover:shadow-xl transition-all duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Consultar Agendas</h4>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center">Ver disponibilidade dos profissionais</p>
        <% end %>

        <%= link_to new_admin_agenda_path,
            class: "group flex flex-col items-center p-6 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-purple-500 hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-all duration-300 hover:shadow-lg hover:-translate-y-1" do %>
          <div class="h-16 w-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mb-4 shadow-lg group-hover:shadow-xl transition-all duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Novo Evento</h4>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center">Criar evento rapidamente</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
