<div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
  <div class="flex items-start justify-between">
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-3 mb-2">
        <h4 class="text-lg font-medium text-gray-900 dark:text-white truncate">
          <%= link_to document.title, admin_document_path(document), class: "hover:text-blue-600 dark:hover:text-blue-400" %>
        </h4>

        <!-- Status -->
        <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full <%= document.status_color %>">
          <%= document.status_icon %> <%= document.status.humanize %>
        </span>
      </div>

      <!-- Descrição -->
      <% if document.description.present? %>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
          <%= document.description %>
        </p>
      <% end %>

      <!-- Metadados -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
        <!-- Tipo -->
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <span><%= document.document_type.humanize %></span>
        </div>

        <!-- Categoria -->
        <div class="flex items-center gap-1">
          <span><%= document.category_icon %></span>
          <span><%= document.category.humanize %></span>
        </div>

        <!-- Versão -->
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
          </svg>
          <span>v<%= document.current_version %></span>
        </div>

        <!-- Data de criação -->
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span><%= l(document.created_at, format: :short) %></span>
        </div>

        <!-- Autor -->
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span><%= document.author.full_name %></span>
        </div>
      </div>
    </div>

    <!-- Ações -->
    <div class="flex items-center gap-2 ml-4">
      <%= link_to admin_document_path(document),
                  class: "p-2 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors duration-200",
                  title: "Visualizar" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
      <% end %>

      <%= link_to edit_admin_document_path(document),
                  class: "p-2 text-gray-400 hover:text-indigo-600 dark:hover:text-indigo-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors duration-200",
                  title: "Editar" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>

      <%= link_to download_admin_document_path(document),
                  class: "p-2 text-gray-400 hover:text-green-600 dark:hover:text-green-400 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors duration-200",
                  title: "Download" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      <% end %>
    </div>
  </div>
</div>
