<% content_for(:title, "Entrada do Portal ##{@portal_intake.id}") %>

<div class="mb-6">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:text-3xl sm:truncate">
        Entrada do Portal #<%= @portal_intake.id %>
      </h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Gerencie a solicitação da operadora
      </p>
    </div>
    <div class="flex items-center space-x-3">
      <span class="<%= @portal_intake.status_badge_class %>">
        <%= @portal_intake.status_label %>
      </span>
      <%= link_to admin_portal_intakes_path, class: "ta-btn ta-btn-secondary" do %>
        <svg class="size-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Voltar
      <% end %>
    </div>
  </div>
</div>

<div class="space-y-6">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Dados da Entrada -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Dados da Operadora -->
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Dados da Operadora
          </h2>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Empresa</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.operator.company_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Responsável</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.operator.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">E-mail</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.operator.email %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Entrada</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.requested_at.strftime('%d/%m/%Y às %H:%M') %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Dados do Beneficiário -->
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Dados do Beneficiário
          </h2>
        </div>
        <div class="p-6">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Nome do Beneficiário</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.beneficiary_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Plano Médico</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.plan_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Código da Carteirinha</dt>
              <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.card_code %></dd>
            </div>
            <% if @portal_intake.data_recebimento_email.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Recebimento do E-mail</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @portal_intake.data_recebimento_email.strftime('%d/%m/%Y') %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- Agendamento de Anamnese -->
      <% if @portal_intake.can_schedule_anamnesis? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Agendar Anamnese
            </h2>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
              Use o sistema de agendas para selecionar profissional e horário
            </p>
          </div>
          <div class="p-6">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <h3 class="mt-4 text-sm font-medium text-gray-900 dark:text-gray-100">
                Sistema de Agendamento Integrado
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Selecione agenda, profissional e horário disponível
              </p>
              <div class="mt-4">
                <%= link_to schedule_anamnesis_admin_portal_intake_path(@portal_intake),
                            class: "ta-btn ta-btn-primary" do %>
                  <svg class="size-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Agendar com Agenda
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% elsif @portal_intake.aguardando_anamnese? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Anamnese Agendada
            </h2>
          </div>
          <div class="p-6">
            <div class="bg-blue-50 border border-blue-200 rounded-md p-4 dark:bg-blue-800/10 dark:border-blue-900">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="size-4 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3 flex-1">
                  <h3 class="text-sm font-medium text-blue-800 dark:text-blue-400">
                    Anamnese agendada
                  </h3>
                  <p class="mt-1 text-sm text-blue-700 dark:text-blue-300">
                    A anamnese foi agendada para <strong><%= @portal_intake.anamnesis_scheduled_on.strftime('%d/%m/%Y às %H:%M') %></strong>.
                  </p>
                </div>
              </div>
            </div>

            <% if @portal_intake.can_reschedule_anamnesis? || @portal_intake.can_cancel_anamnesis? %>
              <div class="mt-4 flex space-x-3">
                <% if @portal_intake.can_reschedule_anamnesis? %>
                  <%= link_to reschedule_anamnesis_admin_portal_intake_path(@portal_intake),
                              class: "ta-btn ta-btn-secondary inline-flex items-center gap-2 border-orange-300 text-orange-700 hover:bg-orange-50 dark:border-orange-600 dark:text-orange-400 dark:hover:bg-orange-900/10" do %>
                    <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Reagendar Anamnese
                  <% end %>
                <% end %>

                <% if @portal_intake.can_cancel_anamnesis? %>
                  <%= button_to cancel_anamnesis_admin_portal_intake_path(@portal_intake),
                                method: :patch,
                                class: "ta-btn ta-btn-secondary inline-flex items-center gap-2 border-red-300 text-red-700 hover:bg-red-50 dark:border-red-600 dark:text-red-400 dark:hover:bg-red-900/10",
                                data: {
                                  turbo_confirm: "Tem certeza que deseja cancelar esta anamnese? O status voltará para 'Aguardando Agendamento'."
                                } do %>
                    <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancelar Anamnese
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% elsif @portal_intake.anamnese_concluida? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Anamnese Concluída
            </h2>
          </div>
          <div class="p-6">
            <div class="bg-green-50 border border-green-200 rounded-md p-4 dark:bg-green-800/10 dark:border-green-900">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="size-4 text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-green-800 dark:text-green-400">
                    Processo concluído
                  </h3>
                  <p class="mt-1 text-sm text-green-700 dark:text-green-300">
                    A anamnese foi realizada com sucesso em <strong><%= @portal_intake.anamnesis_scheduled_on.strftime('%d/%m/%Y') %></strong>.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if @portal_intake.portal_intake_referrals.any? %>
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">
              Encaminhamentos (<%= @portal_intake.portal_intake_referrals.count %>)
            </h2>
          </div>
          <div class="p-6">
        <div class="space-y-4">
          <div class="text-sm text-gray-500 dark:text-gray-400">Encaminhamentos salvos: <strong><%= @portal_intake.portal_intake_referrals.count %></strong></div>
              <% @portal_intake.portal_intake_referrals.each_with_index do |referral, index| %>
                <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="text-md font-medium text-gray-900 dark:text-white">
                      Encaminhamento <%= index + 1 %>
                    </h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-800/20 dark:text-blue-400">
                      <%= referral.encaminhado_para %>
                    </span>
                  </div>

                  <dl class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">CID</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.cid %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Médico</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.medico %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">CRM</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.medico_crm %></dd>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Data de Encaminhamento</dt>
                      <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.data_encaminhamento&.strftime('%d/%m/%Y') %></dd>
                    </div>
                    <% if referral.descricao.present? %>
                      <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Descrição</dt>
                        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= referral.descricao %></dd>
                      </div>
                    <% end %>
                  </dl>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Linha do Tempo -->
    <div class="lg:col-span-1">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">
            Histórico
          </h2>
        </div>
        <div class="p-6">
          <div class="flow-root">
            <ul role="list" class="-mb-8">
              <% @journey_events.each_with_index do |event, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == @journey_events.length - 1 %>
                      <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                    <% end %>
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full bg-blue-500 text-white flex items-center justify-center ring-8 ring-white">
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <circle cx="10" cy="10" r="4"/>
                          </svg>
                        </span>
                      </div>
                      <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                        <div>
                          <p class="text-sm text-gray-900">
                            <%= event.event_description %>
                          </p>
                          <p class="mt-0.5 text-xs text-gray-500">
                            Por: <%= event.admin_name %>
                          </p>
                        </div>
                        <div class="whitespace-nowrap text-right text-sm text-gray-500">
                          <time datetime="<%= event.created_at.iso8601 %>">
                            <%= event.formatted_date %>
                          </time>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between pt-6 border-t border-gray-200 dark:border-gray-800">
    <div class="flex items-center space-x-3">
      <%= link_to admin_portal_intakes_path, class: "ta-btn ta-btn-secondary" do %>
        <svg class="size-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Voltar para Lista
      <% end %>
    </div>

    <div class="flex items-center space-x-3">
      <% if @portal_intake.can_schedule_anamnesis? %>
        <%= link_to schedule_anamnesis_admin_portal_intake_path(@portal_intake),
                    class: "ta-btn ta-btn-primary" do %>
          <svg class="size-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Agendar Anamnese
        <% end %>
      <% elsif @portal_intake.can_reschedule_anamnesis? %>
        <%= link_to reschedule_anamnesis_admin_portal_intake_path(@portal_intake),
                    class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Reagendar
        <% end %>
      <% end %>
    </div>
  </div>
</div>
