<%= form_with model: [:admin, anamnesis], local: true, class: "space-y-8" do |form| %>
  <% if anamnesis.errors.any? %>
    <div class="ta-alert ta-alert-error">
      <div class="ta-alert-content">
        <h3 class="ta-alert-title">Erro ao salvar anamnese</h3>
        <ul class="list-disc list-inside space-y-1">
          <% anamnesis.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Informações Básicas -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Informações Básicas</h3>
    </div>
    <div class="ta-card-body">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :performed_at, "Data Realizada", class: "ta-form-label" %>
          <%= form.datetime_local_field :performed_at, 
              value: anamnesis.performed_at&.strftime("%Y-%m-%dT%H:%M"),
              class: "ta-form-input" %>
        </div>
        
        <div>
          <%= form.label :professional_id, "Profissional", class: "ta-form-label" %>
          <%= form.select :professional_id, 
              options_from_collection_for_select(
                User.joins(:professional).where(professionals: { active: true }),
                :id, :full_name, 
                anamnesis.professional_id || current_user.id
              ),
              { prompt: "Selecione o profissional" },
              { class: "ta-form-select" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Dados do Beneficiário (Read-only) -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Dados do Beneficiário</h3>
    </div>
    <div class="ta-card-body">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="ta-form-label">Nome</label>
          <p class="text-gray-900 dark:text-gray-100 font-medium"><%= beneficiary.name %></p>
        </div>
        <div>
          <label class="ta-form-label">Data de Nascimento</label>
          <p class="text-gray-900 dark:text-gray-100"><%= beneficiary.birth_date.strftime("%d/%m/%Y") %></p>
        </div>
        <div>
          <label class="ta-form-label">Idade</label>
          <p class="text-gray-900 dark:text-gray-100"><%= beneficiary.age %> anos</p>
        </div>
        <div>
          <label class="ta-form-label">CPF</label>
          <p class="text-gray-900 dark:text-gray-100"><%= beneficiary.cpf %></p>
        </div>
        <div>
          <label class="ta-form-label">Código Integrar</label>
          <p class="text-gray-900 dark:text-gray-100 font-mono"><%= beneficiary.integrar_code %></p>
        </div>
        <div>
          <label class="ta-form-label">Telefone</label>
          <p class="text-gray-900 dark:text-gray-100"><%= beneficiary.formatted_phone %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Dados da Família -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Dados da Família</h3>
    </div>
    <div class="ta-card-body">
      <div class="space-y-8">
        <!-- Pai -->
        <div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Pai</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :father_name, "Nome do Pai", class: "ta-form-label" %>
              <%= form.text_field :father_name, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :father_birth_date, "Data de Nascimento", class: "ta-form-label" %>
              <%= form.date_field :father_birth_date, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :father_education, "Escolaridade", class: "ta-form-label" %>
              <%= form.select :father_education, 
                  options_for_select([
                    ['Selecione...', ''],
                    ['Analfabeto', 'analfabeto'],
                    ['Ensino Fundamental Incompleto', 'fundamental_incompleto'],
                    ['Ensino Fundamental Completo', 'fundamental_completo'],
                    ['Ensino Médio Incompleto', 'medio_incompleto'],
                    ['Ensino Médio Completo', 'medio_completo'],
                    ['Ensino Superior Incompleto', 'superior_incompleto'],
                    ['Ensino Superior Completo', 'superior_completo'],
                    ['Pós-graduação', 'pos_graduacao']
                  ], anamnesis.father_education),
                  {},
                  { class: "ta-form-select" } %>
            </div>
            <div>
              <%= form.label :father_profession, "Profissão", class: "ta-form-label" %>
              <%= form.text_field :father_profession, class: "ta-form-input" %>
            </div>
          </div>
        </div>

        <!-- Mãe -->
        <div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Mãe</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :mother_name, "Nome da Mãe", class: "ta-form-label" %>
              <%= form.text_field :mother_name, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :mother_birth_date, "Data de Nascimento", class: "ta-form-label" %>
              <%= form.date_field :mother_birth_date, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :mother_education, "Escolaridade", class: "ta-form-label" %>
              <%= form.select :mother_education, 
                  options_for_select([
                    ['Selecione...', ''],
                    ['Analfabeto', 'analfabeto'],
                    ['Ensino Fundamental Incompleto', 'fundamental_incompleto'],
                    ['Ensino Fundamental Completo', 'fundamental_completo'],
                    ['Ensino Médio Incompleto', 'medio_incompleto'],
                    ['Ensino Médio Completo', 'medio_completo'],
                    ['Ensino Superior Incompleto', 'superior_incompleto'],
                    ['Ensino Superior Completo', 'superior_completo'],
                    ['Pós-graduação', 'pos_graduacao']
                  ], anamnesis.mother_education),
                  {},
                  { class: "ta-form-select" } %>
            </div>
            <div>
              <%= form.label :mother_profession, "Profissão", class: "ta-form-label" %>
              <%= form.text_field :mother_profession, class: "ta-form-input" %>
            </div>
          </div>
        </div>

        <!-- Responsável -->
        <div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Responsável</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :responsible_name, "Nome do Responsável", class: "ta-form-label" %>
              <%= form.text_field :responsible_name, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :responsible_birth_date, "Data de Nascimento", class: "ta-form-label" %>
              <%= form.date_field :responsible_birth_date, class: "ta-form-input" %>
            </div>
            <div>
              <%= form.label :responsible_education, "Escolaridade", class: "ta-form-label" %>
              <%= form.select :responsible_education, 
                  options_for_select([
                    ['Selecione...', ''],
                    ['Analfabeto', 'analfabeto'],
                    ['Ensino Fundamental Incompleto', 'fundamental_incompleto'],
                    ['Ensino Fundamental Completo', 'fundamental_completo'],
                    ['Ensino Médio Incompleto', 'medio_incompleto'],
                    ['Ensino Médio Completo', 'medio_completo'],
                    ['Ensino Superior Incompleto', 'superior_incompleto'],
                    ['Ensino Superior Completo', 'superior_completo'],
                    ['Pós-graduação', 'pos_graduacao']
                  ], anamnesis.responsible_education),
                  {},
                  { class: "ta-form-select" } %>
            </div>
            <div>
              <%= form.label :responsible_profession, "Profissão", class: "ta-form-label" %>
              <%= form.text_field :responsible_profession, class: "ta-form-input" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Dados Escolares -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Dados Escolares</h3>
    </div>
    <div class="ta-card-body">
      <div class="space-y-4">
        <div>
          <%= form.label :attends_school, class: "flex items-center gap-2" do %>
            <%= form.check_box :attends_school, class: "ta-form-checkbox" %>
            <span class="ta-form-label">Frequenta escola?</span>
          <% end %>
        </div>
        
        <div id="school-fields" class="grid grid-cols-1 md:grid-cols-2 gap-4" style="<%= 'display: none;' unless anamnesis.attends_school? %>">
          <div>
            <%= form.label :school_name, "Nome da Escola", class: "ta-form-label" %>
            <%= form.text_field :school_name, class: "ta-form-input", placeholder: "Digite o nome da escola" %>
            <p class="text-xs text-gray-500 mt-1">
              <a href="https://anonymousdata.inep.gov.br/analytics/saw.dll?Dashboard&PortalPath=%2Fshared%2FCenso%20da%20Educa%C3%A7%C3%A3o%20B%C3%A1sica%2F_portal%2FCat%C3%A1logo%20de%20Escolas&Page=Lista%20das%20Escolas&P1=dashboard&Action=Navigate&ViewState=rgb26lcqbktgspv2eivlca7lmi&P16=NavRuleDefault&NavFromViewID=d%3Adashboard~p%3Asf156n9k0qs70741" 
                 target="_blank" class="text-blue-600 hover:text-blue-800">
                Consultar catálogo de escolas do INEP
              </a>
            </p>
          </div>
          <div>
            <%= form.label :school_period, "Período", class: "ta-form-label" %>
            <%= form.select :school_period, 
                options_for_select([
                  ['Selecione...', ''],
                  ['Manhã', 'manha'],
                  ['Tarde', 'tarde'],
                  ['Integral', 'integral']
                ], anamnesis.school_period),
                {},
                { class: "ta-form-select" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Motivo do Encaminhamento -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Motivo do Encaminhamento</h3>
    </div>
    <div class="ta-card-body">
      <div class="space-y-6">
        <div>
          <%= form.label :referral_reason, "Motivo Descrito no Encaminhamento", class: "ta-form-label" %>
          <%= form.select :referral_reason, 
              options_for_select([
                ['Selecione...', ''],
                ['ABA', 'aba'],
                ['Equipe Multi', 'equipe_multi'],
                ['ABA + Equipe Multi', 'aba_equipe_multi']
              ], anamnesis.referral_reason),
              {},
              { class: "ta-form-select" } %>
        </div>

        <div>
          <%= form.label :injunction, class: "flex items-center gap-2" do %>
            <%= form.check_box :injunction, class: "ta-form-checkbox" %>
            <span class="ta-form-label">Liminar</span>
          <% end %>
        </div>

        <div>
          <%= form.label :treatment_location, "Local do Atendimento", class: "ta-form-label" %>
          <%= form.select :treatment_location, 
              options_for_select([
                ['Selecione...', ''],
                ['Domiciliar', 'domiciliar'],
                ['Clínica', 'clinica'],
                ['Domiciliar + Clínica', 'domiciliar_clinica'],
                ['Domiciliar + Escola', 'domiciliar_escola'],
                ['Domiciliar + Clínica + Escola', 'domiciliar_clinica_escola']
              ], anamnesis.treatment_location),
              {},
              { class: "ta-form-select" } %>
        </div>

        <div>
          <%= form.label :referral_hours, "Horas do Pacote Encaminhado", class: "ta-form-label" %>
          <%= form.select :referral_hours, 
              options_for_select((5..40).map { |h| ["#{h} horas", h] }, anamnesis.referral_hours),
              { prompt: "Selecione as horas (5-40)" },
              { class: "ta-form-select" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Especialidades -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Especialidades - Equipe Multi</h3>
      <p class="text-sm text-gray-600 dark:text-gray-400">Preencha apenas se o motivo for "Equipe Multi" ou "ABA + Equipe Multi"</p>
    </div>
    <div class="ta-card-body">
      <div class="space-y-4">
        <% specialties = [
          { key: 'fono', label: 'Fonoaudiologia' },
          { key: 'to', label: 'Terapia Ocupacional' },
          { key: 'psicopedagogia', label: 'Psicopedagogia' },
          { key: 'psicomotricidade', label: 'Psicomotricidade' },
          { key: 'psicologia', label: 'Psicologia' }
        ] %>
        
        <% specialties.each do |specialty| %>
          <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
            <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-3"><%= specialty[:label] %></h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="ta-form-label">Quantidade de Sessões</label>
                <div class="flex gap-2">
                  <% (1..5).each do |i| %>
                    <label class="flex items-center gap-1">
                      <%= radio_button_tag "specialties[#{specialty[:key]}][sessions]", i, false, 
                          class: "ta-form-radio", 
                          name: "anamnesis[specialties][#{specialty[:key]}][sessions]" %>
                      <span class="text-sm"><%= i %></span>
                    </label>
                  <% end %>
                  <label class="flex items-center gap-1">
                    <%= radio_button_tag "specialties[#{specialty[:key]}][sessions]", "nao_especificado", false, 
                        class: "ta-form-radio", 
                        name: "anamnesis[specialties][#{specialty[:key]}][sessions]" %>
                    <span class="text-sm">Não especificado</span>
                  </label>
                </div>
              </div>
              
              <div>
                <label class="ta-form-label">Quantidade de Horas</label>
                <div class="flex gap-2">
                  <% (1..5).each do |i| %>
                    <label class="flex items-center gap-1">
                      <%= radio_button_tag "specialties[#{specialty[:key]}][hours]", i, false, 
                          class: "ta-form-radio", 
                          name: "anamnesis[specialties][#{specialty[:key]}][hours]" %>
                      <span class="text-sm"><%= i %></span>
                    </label>
                  <% end %>
                  <label class="flex items-center gap-1">
                    <%= radio_button_tag "specialties[#{specialty[:key]}][hours]", "nao_especificado", false, 
                        class: "ta-form-radio", 
                        name: "anamnesis[specialties][#{specialty[:key]}][hours]" %>
                    <span class="text-sm">Não especificado</span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Diagnóstico -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Diagnóstico</h3>
    </div>
    <div class="ta-card-body">
      <div class="space-y-4">
        <div>
          <%= form.label :diagnosis_completed, class: "flex items-center gap-2" do %>
            <%= form.check_box :diagnosis_completed, class: "ta-form-checkbox" %>
            <span class="ta-form-label">Diagnóstico Concluído</span>
          <% end %>
        </div>
        
        <div>
          <%= form.label :responsible_doctor, "Médico Responsável", class: "ta-form-label" %>
          <%= form.select :responsible_doctor, 
              options_for_select([
                ['Selecione...', ''],
                ['Dr. Sardinha', 'Dr. Sardinha'],
                ['Dra. [Nome]', 'Dra. [Nome]']
              ], anamnesis.responsible_doctor),
              {},
              { class: "ta-form-select" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tratamentos -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Tratamentos</h3>
    </div>
    <div class="ta-card-body">
      <div class="space-y-6">
        <div>
          <%= form.label :previous_treatment, class: "flex items-center gap-2" do %>
            <%= form.check_box :previous_treatment, class: "ta-form-checkbox" %>
            <span class="ta-form-label">Já realizou algum tratamento?</span>
          <% end %>
        </div>

        <div id="previous-treatments" style="<%= 'display: none;' unless anamnesis.previous_treatment? %>">
          <label class="ta-form-label">Qual tratamento já realizou?</label>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-2 mt-2">
            <% treatments = ['ABA', 'FONO', 'TO', 'PSICOPEDAGOGIA', 'PSICOLOGIA', 'PSICOMOTRICIDADE', 'FISIOTERAPIA', 'EQUOTERAPIA', 'MUSICOTERAPIA'] %>
            <% treatments.each do |treatment| %>
              <label class="flex items-center gap-2">
                <%= check_box_tag "anamnesis[previous_treatments][]", treatment, false, class: "ta-form-checkbox" %>
                <span class="text-sm"><%= treatment %></span>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <%= form.label :continue_external_treatment, class: "flex items-center gap-2" do %>
            <%= form.check_box :continue_external_treatment, class: "ta-form-checkbox" %>
            <span class="ta-form-label">Vai continuar com algum tratamento externo?</span>
          <% end %>
        </div>

        <div id="external-treatments" style="<%= 'display: none;' unless anamnesis.continue_external_treatment? %>">
          <label class="ta-form-label">Qual tratamento vai continuar?</label>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-2 mt-2">
            <% treatments.each do |treatment| %>
              <label class="flex items-center gap-2">
                <%= check_box_tag "anamnesis[external_treatments][]", treatment, false, class: "ta-form-checkbox" %>
                <span class="text-sm"><%= treatment %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Horários -->
  <div class="ta-card">
    <div class="ta-card-header">
      <h3 class="ta-card-title">Horários</h3>
    </div>
    <div class="ta-card-body">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="ta-form-label">Melhor horário para realizar o tratamento</label>
          <div class="space-y-2 mt-2">
            <% preferred_times = [
              ['Início Manhã', 'inicio_manha'],
              ['Meio Manhã', 'meio_manha'],
              ['Início Tarde', 'inicio_tarde'],
              ['Meio Tarde', 'meio_tarde'],
              ['Final Tarde', 'final_tarde']
            ] %>
            <% preferred_times.each do |time_label, time_value| %>
              <label class="flex items-center gap-2">
                <%= check_box_tag "anamnesis[preferred_schedule][]", time_value, false, class: "ta-form-checkbox" %>
                <span class="text-sm"><%= time_label %></span>
              </label>
            <% end %>
          </div>
        </div>

        <div>
          <label class="ta-form-label">Horário impossível para realizar o tratamento</label>
          <div class="space-y-2 mt-2">
            <% preferred_times.each do |time_label, time_value| %>
              <label class="flex items-center gap-2">
                <%= check_box_tag "anamnesis[unavailable_schedule][]", time_value, false, class: "ta-form-checkbox" %>
                <span class="text-sm"><%= time_label %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Botões de Ação -->
  <div class="flex justify-end gap-4">
    <%= link_to admin_anamneses_path, class: "ta-btn ta-btn-secondary" do %>
      Cancelar
    <% end %>
    
    <%= form.submit anamnesis.persisted? ? "Atualizar Anamnese" : "Criar Anamnese", 
        class: "ta-btn ta-btn-primary" %>
  </div>
<% end %>

<script>
  // Toggle school fields
  document.addEventListener('DOMContentLoaded', function() {
    const attendsSchoolCheckbox = document.getElementById('anamnesis_attends_school');
    const schoolFields = document.getElementById('school-fields');
    
    if (attendsSchoolCheckbox) {
      attendsSchoolCheckbox.addEventListener('change', function() {
        schoolFields.style.display = this.checked ? 'grid' : 'none';
      });
    }

    // Toggle previous treatments
    const previousTreatmentCheckbox = document.getElementById('anamnesis_previous_treatment');
    const previousTreatmentsDiv = document.getElementById('previous-treatments');
    
    if (previousTreatmentCheckbox) {
      previousTreatmentCheckbox.addEventListener('change', function() {
        previousTreatmentsDiv.style.display = this.checked ? 'block' : 'none';
      });
    }

    // Toggle external treatments
    const externalTreatmentCheckbox = document.getElementById('anamnesis_continue_external_treatment');
    const externalTreatmentsDiv = document.getElementById('external-treatments');
    
    if (externalTreatmentCheckbox) {
      externalTreatmentCheckbox.addEventListener('change', function() {
        externalTreatmentsDiv.style.display = this.checked ? 'block' : 'none';
      });
    }
  });
</script>
