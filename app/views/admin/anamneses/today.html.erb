<% content_for :title, "Anamneses de Hoje" %>

<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_anamneses_path, class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-4 py-3 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03] inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar para Lista
    <% end %>
  <% end %>

  <div class="space-y-6">

  <!-- Resumo do Dia -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]-body text-center">
        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
          <%= @anamneses.count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Total de Anamneses</div>
      </div>
    </div>
    
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]-body text-center">
        <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">
          <%= @anamneses.select(&:pendente?).count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Pendentes</div>
      </div>
    </div>
    
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]-body text-center">
        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
          <%= @anamneses.select(&:em_andamento?).count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Em Andamento</div>
      </div>
    </div>
    
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]-body text-center">
        <div class="text-2xl font-bold text-green-600 dark:text-green-400">
          <%= @anamneses.select(&:concluida?).count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Concluídas</div>
      </div>
    </div>
  </div>

  <!-- Lista de Anamneses de Hoje -->
  <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
      <h2 class="text-lg font-medium text-gray-800 dark:text-white">Agendamentos de Hoje</h2>
      <div class="flex items-center justify-end">
        <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:bg-gray-800 dark:text-gray-300">
          <%= @anamneses.count %> anamneses
        </span>
      </div>
    </div>
    <div class="p-4 sm:p-6">
      <% if @anamneses.any? %>
        <div class="space-y-4">
          <% @anamneses.each do |anamnesis| %>
            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  
                  <div class="flex-1">
                    <div class="flex items-center gap-3">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
                        <%= anamnesis.beneficiary_name %>
                      </h4>
                      <span class="<%= anamnesis.status_badge_class %>">
                        <%= anamnesis.status_label %>
                      </span>
                    </div>
                    
                    <div class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                      <div class="flex items-center gap-4">
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <%= anamnesis.performed_at.strftime("%H:%M") %>
                        </span>
                        
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                          </svg>
                          <%= anamnesis.professional_name %>
                        </span>
                        
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                          <%= anamnesis.referral_reason_label %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-2">
                  <%= link_to admin_anamnesis_path(anamnesis), class: "shadow-theme-xs inline-flex items-center justify-center gap-2 rounded-lg bg-white px-3 py-2 text-sm font-medium text-gray-700 ring-1 ring-gray-300 transition hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-400 dark:ring-gray-700 dark:hover:bg-white/[0.03]", title: "Ver detalhes" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>

                  <% if anamnesis.pode_ser_editada? && current_user.permit?('anamneses.edit') %>
                    <%= link_to edit_admin_anamnesis_path(anamnesis), class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-white transition", title: "Editar" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                  <% end %>

                  <% if anamnesis.pode_ser_concluida? && current_user.permit?('anamneses.complete') %>
                    <%= link_to complete_admin_anamnesis_path(anamnesis), 
                        method: :patch,
                        class: "bg-green-600 shadow-theme-xs hover:bg-green-700 inline-flex items-center justify-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-white transition", 
                        title: "Concluir anamnese",
                        data: { 
                          confirm: "Tem certeza que deseja concluir esta anamnese?",
                          turbo_method: :patch
                        } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">Nenhuma anamnese agendada para hoje</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Não há anamneses agendadas para <%= Date.current.strftime("%d/%m/%Y") %>.
          </p>
          <div class="mt-6">
            <%= link_to admin_anamneses_path, class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Ver Todas as Anamneses
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </div>
<% end %>
