<%= render 'form_section_header', title: 'VII - Alimentação' do %>
  <div class="space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Amamentação natural?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :breastfed, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :breastfed, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.breastfed %>" class="ml-4">
          <%= form.text_field :breastfed_until, placeholder: "Até quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>

      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Mamadeira?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :bottle_fed, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :bottle_fed, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.bottle_fed %>" class="ml-4">
          <%= form.text_field :bottle_fed_until, placeholder: "Até quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :feeding_contact, "Como se manifestava o contato físico e/ou ocular do bebê durante as mamadas?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= form.text_area :feeding_contact, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Faz todas as refeições diariamente?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :daily_meals, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :daily_meals, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Vômito frequente?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :frequent_vomiting, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :frequent_vomiting, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :favorite_foods, "Quais são seus alimentos prediletos?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= form.text_area :favorite_foods, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
      </div>
      <div>
        <%= form.label :rejected_foods, "Rejeita algum alimento? Quais?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= form.text_area :rejected_foods, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
      </div>
    </div>

    <div>
      <%= form.label :meal_behavior, "Como se comporta durante as refeições?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= form.text_area :meal_behavior, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Horário fixo?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :fixed_meal_schedule, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :fixed_meal_schedule, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Come sozinho?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :eats_alone, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :eats_alone, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Dificuldade mastigar?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :chewing_difficulty, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :chewing_difficulty, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>

      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Apresenta baba?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :drools, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :drools, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>
    </div>

    <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.drools %>">
      <%= form.label :drools_when, "Quando apresenta baba?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= form.text_field :drools_when, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
    </div>

    <div>
      <%= form.label :feeding_notes, "Observações sobre alimentação", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= form.text_area :feeding_notes, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
    </div>
  </div>
<% end %>




