<%= render 'form_section_header', title: 'VIII - Desenvolvimento Psicomotor' do %>
  <div class="space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Firmou a cabeça?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :held_head, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :held_head, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.held_head %>">
          <%= form.text_field :held_head_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Rolou?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :rolled_over, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :rolled_over, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Não</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :rolled_bilateral, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
            <span class="text-sm">Bilateral</span>
          </label>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Sentou sem apoio?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :sat_unsupported, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :sat_unsupported, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.sat_unsupported %>">
          <%= form.text_field :sat_unsupported_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>

      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Engatinhou?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :crawled, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :crawled, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.crawled %>" class="flex gap-2">
          <%= form.text_field :crawled_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
          <%= form.text_field :crawled_how, placeholder: "Como?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :stood_age, "Quando ficou em pé?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= form.text_field :stood_age, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
      </div>
      <div>
        <%= form.label :walked_age, "Quando iniciou marcha?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= form.text_field :walked_age, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Subiu/desceu degrau?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :climbed_stairs, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :climbed_stairs, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.climbed_stairs %>">
          <%= form.text_field :climbed_stairs_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>

      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Agachou/levantou?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :squatted, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :squatted, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.squatted %>">
          <%= form.text_field :squatted_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>

      <div class="flex items-center gap-4" data-controller="toggle-fields">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Usou andador?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :used_walker, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :used_walker, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
        <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.used_walker %>">
          <%= form.text_field :used_walker_age, placeholder: "Quando?", class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4" data-controller="toggle-fields">
      <div class="flex items-center gap-4">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Problema de coordenação motora?</span>
        <div class="flex gap-4">
          <label class="flex items-center gap-1">
            <%= form.radio_button :motor_coordination_problem, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Sim</span>
          </label>
          <label class="flex items-center gap-1">
            <%= form.radio_button :motor_coordination_problem, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300", data: { action: "change->toggle-fields#update", toggle_fields_target: "trigger" } %>
            <span class="text-sm">Não</span>
          </label>
        </div>
      </div>
      <div data-toggle-fields-target="content" style="<%= 'display: none;' unless anamnesis.motor_coordination_problem %>">
        <%= form.label :motor_coordination_description, "Qual?", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= form.text_area :motor_coordination_description, rows: 2, class: "dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30" %>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <span class="text-sm font-medium text-gray-700 dark:text-gray-400">Dificuldade em manipular objetos?</span>
      <div class="flex gap-4">
        <label class="flex items-center gap-1">
          <%= form.radio_button :object_manipulation_difficulty, true, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
          <span class="text-sm">Sim</span>
        </label>
        <label class="flex items-center gap-1">
          <%= form.radio_button :object_manipulation_difficulty, false, class: "h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" %>
          <span class="text-sm">Não</span>
        </label>
      </div>
    </div>
  </div>
<% end %>




