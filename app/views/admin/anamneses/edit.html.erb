<% content_for :title, "Editar Anamnese - #{@anamnesis.beneficiary_name}" %>

<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <%= link_to admin_anamnesis_path(@anamnesis), class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  <% end %>

  <div class="space-y-6">
    <%= render 'form', anamnesis: @anamnesis, beneficiary: @anamnesis.beneficiary %>
  </div>
<% end %>
