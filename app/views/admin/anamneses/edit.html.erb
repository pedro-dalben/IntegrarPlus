<% content_for :title, "Editar Anamnese - #{@anamnesis.beneficiary_name}" %>

<%= render ::Layouts::AdminComponent.new do |c| %>
  <% c.with_actions do %>
    <% if @anamnesis.beneficiary.present? %>
      <%= link_to [:admin, @anamnesis.beneficiary, @anamnesis], class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar
      <% end %>
    <% else %>
      <%= link_to today_admin_anamneses_path, class: "ta-btn ta-btn-secondary inline-flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar para Hoje
      <% end %>
    <% end %>

    <% if @anamnesis.pode_ser_concluida? && current_user.permit?('anamneses.complete') %>
      <%= button_to complete_admin_anamnese_path(@anamnesis),
                    method: :patch,
                    class: "bg-green-600 shadow-theme-xs hover:bg-green-700 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition",
                    form: { data: { turbo: false, turbo_confirm: "Tem certeza que deseja concluir esta anamnese?" } } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Concluir Anamnese
      <% end %>
    <% end %>
  <% end %>

  <div class="space-y-6">
    <%= render 'form', anamnesis: @anamnesis, beneficiary: @anamnesis.beneficiary %>
  </div>
<% end %>
