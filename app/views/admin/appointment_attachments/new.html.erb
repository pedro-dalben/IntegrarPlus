<% content_for :title, "Novo Anexo" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Novo Anexo</h1>
    <p class="text-gray-600">Adicione um novo anexo para esta consulta</p>
  </div>
  <div>
    <%= link_to "Voltar", admin_medical_appointment_path(@medical_appointment), class: "ta-btn ta-btn-secondary" %>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-medium text-gray-900">Informações do Anexo</h2>
  </div>
  <div class="p-6">
    <%= form_with model: [:admin, @medical_appointment, @appointment_attachment], local: true, class: "space-y-6" do |form| %>
      <% if @appointment_attachment.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@appointment_attachment.errors.count, 'erro') %> impediram que este anexo fosse salvo:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @appointment_attachment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :attachment_type, "Tipo de Anexo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :attachment_type, options_for_select(AppointmentAttachment.attachment_types.map { |key, value| [key.humanize, key] }, @appointment_attachment.attachment_type),
                        { prompt: "Selecione o tipo" },
                        { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :name, "Nome do Arquivo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name,
                           class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                           placeholder: "Digite um nome descritivo para o arquivo..." %>
      </div>

      <div>
        <%= form.label :file, "Arquivo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :file,
                           class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                           accept: ".pdf,.doc,.docx,.txt,.rtf,.jpg,.jpeg,.png,.gif,.bmp,.webp,.dcm,.tiff,.xls,.xlsx" %>
        <p class="mt-1 text-sm text-gray-500">
          Formatos aceitos: PDF, DOC, DOCX, TXT, RTF, JPG, JPEG, PNG, GIF, BMP, WEBP, DCM, TIFF, XLS, XLSX
        </p>
      </div>

      <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200">
        <%= link_to "Cancelar", admin_medical_appointment_path(@medical_appointment), class: "ta-btn ta-btn-secondary" %>
        <%= form.submit "Salvar Anexo", class: "ta-btn ta-btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
