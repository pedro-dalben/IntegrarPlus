<% content_for :title, "Operadoras - Integrar Plus" %>

<div class="overflow-hidden rounded-xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
  <div class="flex flex-col justify-between gap-5 border-b border-gray-200 px-5 py-4 sm:flex-row sm:items-center dark:border-gray-800">
    <div class="flex gap-3">
      <%= link_to new_admin_external_user_path, class: "bg-brand-500 shadow-theme-xs hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M5 10.0002H15.0006M10.0002 5V15.0006" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Nova Operadora
      <% end %>
    </div>

    <div class="flex gap-3">
      <%= form_with url: admin_external_users_path, method: :get, local: true, class: "flex gap-2" do |form| %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Buscar operadoras...",
            class: "rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        <%= form.select :active,
            options_for_select([['Todas', ''], ['Ativas', 'true'], ['Inativas', 'false']], params[:active]),
            {},
            { class: "rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
        <%= form.submit "Filtrar", class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md text-sm" %>
      <% end %>
    </div>
  </div>

  <%= render 'table', external_users: @external_users, pagy: @pagy %>
</div>

<% if @pagy.pages > 1 %>
  <div class="mt-6">
    <%= render Ui::PaginationComponent.new(pagy: @pagy) %>
  </div>
<% end %>
