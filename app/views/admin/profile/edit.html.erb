<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Editar Perfil</h1>
      <p class="text-gray-600 dark:text-gray-400">Atualize suas informações pessoais</p>
    </div>
    <%= link_to admin_profile_path, class: "btn btn-secondary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  </div>

  <!-- Edit Form -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
    <div class="p-6">
      <%= form_with model: @user, url: admin_profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
        <!-- Avatar Section -->
        <div class="flex items-center space-x-6">
          <div class="relative">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "w-24 h-24 rounded-full object-cover", alt: @user.name %>
            <% else %>
              <div class="w-24 h-24 rounded-full bg-blue-600 flex items-center justify-center">
                <span class="text-white text-2xl font-bold">
                  <%= @user.name&.first&.upcase || "U" %>
                </span>
              </div>
            <% end %>
          </div>
          
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Foto do Perfil</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              JPG, PNG ou GIF. Máximo 5MB.
            </p>
            <div class="mt-2">
              <%= form.file_field :avatar, 
                  class: "block w-full text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 dark:file:bg-blue-900 dark:file:text-blue-300",
                  accept: "image/*" %>
            </div>
          </div>
        </div>

        <hr class="border-gray-200 dark:border-gray-700">

        <!-- Personal Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.text_field :name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                placeholder: "Seu nome completo" %>
            <% if @user.errors[:name].any? %>
              <p class="mt-1 text-sm text-red-600 dark:text-red-400">
                <%= @user.errors[:name].join(", ") %>
              </p>
            <% end %>
          </div>

          <div>
            <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.email_field :email, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                placeholder: "seu@email.com" %>
            <% if @user.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600 dark:text-red-400">
                <%= @user.errors[:email].join(", ") %>
              </p>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200 dark:border-gray-700">
          <%= link_to "Cancelar", admin_profile_path, 
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600" %>
          
          <%= form.submit "Salvar Alterações", 
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
