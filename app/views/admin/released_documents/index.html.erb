<!-- Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        Documentos Liberados
      </h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        Documentos finais aprovados e liberados
      </p>
    </div>

    <div class="flex items-center gap-4">
      <div class="flex items-center gap-6 text-sm text-gray-500 dark:text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span><%= @documents.count %> documentos liberados</span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Busca Avançada -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6"
     data-controller="advanced-search"
     data-advanced-search-url-value="<%= admin_released_documents_path %>"
     data-advanced-search-debounce-ms-value="500"
     data-advanced-search-min-length-value="2">

  <div class="px-6 py-4">
    <div class="relative">
      <input type="text"
             data-advanced-search-target="input"
             data-action="input->advanced-search#search focus->advanced-search#showSearchTips"
             value="<%= params[:query] %>"
             placeholder="Digite para buscar documentos liberados... (busca avançada com fonética)"
             class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 pl-10 pr-10" />

      <!-- Ícone de busca -->
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>

      <!-- Indicador de carregamento -->
      <div data-advanced-search-target="loading" class="absolute inset-y-0 right-0 pr-3 flex items-center hidden">
        <svg class="animate-spin h-5 w-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </div>

    <!-- Mensagem de erro -->
    <div data-advanced-search-target="error" class="mt-2 hidden">
      <div class="text-sm text-red-600 bg-red-50 border border-red-200 rounded-md p-2">
        <div class="flex">
          <svg class="flex-shrink-0 h-4 w-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-2">Erro na busca. Tente novamente.</span>
        </div>
      </div>
    </div>

    <!-- Sugestões de busca -->
    <div data-advanced-search-target="suggestions" class="mt-2 hidden">
      <!-- Conteúdo será preenchido pelo JavaScript -->
    </div>
  </div>
</div>

<!-- Resultados da busca -->
<div data-advanced-search-target="results" class="<%= params[:query].present? ? '' : 'hidden' %>">
  <!-- Conteúdo será preenchido pelo JavaScript -->
</div>

<!-- Lista principal (quando não há busca) -->
<div class="<%= params[:query].present? ? 'hidden' : '' %>">
  <!-- Conteúdo original da view -->
</div>

<!-- Filtros -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-medium text-gray-900 dark:text-white">Filtros</h3>
  </div>
  <div class="px-6 py-4">
    <%= form_with url: admin_released_documents_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4" do |f| %>
      <div>
        <%= f.label :document_type, "Tipo de Documento", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :document_type,
            options_for_select([['Todos os tipos', '']] + Document.document_types.keys.map { |t| [t.humanize, t] }, params[:document_type]),
            {},
            class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :category, "Categoria", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :category,
            options_for_select([['Todas as categorias', '']] + Document.categories.keys.map { |c| [c.humanize, c] }, params[:category]),
            {},
            class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :author_id, "Autor", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :author_id,
            options_for_select([['Todos os autores', '']] + (@authors || []).map { |a| [a.full_name, a.id] }, params[:author_id]),
            {},
            class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :responsible_id, "Responsável", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :responsible_id,
            options_for_select([['Todos os responsáveis', '']] + (@responsibles || []).map { |r| [r.full_name, r.id] }, params[:responsible_id]),
            {},
            class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex items-end">
        <div class="flex gap-2 w-full">
          <%= f.submit "Filtrar", class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out" %>
          <%= link_to "Limpar", admin_released_documents_path, class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out text-center" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Tabela -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
  <% if current_user.admin? || current_user.permit?('documents.view_released') || current_user.professional&.can_view_released? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Documento
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Autor
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Responsável
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Data de Liberação
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Ações
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @documents.each do |document| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center">
                      <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 1h6v1H7V5zm6 3H7v1h6V8zm0 3H7v1h6v-1z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= link_to document.title, admin_released_document_path(document), class: "hover:text-blue-600 dark:hover:text-blue-400" %>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-2">
                      <span><%= document.document_type.humanize %></span>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium <%= document.category_color %>">
                        <%= document.category_icon %> <%= document.category.humanize %>
                      </span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white">
                  <%= document.author&.full_name || 'Autor não definido' %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white">
                  <%= document.current_responsible&.full_name || 'Responsável não definido' %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white">
                  <%= l(document.document_releases.order(:created_at).last&.created_at, format: :short) if document.document_releases.any? %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "Ver detalhes", admin_released_document_path(document), class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginação -->
    <% if @pagy&.pages && @pagy.pages > 1 %>
      <div class="bg-white dark:bg-gray-800 px-4 py-3 border-t border-gray-200 dark:border-gray-700">
        <%= render Ui::PaginationComponent.new(pagy: @pagy) %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Acesso Restrito</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Você não tem permissão para ver documentos liberados.
      </p>
    </div>
  <% end %>
</div>
