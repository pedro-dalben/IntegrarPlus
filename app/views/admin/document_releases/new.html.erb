<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          Liberar Documento
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <%= @document.title %>
        </p>
      </div>

      <%= link_to admin_document_path(@document),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar ao Documento
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
    <!-- Verificação se pode ser liberado -->
    <% unless @document.can_be_released? %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-700 rounded-lg p-4 mb-6">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-medium text-red-800 dark:text-red-200">
              Documento não pode ser liberado
            </p>
            <p class="text-sm text-red-700 dark:text-red-300 mt-1">
              O documento deve estar no status "Aguardando Liberação" para poder ser liberado.
              Status atual: <strong><%= @document.status.humanize %></strong>
            </p>
          </div>
        </div>
      </div>

      <div class="flex justify-end">
        <%= link_to "Voltar ao Documento", admin_document_path(@document),
            class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" %>
      </div>
    <% else %>
      <!-- Informações do Documento -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Informações da Liberação</h2>

        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div>
              <p class="text-sm font-medium text-gray-900 dark:text-white">Versão Atual</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= @document.latest_version&.version_number || 'N/A' %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900 dark:text-white">Próxima Versão Liberada</p>
              <p class="text-sm text-blue-600 dark:text-blue-400 font-semibold">
                <%= @document.next_release_version %>
              </p>
            </div>
          </div>

          <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div>
              <p class="text-sm font-medium text-gray-900 dark:text-white">Status Atual</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full <%= @document.status_color %>">
                  <%= @document.status_icon %> <%= @document.status.humanize %>
                </span>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900 dark:text-white">Novo Status</p>
              <p class="text-sm text-green-600 dark:text-green-400 font-semibold">
                ✅ Liberado
              </p>
            </div>
          </div>

          <% if @document.latest_version %>
            <div class="p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-blue-800 dark:text-blue-200">
                    Arquivo será copiado para pasta de versões liberadas
                  </p>
                  <p class="text-xs text-blue-600 dark:text-blue-300 mt-1">
                    <%= @document.latest_version.file_path %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Confirmação -->
      <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
        <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 rounded-lg p-4 mb-6">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-yellow-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
          </svg>
            <div>
              <p class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
                Confirmação de Liberação
              </p>
              <p class="text-sm text-yellow-700 dark:text-yellow-300 mt-1">
                Esta ação irá liberar o documento como versão final e alterar o status para "Liberado".
                A versão atual será copiada para a pasta de versões liberadas e o documento sairá da lista de documentos em desenvolvimento.
              </p>
            </div>
          </div>
        </div>

        <%= form_with url: admin_document_document_releases_path(@document), method: :post, local: true, class: "space-y-6" do |form| %>
          <div class="flex items-center justify-end gap-4">
            <%= link_to "Cancelar", admin_document_path(@document),
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" %>

            <%= form.submit "Confirmar Liberação",
                class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                data: { confirm: 'Tem certeza que deseja liberar este documento? Esta ação não pode ser desfeita.' } %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
