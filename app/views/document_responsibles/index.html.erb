<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          Responsáveis por Status
        </h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <%= @document.title %>
        </p>
      </div>
      
      <%= link_to admin_document_path(@document), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar ao Documento
      <% end %>
    </div>
  </div>

  <!-- Status Atual -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status Atual</h2>
    <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <span class="text-2xl"><%= @document.status_icon %></span>
      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900 dark:text-white">
          <%= @document.status.humanize %>
        </p>
        <% if @document.current_responsible %>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Responsável: <%= @document.current_responsible.full_name %>
          </p>
        <% else %>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Nenhum responsável atribuído
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Formulário para Adicionar Responsável -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Atribuir Responsável</h2>
    
    <%= form_with model: [@document, DocumentResponsible.new], local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.select :status, 
              Document.statuses.map { |k, v| [k.humanize, k] },
              { prompt: "Selecione o status" },
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm" } %>
        </div>
        
        <div>
          <%= form.label :user_id, "Usuário", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.collection_select :user_id, 
              @available_users, 
              :id, 
              :name, 
              { prompt: "Selecione o responsável" },
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm" } %>
        </div>
      </div>
      
      <div class="flex justify-end">
        <%= form.submit "Atribuir Responsável", 
            class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>

  <!-- Lista de Responsáveis -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Responsáveis Atribuídos</h2>
    
    <% if @responsibles.any? %>
      <div class="space-y-4">
        <% @responsibles.each do |responsible| %>
          <div class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
            <div class="flex items-center gap-3">
              <span class="text-2xl"><%= responsible.status_icon %></span>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-white">
                  <%= responsible.status.humanize %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= responsible.professional.full_name %>
                </p>
                <p class="text-xs text-gray-400 dark:text-gray-500">
                  Atribuído em <%= l(responsible.created_at, format: :short) %>
                </p>
              </div>
            </div>
            
            <div class="flex items-center gap-2">
              <% if responsible.status == @document.status %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                  Ativo
                </span>
              <% end %>
              
              <%= button_to admin_document_document_responsible_path(@document, responsible), 
                  method: :delete,
                  class: "text-red-600 hover:text-red-900 p-1",
                  data: { confirm: 'Tem certeza que deseja remover este responsável?' } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          Nenhum responsável atribuído ainda.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
          Use o formulário acima para atribuir responsáveis por status.
        </p>
      </div>
    <% end %>
  </div>
</div>
