puts "ğŸ“ Atualizando #{files_to_update.count} arquivos para usar o Alerts::ErrorComponent..."

files_to_update.each do |file, var|
  if File.exist?(file)
    content = File.read(file)

    if content =~ /if #{Regexp.escape(var)}\.errors\.any\?/
      puts "âœ… #{file}"
    else
      puts "â­ï¸  #{file} (jÃ¡ atualizado ou sem erros)"
    end
  else
    puts "âŒ #{file} (arquivo nÃ£o encontrado)"
  end
end

puts "\nâœ¨ Processo concluÃ­do!"
puts "ğŸ’¡ Para aplicar as mudanÃ§as, substitua os blocos de erro manualmente em cada arquivo."
puts "   Use: <%= render Alerts::ErrorComponent.new(model: #{var}, title: 'TÃ­tulo') %>"
